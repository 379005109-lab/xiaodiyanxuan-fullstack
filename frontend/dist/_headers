# 主HTML文件 - 不缓存
/
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# 版本文件 - 不缓存
/version.json
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# 清除缓存工具 - 不缓存
/clear-cache.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# JS和CSS文件 - 使用哈希版本控制，可以长期缓存
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# 静态资源
/placeholder.svg
  Cache-Control: public, max-age=86400

# API请求不缓存
/api/*
  Cache-Control: no-cache, no-store, must-revalidate
