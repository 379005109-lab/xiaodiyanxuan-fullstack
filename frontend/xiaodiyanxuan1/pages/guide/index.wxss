/**guide/index.wxss**/
/* 小迪严选陪买服务页 - 按UI设计规范 */
page { 
  background: var(--color-bg); 
  color: var(--color-text); 
}
.page-scroll { height: 100vh; }
.page { 
  padding-bottom: 60rpx; 
}

/* ========== 顶部Banner ========== */
.guide-banner {
  background: linear-gradient(135deg, var(--color-primary) 0%, #1a5a3d 100%);
  padding: 60rpx 32rpx 80rpx;
  margin-bottom: -40rpx;
}
.banner-content {
  text-align: center;
}
.banner-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 20rpx;
}
.banner-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.6;
}

/* ========== 服务套餐 ========== */
.packages {
  padding: 0 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.package-card {
  background: var(--color-card);
  border-radius: 20rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}
.package-card.standard {
  border: 4rpx solid var(--color-accent);
}
.package-card.expert {
  border: 4rpx solid var(--color-border);
}
.package-header {
  margin-bottom: 24rpx;
}
.package-name {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--color-text);
}
.package-en {
  font-size: 22rpx;
  color: #9CA3AF;
  margin-top: 4rpx;
  letter-spacing: 2rpx;
}
.package-price {
  margin-bottom: 12rpx;
}
.package-price .currency {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-accent);
}
.package-price .amount {
  font-size: 56rpx;
  font-weight: 700;
  color: var(--color-accent);
}
.package-note {
  font-size: 22rpx;
  color: #9CA3AF;
  margin-bottom: 32rpx;
}

/* ========== 套餐特性 ========== */
.package-features {
  margin-bottom: 32rpx;
}
.feature-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  color: var(--color-text);
  line-height: 1.5;
}
.check-icon {
  color: var(--color-primary);
  font-weight: 700;
  flex-shrink: 0;
}

/* ========== 套餐按钮 ========== */
.package-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
}
.package-btn.primary {
  background: var(--color-primary) !important;
  color: #FFFFFF !important;
}
.package-btn.outline {
  background: var(--color-card) !important;
  color: var(--color-text) !important;
  border: 2rpx solid var(--color-border) !important;
}
.package-btn::after {
  display: none;
}

/* ========== 为什么选择 ========== */
.why-section {
  padding: 48rpx 24rpx;
}
.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--color-text);
  text-align: center;
  margin-bottom: 40rpx;
}
.advantages {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}
.advantage-card {
  background: var(--color-card);
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}
.advantage-icon-box {
  width: 64rpx;
  height: 64rpx;
  background: rgba(20, 69, 47, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: var(--color-primary);
  margin: 0 auto 16rpx;
}
.advantage-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 8rpx;
}
.advantage-desc {
  font-size: 22rpx;
  color: #6B7280;
  line-height: 1.4;
}

/* ========== 联系咨询 ========== */
.contact-section {
  padding: 48rpx 24rpx;
  text-align: center;
}
.contact-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 12rpx;
}
.contact-desc {
  font-size: 26rpx;
  color: #6B7280;
  margin-bottom: 32rpx;
}
.contact-btn {
  width: 320rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background: var(--color-accent) !important;
  color: #FFFFFF !important;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}
.contact-btn::after {
  display: none;
}
