<navigation-bar title="小迪严选" back="{{false}}" color="black" background="#FFF"></navigation-bar>
<scroll-view class="page-scroll" scroll-y>
<view class="page">
		<!-- 满屏全屏页 -->
		<view class="fullscreen-banner">
			<image class="fullscreen-img" src="{{fullscreenImage}}" mode="aspectFill"></image>
			<view class="fullscreen-overlay">
				<view class="fullscreen-content">
					<view class="fullscreen-title">现代自然</view>
					<view class="fullscreen-subtitle">Modern Nature</view>
					<view class="fullscreen-desc">新季搭配灵感</view>
					<view class="fullscreen-action" bindtap="goFullscreenDetail">
						<text>现已上线</text>
						<text class="arrow">→</text>
		</view>
			</view>
			</view>
			</view>

		<!-- 陪买服务 - 宽图框 -->
		<view class="new-products-banner" bindtap="goGuideService">
			<image class="new-products-img" src="{{guideServiceImage}}" mode="aspectFill"></image>
			<view class="new-products-overlay">
				<view class="new-products-title">陪买服务</view>
				<view class="new-products-desc">专业陪同 源头直达</view>
			</view>
		</view>

		<view class="section">
			<view class="section-header">
				<view class="section-title">本周热门</view>
				<view class="section-more" bindtap="goMoreHots">More ></view>
			</view>
			<view class="hot-list">
				<block wx:for="{{hots}}" wx:key="id">
					<view class="hot-card" bindtap="goHotDetail" data-id="{{item.id}}">
						<view class="new-tag" wx:if="{{item.isNew}}">NEW</view>
						<image class="hot-cover" src="{{item.img}}" mode="aspectFill"></image>
						<view class="hot-info">
							<text class="h-name">{{item.name}}</text>
							<view class="h-price">
								<text class="price">¥{{item.price}}</text>
								<text class="save" wx:if="{{item.save}}">省 ¥{{item.save}}</text>
							</view>
						</view>
					</view>
				</block>
			</view>
		</view>
	</view>
</scroll-view>
