/**index.wxss**/
/* 小迪严选首页 - 按UI设计规范 */
page { 
  background: var(--color-bg); 
  color: var(--color-text); 
  height: 100vh; 
}
.page-scroll { height: 100vh; }
.page { padding-top: calc(44px + env(safe-area-inset-top)); }

/* ========== 满屏全屏页 ========== */
.fullscreen-banner { 
  position: relative; 
  width: 100%; 
  height: 100vh; 
  min-height: 100vh; 
  overflow: hidden; 
}
.fullscreen-img { width: 100%; height: 100%; display: block; }
.fullscreen-overlay { 
  position: absolute; 
  top: 0; left: 0; right: 0; bottom: 0; 
  background: linear-gradient(to top, rgba(20, 69, 47, 0.6), rgba(0, 0, 0, 0.2)); 
}
.fullscreen-content { 
  position: absolute; 
  left: 32rpx; 
  bottom: 160rpx; 
  z-index: 10; 
}
.fullscreen-title { 
  font-size: 72rpx; 
  font-weight: 700; 
  color: #FFFFFF; 
  margin-bottom: 16rpx; 
}
.fullscreen-subtitle { 
  font-size: 36rpx; 
  color: rgba(255, 255, 255, 0.9); 
  margin-bottom: 24rpx; 
}
.fullscreen-desc { 
  font-size: 32rpx; 
  color: rgba(255, 255, 255, 0.9); 
  margin-bottom: 40rpx; 
}
.fullscreen-action { 
  display: inline-flex; 
  align-items: center; 
  gap: 16rpx; 
  padding: 24rpx 48rpx; 
  background: rgba(255, 255, 255, 0.95); 
  border-radius: 9999rpx; 
  font-size: 32rpx; 
  font-weight: 600; 
  color: var(--color-primary); 
}
.fullscreen-action .arrow { font-size: 36rpx; }

/* ========== 新品推进 - 宽图框 ========== */
.new-products-banner { 
  position: relative; 
  width: calc(100% - 64rpx); 
  height: 480rpx; 
  border-radius: 16rpx; 
  overflow: hidden; 
  margin: 40rpx 32rpx; 
  box-shadow: 0 8rpx 24rpx rgba(20, 69, 47, 0.12); 
}
.new-products-img { width: 100%; height: 100%; display: block; }
.new-products-overlay { 
  position: absolute; 
  bottom: 0; left: 0; right: 0; 
  padding: 48rpx 40rpx; 
  background: linear-gradient(to top, rgba(20, 69, 47, 0.85), rgba(20, 69, 47, 0.4), transparent); 
}
.new-products-title { 
  font-size: 56rpx; 
  font-weight: 700; 
  color: #FFFFFF; 
  margin-bottom: 16rpx; 
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.3); 
}
.new-products-desc { 
  font-size: 30rpx; 
  color: rgba(255, 255, 255, 0.95); 
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2); 
}

/* ========== 本周热门区块 ========== */
.section { 
  margin: 48rpx 32rpx; 
  padding-bottom: calc(env(safe-area-inset-bottom) + 40rpx); 
}
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}
.section-title { 
  font-size: 36rpx; 
  font-weight: 700; 
  color: var(--color-primary); 
  letter-spacing: 1rpx; 
}
.section-more {
  font-size: 26rpx;
  color: var(--color-primary);
  display: flex;
  align-items: center;
  gap: 4rpx;
}

/* ========== 热门商品列表 ========== */
.hot-list { 
  display: grid; 
  grid-template-columns: repeat(2, 1fr); 
  gap: 24rpx; 
  margin-bottom: 48rpx; 
}
.hot-card { 
  position: relative;
  background: var(--color-card); 
  border-radius: 16rpx; 
  overflow: hidden; 
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06); 
  transition: transform 0.2s, box-shadow 0.2s; 
  display: flex; 
  flex-direction: column; 
}
.hot-card:active { 
  transform: scale(0.98); 
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1); 
}
.hot-cover { 
  width: 100%; 
  height: 320rpx; 
  background: var(--color-bg); 
  flex-shrink: 0; 
}
.hot-info { 
  padding: 24rpx; 
  display: flex; 
  flex-direction: column; 
}
.h-name { 
  font-size: 28rpx; 
  color: var(--color-text); 
  font-weight: 500; 
  line-height: 1.4; 
  margin-bottom: 8rpx; 
  display: -webkit-box; 
  -webkit-line-clamp: 1; 
  -webkit-box-orient: vertical; 
  overflow: hidden; 
  text-overflow: ellipsis; 
}
.h-price { 
  display: flex; 
  align-items: center; 
  gap: 16rpx; 
  flex-wrap: wrap; 
}
.price { 
  font-size: 36rpx; 
  font-weight: 700; 
  color: var(--color-accent); 
}
.save { 
  font-size: 22rpx; 
  color: #6B7280; 
  background: var(--color-bg); 
  padding: 4rpx 16rpx; 
  border-radius: 6rpx; 
}

/* ========== NEW标签 ========== */
.hot-card .new-tag {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  padding: 8rpx 20rpx;
  background: var(--color-primary);
  color: #FFFFFF;
  font-size: 22rpx;
  font-weight: 600;
  border-radius: 6rpx;
  z-index: 2;
}
