/* 购物车页面 - 小迪严选主题 */
page { 
  background: linear-gradient(180deg, #e0f2fe 0%, #f0f9ff 50%, #dcfce7 100%);
  background-attachment: fixed;
  color: #1f2937; 
}
.scrollarea { height: 100vh; }
.page { padding: 24rpx; padding-top: calc(44px + env(safe-area-inset-top) + 24rpx); padding-bottom: 180rpx; box-sizing: border-box; }

/* 页面标题 */
.page-header { margin-bottom: 32rpx; }
.page-title { font-size: 40rpx; font-weight: 700; color: #1f2937; }
.page-subtitle { font-size: 24rpx; color: #22d3ee; opacity: 0.8; margin-top: 8rpx; }

/* 空状态 */
.empty { display: flex; flex-direction: column; align-items: center; justify-content: center; padding: 120rpx 0; }
.empty-icon-box { width: 120rpx; height: 120rpx; display: flex; align-items: center; justify-content: center; font-size: 80rpx; color: #D1D5DB; margin-bottom: 32rpx; }
.empty-text { font-size: 32rpx; font-weight: 600; color: var(--color-text); margin-bottom: 16rpx; }
.empty-tip { font-size: 26rpx; color: #9CA3AF; margin-bottom: 48rpx; }
.btn-primary { height: 80rpx; min-height: 80rpx; padding: 0 64rpx; background: var(--color-primary) !important; color: #FFFFFF !important; border: none; border-radius: 40rpx; font-size: 28rpx; font-weight: 600; display: flex; align-items: center; justify-content: center; line-height: 1; }
.btn-primary::after { display: none; }

/* 全选栏 */
.select-bar { display: flex; align-items: center; justify-content: space-between; background: #FFFFFF; border-radius: 12rpx; padding: 20rpx 24rpx; margin-bottom: 24rpx; }
.select-left { display: flex; align-items: center; gap: 16rpx; }
.select-text { font-size: 28rpx; color: var(--color-text); }
.selected-info { font-size: 24rpx; color: #9CA3AF; }

/* 复选框 */
.check-box { width: 40rpx; height: 40rpx; border: 2rpx solid var(--color-border); border-radius: 20rpx; display: flex; align-items: center; justify-content: center; font-size: 24rpx; color: #FFFFFF; flex-shrink: 0; background: #FFFFFF; }
.check-box.checked { background: var(--color-primary); border-color: var(--color-primary); }

/* 购物车列表 */
.cart-list { display: flex; flex-direction: column; gap: 20rpx; }
.cart-card { background: #FFFFFF; border-radius: 16rpx; padding: 24rpx; border: 1rpx solid #F0F0F0; }
.cart-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 16rpx; }
.delete-icon { width: 44rpx; height: 44rpx; display: flex; align-items: center; justify-content: center; font-size: 28rpx; color: #CCCCCC; }
.cart-content { display: flex; gap: 20rpx; margin-bottom: 16rpx; }
.cart-thumb { width: 180rpx; height: 140rpx; border-radius: 8rpx; background: #F5F5F5; flex-shrink: 0; }
.cart-info { flex: 1; min-width: 0; }
.cart-name { font-size: 30rpx; font-weight: 600; color: #333333; line-height: 1.4; margin-bottom: 8rpx; }
.cart-spec-row { font-size: 26rpx; color: #666666; margin-bottom: 6rpx; }
.cart-material-list { display: flex; flex-direction: column; gap: 4rpx; margin-top: 8rpx; }
.cart-material-item { font-size: 24rpx; color: #666666; }
.cart-tags { display: flex; flex-wrap: wrap; gap: 10rpx; margin-top: 10rpx; }
.cart-tag { padding: 6rpx 14rpx; background: #F5F5F5; border-radius: 4rpx; font-size: 22rpx; color: #666666; }
.cart-footer { display: flex; align-items: center; justify-content: space-between; padding-top: 16rpx; border-top: 1rpx solid #F5F5F5; }
.cart-price { font-size: 36rpx; font-weight: 700; color: #333333; }
.quantity-control { display: flex; align-items: center; gap: 0; border: 1rpx solid #E0E0E0; border-radius: 8rpx; overflow: hidden; }
.qty-btn { width: 56rpx; height: 56rpx; display: flex; align-items: center; justify-content: center; font-size: 32rpx; color: #333333; background: #FFFFFF; }
.qty-value { min-width: 56rpx; text-align: center; font-size: 28rpx; color: #333333; background: #FFFFFF; border-left: 1rpx solid #E0E0E0; border-right: 1rpx solid #E0E0E0; }

/* ========== 底部结算栏 ========== */
.bottom-bar {
  position: fixed;
  left: 0; right: 0; bottom: 0;
  background: var(--color-card);
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  box-shadow: 0 -8rpx 24rpx rgba(0,0,0,0.06);
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}
.check-all {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: var(--color-text);
}
.check-all .check-box {
  margin-top: 0;
}
.total-info, .bar-left {
  flex: 1;
  display: flex;
  align-items: baseline;
  justify-content: flex-start;
  gap: 8rpx;
}
.total-label {
  font-size: 26rpx;
  color: #6B7280;
}
.total-price {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--color-accent);
}
.btn-checkout {
  height: 80rpx;
  min-height: 80rpx;
  padding: 0 48rpx;
  background: var(--color-primary) !important;
  color: #FFFFFF !important;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}
.btn-checkout::after {
  display: none;
}
.btn-checkout[disabled] {
  background: #D1D5DB !important;
  color: #9CA3AF !important;
}
