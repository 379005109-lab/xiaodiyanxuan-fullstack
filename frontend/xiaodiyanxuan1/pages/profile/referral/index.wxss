/* 推荐有礼页面样式 */
page { 
  background: linear-gradient(180deg, #e0f2fe 0%, #f0f9ff 50%, #dcfce7 100%);
  background-attachment: fixed;
}
.scrollarea { min-height: 100vh; }
.page { 
  padding: 24rpx; 
  padding-top: calc(env(safe-area-inset-top) + 100rpx); 
  padding-bottom: calc(env(safe-area-inset-bottom) + 160rpx);
}

/* 统计卡片 */
.stats-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx -12rpx rgba(0,0,0,0.08);
}
.stats-row {
  display: flex;
  justify-content: space-around;
}
.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}
.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f2937;
}
.stat-value.orange { color: #d97706; }
.stat-value.green { color: #22c55e; }
.stat-label {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 标签切换 */
.tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 999rpx;
  padding: 8rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}
.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #6b7280;
  border-radius: 999rpx;
  transition: all 0.3s;
}
.tab.active {
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%);
  color: #fff;
  font-weight: 600;
}

/* 表单卡片 */
.form-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx -12rpx rgba(0,0,0,0.08);
}
.form-header {
  margin-bottom: 32rpx;
}
.form-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 12rpx;
}
.form-desc {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.5;
}

/* 关联订单 */
.order-info {
  background: #f0fdf4;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 24rpx;
}
.order-label {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
  display: block;
}
.order-detail {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order-no {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}
.order-amount {
  font-size: 32rpx;
  font-weight: 700;
  color: #22c55e;
}

/* 表单项 */
.form-item {
  margin-bottom: 24rpx;
}
.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 12rpx;
}
.required {
  color: #ef4444;
}
.form-input {
  width: 100%;
  height: 88rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}
.form-input:focus {
  border-color: #22d3ee;
  background: #fff;
}
.form-textarea {
  width: 100%;
  height: 160rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%);
  border-radius: 999rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 32rpx;
  border: none;
}
.submit-btn.disabled {
  opacity: 0.6;
}

/* 规则卡片 */
.rules-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 8rpx 32rpx -12rpx rgba(0,0,0,0.08);
}
.rules-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 16rpx;
}
.rules-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}
.rule-item {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.6;
}

/* 推荐列表 */
.loading-text, .empty-text {
  text-align: center;
  padding: 80rpx 0;
  color: #9ca3af;
  font-size: 28rpx;
}
.referral-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}
.referral-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}
.referral-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}
.referral-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}
.referral-status {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
}
.status-pending { background: #fef3c7; color: #d97706; }
.status-contacted { background: #dbeafe; color: #2563eb; }
.status-converted { background: #d1fae5; color: #059669; }
.status-rewarded { background: #ede9fe; color: #7c3aed; }
.status-invalid { background: #f3f4f6; color: #6b7280; }

.referral-phone {
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 12rpx;
}
.referral-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.referral-date {
  font-size: 24rpx;
  color: #9ca3af;
}
.referral-reward {
  font-size: 26rpx;
  font-weight: 600;
  color: #22c55e;
}
