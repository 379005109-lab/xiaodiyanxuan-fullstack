/* 地址管理页 - 小迪严选主题 */
page { background: var(--color-bg); color: var(--color-text); }
.page { padding: 12px; padding-bottom: 100px; position: relative; min-height: 100vh; padding-top: calc(44px + env(safe-area-inset-top) + 12px); }
custom-tab-bar { position: fixed; left: 0; right: 0; bottom: 0; z-index: 1000; }
.address-list { display: flex; flex-direction: column; gap: 12px; }
.address-item { background: var(--color-card); border-radius: 12px; padding: 16px; box-shadow: 0 2px 8px rgba(0,0,0,0.06); }
.address-content { margin-bottom: 12px; }
.address-header { display: flex; align-items: center; gap: 12px; margin-bottom: 8px; }
.address-name { font-size: 16px; color: var(--color-text); font-weight: 600; }
.address-phone { font-size: 14px; color: #6B7280; }
.address-default { font-size: 12px; color: var(--color-primary); background: rgba(20, 69, 47, 0.1); padding: 2px 8px; border-radius: 4px; }
.address-detail { font-size: 14px; color: #6B7280; line-height: 1.6; }
.address-actions { display: flex; gap: 12px; padding-top: 12px; border-top: 1px solid var(--color-border); }
.action-btn { flex: 1; text-align: center; padding: 8px 0; }
.action-text { font-size: 14px; color: var(--color-primary); }
.action-btn.delete .action-text { color: #DC2626; }
.add-btn { position: fixed; left: 12px; right: 12px; bottom: calc(80px + env(safe-area-inset-bottom)); height: 48px; background: var(--color-primary); border-radius: 24px; display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 12px rgba(20, 69, 47, 0.3); z-index: 100; }
.add-btn-text { font-size: 16px; color: #FFFFFF; font-weight: 600; }
.empty { padding: 100px 20px; text-align: center; }
.empty-text { display: block; font-size: 16px; color: #6B7280; margin-bottom: 8px; }
.empty-tip { display: block; font-size: 13px; color: #9CA3AF; }
/* 弹窗样式 */
.modal { position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(20, 69, 47, 0.5); z-index: 2000; display: flex; align-items: center; justify-content: center; }
.modal-content { width: 90%; max-width: 400px; background: var(--color-card); border-radius: 12px; overflow: hidden; }
.modal-header { display: flex; align-items: center; justify-content: space-between; padding: 16px; border-bottom: 1px solid var(--color-border); }
.modal-title { font-size: 16px; color: var(--color-text); font-weight: 600; }
.modal-close { font-size: 20px; color: #9CA3AF; }
.modal-body { padding: 16px; }
.modal-input { width: 100%; height: 44px; background: var(--color-bg); border: 1px solid var(--color-border); border-radius: 8px; padding: 0 12px; margin-bottom: 12px; font-size: 14px; color: var(--color-text); box-sizing: border-box; }
.modal-checkbox { display: flex; align-items: center; gap: 8px; margin-top: 8px; }
.checkbox-label { font-size: 14px; color: var(--color-text); }
.modal-footer { display: flex; gap: 12px; padding: 16px; border-top: 1px solid var(--color-border); }
.modal-btn { flex: 1; height: 44px; border-radius: 8px; border: none; font-size: 14px; font-weight: 600; display: flex; align-items: center; justify-content: center; line-height: 1; }
.modal-btn::after { display: none; }
.modal-btn.cancel { background: var(--color-bg); color: #6B7280; }
.modal-btn.confirm { background: var(--color-primary); color: #FFFFFF; }

