/**
 * 小迪严选 UI 设计规范
 * ========================
 */

/* ========== 主题色 ========== */
page {
  /* 主色(深绿) */
  --color-primary: #14452F;
  --color-primary-light: #166534;
  
  /* 强调色(金色) */
  --color-accent: #D6AD60;
  --color-accent-light: #E8C98D;
  --color-accent-dark: #B99240;
  
  /* 中性色(Stone系列) */
  --color-bg: #F2F4F3;
  --color-card: #FFFFFF;
  --color-border: #E6E8E9;
  --color-text-secondary: #B0C4DF;
  --color-text: #2A3C36;
  --color-text-dark: #14452F;
  
  /* 字体 */
  font-family: -apple-system, BlinkMacSystemFont, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "Helvetica Neue", Arial, sans-serif;
  
  /* 默认背景色 */
  background: var(--color-bg);
  color: var(--color-text);
}

/* ========== 通用容器 ========== */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* ========== 通用按钮样式 ========== */
button {
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.btn-primary {
  background: var(--color-primary) !important;
  color: #FFFFFF !important;
  border: none !important;
  border-radius: 8rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.btn-primary:active {
  background: var(--color-primary-light) !important;
}

.btn-accent {
  background: var(--color-accent) !important;
  color: #FFFFFF !important;
  border: none !important;
  border-radius: 8rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.btn-accent:active {
  background: var(--color-accent-dark) !important;
}

.btn-outline {
  background: var(--color-card) !important;
  color: var(--color-primary) !important;
  border: 2rpx solid var(--color-primary) !important;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

/* ========== 价格样式 ========== */
.price-text {
  color: var(--color-accent);
  font-weight: 700;
}

/* ========== 卡片样式 ========== */
.card {
  background: var(--color-card);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

/* ========== 标签样式 ========== */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
}

.tag-accent {
  background: rgba(214, 173, 96, 0.15);
  color: var(--color-accent-dark);
}

.tag-primary {
  background: rgba(20, 69, 47, 0.1);
  color: var(--color-primary);
}

/* ========== NEW标签 ========== */
.new-badge {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  padding: 8rpx 16rpx;
  background: var(--color-primary);
  color: #FFFFFF;
  font-size: 22rpx;
  font-weight: 600;
  border-radius: 6rpx;
  z-index: 2;
} 
