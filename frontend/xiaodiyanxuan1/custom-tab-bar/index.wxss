/**custom-tab-bar/index.wxss**/
/* ZenLife 2.0 浮动玻璃拟态导航栏 */
.tabbar { 
  position: fixed; 
  left: 0; 
  right: 0; 
  bottom: 0; 
  height: calc(120rpx + env(safe-area-inset-bottom)); 
  padding-bottom: env(safe-area-inset-bottom);
  background: rgba(255, 255, 255, 0.95); 
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  display: flex; 
  border-top: 1rpx solid rgba(0, 0, 0, 0.05); 
  border-radius: 0;
  z-index: 999; 
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}
.item { 
  flex: 1; 
  display: flex; 
  flex-direction: column;
  align-items: center; 
  justify-content: center; 
  color: #9ca3af; 
  gap: 8rpx;
  padding: 8rpx 0;
  transition: all 0.3s ease;
}
.item.active { 
  color: #22c55e;
  font-weight: 700; 
}
.item.active .icon-wrap {
  background: transparent;
  box-shadow: none;
  border-radius: 0;
  padding: 8rpx 16rpx;
}
.icon-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  padding: 8rpx 16rpx;
}
.icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44rpx;
  height: 44rpx;
}
.text { 
  font-size: 22rpx; 
  line-height: 1.2;
  font-weight: 500;
}
.item.active .text {
  color: #22c55e;
}

/* 简洁矢量图标 - 使用CSS绘制 */
.svg-icon {
  width: 44rpx;
  height: 44rpx;
  position: relative;
}

/* 首页图标 - 房子 */
.home-icon::before {
  content: '';
  position: absolute;
  top: 6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 18rpx solid transparent;
  border-right: 18rpx solid transparent;
  border-bottom: 16rpx solid #9ca3af;
}
.home-icon::after {
  content: '';
  position: absolute;
  bottom: 4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 28rpx;
  height: 20rpx;
  background: #9ca3af;
  border-radius: 2rpx;
}
.item.active .home-icon::before {
  border-bottom-color: #22c55e;
}
.item.active .home-icon::after {
  background: #22c55e;
}

/* 砍价图标 - 标签 */
.tag-icon::before {
  content: '';
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  width: 24rpx;
  height: 24rpx;
  border: 4rpx solid #9ca3af;
  border-radius: 4rpx 4rpx 4rpx 12rpx;
  transform: rotate(-45deg);
}
.tag-icon::after {
  content: '';
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  width: 6rpx;
  height: 6rpx;
  background: #9ca3af;
  border-radius: 50%;
}
.item.active .tag-icon::before {
  border-color: #22c55e;
}
.item.active .tag-icon::after {
  background: #22c55e;
}

/* 商城图标 - 购物袋 */
.shop-icon::before {
  content: '';
  position: absolute;
  bottom: 4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 30rpx;
  height: 26rpx;
  border: 4rpx solid #9ca3af;
  border-radius: 4rpx 4rpx 8rpx 8rpx;
  border-top: none;
  background: transparent;
}
.shop-icon::after {
  content: '';
  position: absolute;
  top: 6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 16rpx;
  height: 10rpx;
  border: 4rpx solid #9ca3af;
  border-bottom: none;
  border-radius: 10rpx 10rpx 0 0;
}
.item.active .shop-icon::before {
  border-color: #22c55e;
}
.item.active .shop-icon::after {
  border-color: #22c55e;
}

/* 套餐图标 - 盒子 */
.box-icon::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 32rpx;
  height: 28rpx;
  border: 4rpx solid #9ca3af;
  border-radius: 4rpx;
}
.box-icon::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 32rpx;
  height: 4rpx;
  background: #9ca3af;
}
.item.active .box-icon::before {
  border-color: #22c55e;
}
.item.active .box-icon::after {
  background: #22c55e;
}

/* 我的图标 - 用户 */
.user-icon::before {
  content: '';
  position: absolute;
  top: 4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 16rpx;
  height: 16rpx;
  border: 4rpx solid #9ca3af;
  border-radius: 50%;
}
.user-icon::after {
  content: '';
  position: absolute;
  bottom: 2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 28rpx;
  height: 14rpx;
  border: 4rpx solid #9ca3af;
  border-bottom: none;
  border-radius: 20rpx 20rpx 0 0;
}
.item.active .user-icon::before {
  border-color: #22c55e;
}
.item.active .user-icon::after {
  border-color: #22c55e;
}


