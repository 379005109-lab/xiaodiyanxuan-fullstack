/**app.wxss**/
@import './styles/remixicon.wxss';

/**
 * 小迪严选 — Apple 风格 UI 设计规范
 * ====================================
 */

/* ========== 主题色（Apple 风格） ========== */
page {
  --color-primary: #1D1D1F;
  --color-secondary: #86868B;
  --color-tertiary: #6E6E73;
  --color-bg: #FFFFFF;
  --color-bg-secondary: #F5F5F7;
  --color-card: #F5F5F7;
  --color-divider: #E5E5EA;
  --color-border: #D2D2D7;
  --color-danger: #FF3B30;
  --color-success: #34C759;
  --color-link: #007AFF;
  --color-warning: #FF9500;

  font-family: -apple-system, BlinkMacSystemFont, "SF Pro Display", "SF Pro Text", "PingFang SC", "Helvetica Neue", Arial, sans-serif;
  background: var(--color-bg);
  color: var(--color-primary);
  font-size: 28rpx;
  line-height: 1.5;
  -webkit-font-smoothing: antialiased;
}

/* ========== 安全区适配 ========== */
.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

/* ========== 通用容器 ========== */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* ========== 通用按钮 ========== */
button {
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  border: none;
  outline: none;
  margin: 0;
  padding: 0;
}

button::after {
  border: none;
}

.btn-primary {
  height: 88rpx;
  background: var(--color-primary) !important;
  color: #FFFFFF !important;
  border: none !important;
  border-radius: 28rpx;
  font-size: 30rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.btn-primary:active {
  opacity: 0.85;
}

.btn-secondary {
  height: 88rpx;
  background: var(--color-bg) !important;
  color: var(--color-primary) !important;
  border: 2rpx solid var(--color-border) !important;
  border-radius: 28rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.btn-secondary:active {
  background: var(--color-bg-secondary) !important;
}

.btn-small {
  height: 64rpx;
  padding: 0 32rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
}

.btn-danger {
  height: 88rpx;
  background: var(--color-danger) !important;
  color: #FFFFFF !important;
  border: none !important;
  border-radius: 28rpx;
  font-size: 30rpx;
  font-weight: 500;
}

/* ========== 价格样式 ========== */
.price-text {
  color: var(--color-primary);
  font-weight: 600;
  font-feature-settings: "tnum";
}

.price-symbol {
  font-size: 22rpx;
  font-weight: 600;
}

.price-original {
  color: var(--color-secondary);
  text-decoration: line-through;
  font-size: 24rpx;
}

/* ========== 卡片样式 ========== */
.card {
  background: var(--color-card);
  border-radius: 32rpx;
  overflow: hidden;
}

.card-border {
  background: var(--color-card);
  border-radius: 32rpx;
  border: 2rpx solid var(--color-divider);
  overflow: hidden;
}

/* ========== 分割线 ========== */
.divider {
  height: 2rpx;
  background: var(--color-divider);
  margin: 0 32rpx;
}

/* ========== 标签样式 ========== */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.tag-primary {
  background: rgba(29, 29, 31, 0.08);
  color: var(--color-primary);
}

.tag-success {
  background: rgba(52, 199, 89, 0.12);
  color: #248A3D;
}

.tag-danger {
  background: rgba(255, 59, 48, 0.12);
  color: var(--color-danger);
}

.tag-warning {
  background: rgba(255, 149, 0, 0.12);
  color: #C93400;
}

/* ========== 文字省略 ========== */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-ellipsis-2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* ========== 状态标签 ========== */
.status-active {
  color: var(--color-success);
}

.status-inactive {
  color: var(--color-secondary);
}

/* ========== 动画 ========== */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}
