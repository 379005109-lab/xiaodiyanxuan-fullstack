/**
 * 小迪严选 UI 设计规范
 * ZenLife 2.0 - Fresh Nature Gradient
 * ========================
 */

/* ========== 主题色 ========== */
page {
  /* 主渐变色 (Cyan -> Emerald) */
  --color-primary: #22c55e;
  --color-primary-light: #34d399;
  --color-cyan: #22d3ee;
  --color-emerald: #34d399;
  
  /* 价格金色 */
  --color-gold: #d97706;
  --color-accent: #d97706;
  --color-accent-light: #f59e0b;
  --color-accent-dark: #b45309;
  
  /* 天空蓝背景系列 */
  --color-sky-50: #f0f9ff;
  --color-sky-100: #e0f2fe;
  --color-primary-100: #dcfce7;
  
  /* 中性色 */
  --color-bg: linear-gradient(180deg, #e0f2fe 0%, #f0f9ff 50%, #dcfce7 100%);
  --color-bg-solid: #f0f9ff;
  --color-card: rgba(255, 255, 255, 0.9);
  --color-border: rgba(255, 255, 255, 0.5);
  --color-text-secondary: #9ca3af;
  --color-text: #1f2937;
  --color-text-dark: #111827;
  
  /* 字体 */
  font-family: "PingFang SC", -apple-system, BlinkMacSystemFont, "Hiragino Sans GB", "Microsoft YaHei", "Helvetica Neue", Arial, sans-serif;
  
  /* 默认背景色 - 清新渐变 */
  background: linear-gradient(180deg, #e0f2fe 0%, #f0f9ff 50%, #dcfce7 100%);
  background-attachment: fixed;
  color: var(--color-text);
  min-height: 100vh;
}

/* ========== 通用容器 ========== */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* ========== 通用按钮样式 ========== */
button {
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

/* ZenLife 2.0 主按钮 - 渐变 + 发光 + 胶囊型 */
.btn-primary {
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%) !important;
  color: #FFFFFF !important;
  border: none !important;
  border-radius: 999rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  box-shadow: 0 16rpx 40rpx -12rpx rgba(52, 211, 153, 0.5);
}

.btn-primary:active {
  transform: scale(0.95);
  opacity: 0.9;
}

/* 强调按钮 - 金色 */
.btn-accent {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%) !important;
  color: #FFFFFF !important;
  border: none !important;
  border-radius: 999rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  box-shadow: 0 16rpx 40rpx -12rpx rgba(217, 119, 6, 0.4);
}

.btn-accent:active {
  transform: scale(0.95);
  opacity: 0.9;
}

/* 次要按钮 - 玻璃拟态 */
.btn-outline {
  background: rgba(255, 255, 255, 0.8) !important;
  color: #22c55e !important;
  border: 2rpx solid rgba(34, 211, 153, 0.3) !important;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  backdrop-filter: blur(10px);
}

.btn-outline:active {
  background: rgba(255, 255, 255, 1) !important;
}

/* ========== 价格样式 ========== */
.price-text {
  color: #d97706;
  font-weight: 700;
}

/* ========== 卡片样式 - 玻璃拟态 ========== */
.card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 48rpx;
  box-shadow: 0 8rpx 50rpx -10rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10px);
}

/* ========== 标签样式 ========== */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.tag-accent {
  background: rgba(217, 119, 6, 0.1);
  color: #d97706;
}

.tag-primary {
  background: rgba(34, 211, 153, 0.1);
  color: #22c55e;
}

/* ========== NEW标签 - 渐变 ========== */
.new-badge {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%);
  color: #FFFFFF;
  font-size: 22rpx;
  font-weight: 700;
  border-radius: 999rpx;
  z-index: 2;
  box-shadow: 0 8rpx 20rpx -8rpx rgba(52, 211, 153, 0.5);
}

/* ========== 玻璃拟态导航栏 ========== */
.glass-nav {
  background: rgba(255, 255, 255, 0.75);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 999rpx;
}

/* ========== 浮动阴影 ========== */
.shadow-float {
  box-shadow: 0 40rpx 80rpx -20rpx rgba(34, 197, 94, 0.2);
}

.shadow-glow {
  box-shadow: 0 16rpx 40rpx -12rpx rgba(52, 211, 153, 0.5);
}

.shadow-card {
  box-shadow: 0 8rpx 50rpx -10rpx rgba(0, 0, 0, 0.05);
}

/* ========== 渐变文字 ========== */
.text-gradient {
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

/* ========== 动画 ========== */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.animate-fade-in {
  animation: fadeIn 0.5s ease-out;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

.animate-float {
  animation: float 6s ease-in-out infinite;
}
