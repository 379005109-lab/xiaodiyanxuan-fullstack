/**app.wxss**/
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 28rpx;
  color: #333;
  background: #f5f5f5;
}

.container {
  box-sizing: border-box;
}

/* 通用样式 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.text-primary {
  color: #4f46e5;
}

.text-danger {
  color: #e53935;
}

.text-gray {
  color: #999;
}

.bg-white {
  background: #fff;
}

.mt-20 {
  margin-top: 20rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.p-20 {
  padding: 20rpx;
}

.radius-16 {
  border-radius: 16rpx;
}
