<!-- 订单结果页 — Apple 风格 -->
<view class="page">
  <view class="nav-bar">
    <view class="nav-back" bindtap="goBack">←</view>
    <view class="nav-title">订单提交</view>
    <view class="nav-placeholder"></view>
  </view>

  <view class="content">
    <view class="result-card">
      <view class="result-icon">✓</view>
      <view class="result-title">订单提交成功</view>
      <view class="result-desc">订单号：{{orderNumber}}</view>
      <view class="result-amount">
        <text class="amount-label">订单金额</text>
        <text class="amount-value">¥{{totalAmount}}</text>
      </view>
    </view>

    <view class="action-group">
      <view class="action-btn primary" bindtap="goOrderDetail">
        <text>查看订单</text>
      </view>
      <view class="action-btn secondary" bindtap="goHome">
        <text>返回首页</text>
      </view>
    </view>
  </view>
</view>
