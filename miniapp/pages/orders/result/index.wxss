/* 订单结果页 — Apple 风格 */
page { background: #F5F5F7; color: #1D1D1F; }
.page { padding-top: calc(88rpx + env(safe-area-inset-top)); }
.nav-bar {
  position: fixed; top: 0; left: 0; right: 0; z-index: 40;
  background: rgba(255,255,255,0.95); backdrop-filter: saturate(180%) blur(40rpx);
  border-bottom: 1rpx solid #E5E5EA;
  display: flex; align-items: center; justify-content: space-between;
  height: calc(88rpx + env(safe-area-inset-top)); padding: env(safe-area-inset-top) 32rpx 0;
}
.nav-back { width: 64rpx; height: 64rpx; display: flex; align-items: center; justify-content: center; font-size: 40rpx; }
.nav-title { font-size: 34rpx; font-weight: 600; }
.nav-placeholder { width: 64rpx; }

.content { padding: 80rpx 32rpx; }

.result-card {
  display: flex; flex-direction: column; align-items: center;
  background: #FFFFFF; border-radius: 32rpx; padding: 64rpx 48rpx;
  border: 1rpx solid #E5E5EA;
}

.result-icon {
  width: 120rpx; height: 120rpx; border-radius: 50%;
  background: #34C759; color: #FFFFFF;
  font-size: 56rpx; font-weight: 700;
  display: flex; align-items: center; justify-content: center;
  margin-bottom: 32rpx;
}

.result-title {
  font-size: 40rpx; font-weight: 600; color: #1D1D1F; margin-bottom: 12rpx;
}

.result-desc {
  font-size: 26rpx; color: #8E8E93; margin-bottom: 32rpx;
}

.result-amount {
  display: flex; align-items: baseline; gap: 12rpx;
  padding: 24rpx 40rpx; background: #F5F5F7; border-radius: 16rpx;
}

.amount-label { font-size: 26rpx; color: #8E8E93; }
.amount-value { font-size: 40rpx; font-weight: 700; color: #1D1D1F; }

.action-group {
  display: flex; flex-direction: column; gap: 16rpx; margin-top: 48rpx;
}

.action-btn {
  height: 96rpx; display: flex; align-items: center; justify-content: center;
  border-radius: 24rpx; font-size: 32rpx; font-weight: 500;
}

.action-btn.primary {
  background: #1D1D1F; color: #FFFFFF;
}
.action-btn.primary:active { background: #000000; }

.action-btn.secondary {
  background: #FFFFFF; color: #1D1D1F; border: 2rpx solid #D2D2D7;
}
.action-btn.secondary:active { background: #F5F5F7; }
