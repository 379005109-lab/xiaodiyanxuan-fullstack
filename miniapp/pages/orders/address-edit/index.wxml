<!-- 地址编辑页 — Apple 风格 -->
<view class="page">
  <view class="nav-bar">
    <view class="nav-back" bindtap="goBack">←</view>
    <view class="nav-title">{{isEdit ? '编辑地址' : '新建地址'}}</view>
    <view class="nav-placeholder"></view>
  </view>

  <view class="content">
    <view class="form-card">
      <view class="form-item">
        <text class="form-label">收货人</text>
        <input class="form-input" placeholder="请输入姓名" value="{{form.name}}" bindinput="onInput" data-field="name" />
      </view>
      <view class="form-item">
        <text class="form-label">手机号</text>
        <input class="form-input" type="number" maxlength="11" placeholder="请输入手机号" value="{{form.phone}}" bindinput="onInput" data-field="phone" />
      </view>
      <view class="form-item" bindtap="chooseRegion">
        <text class="form-label">所在地区</text>
        <text class="form-value {{form.province ? '' : 'placeholder'}}">{{form.province ? form.province + ' ' + form.city + ' ' + form.district : '请选择省市区'}}</text>
        <text class="form-arrow">›</text>
      </view>
      <view class="form-item">
        <text class="form-label">详细地址</text>
        <input class="form-input" placeholder="街道、楼牌号等" value="{{form.address}}" bindinput="onInput" data-field="address" />
      </view>
      <view class="form-item form-switch-item">
        <text class="form-label">设为默认地址</text>
        <switch checked="{{form.isDefault}}" bindchange="onDefaultChange" color="#1D1D1F" />
      </view>
    </view>

    <view class="save-btn" bindtap="saveAddress">
      <text>保存地址</text>
    </view>

    <view class="delete-btn" wx:if="{{isEdit}}" bindtap="deleteAddress">
      <text>删除地址</text>
    </view>
  </view>
</view>
