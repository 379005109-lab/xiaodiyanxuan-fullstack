/* 地址选择页 — Apple 风格 */
page { background: #F5F5F7; color: #1D1D1F; }
.page { padding-top: calc(88rpx + env(safe-area-inset-top)); }
.nav-bar {
  position: fixed; top: 0; left: 0; right: 0; z-index: 40;
  background: rgba(255,255,255,0.95); backdrop-filter: saturate(180%) blur(40rpx);
  border-bottom: 1rpx solid #E5E5EA;
  display: flex; align-items: center; justify-content: space-between;
  height: calc(88rpx + env(safe-area-inset-top)); padding: env(safe-area-inset-top) 32rpx 0;
}
.nav-back { width: 64rpx; height: 64rpx; display: flex; align-items: center; justify-content: center; font-size: 40rpx; }
.nav-title { font-size: 34rpx; font-weight: 600; }
.nav-placeholder { width: 64rpx; }

.content { padding: 24rpx 32rpx; }

.address-list { display: flex; flex-direction: column; gap: 16rpx; }

.address-card {
  display: flex; align-items: flex-start; gap: 24rpx;
  background: #FFFFFF; border-radius: 24rpx; padding: 28rpx;
  border: 2rpx solid #E5E5EA;
}
.address-card.is-default { border-color: #1D1D1F; }
.address-card:active { background: #F5F5F7; }

.address-radio { padding-top: 4rpx; flex-shrink: 0; }
.radio-dot {
  width: 40rpx; height: 40rpx; border-radius: 50%;
  border: 3rpx solid #C6C6C8; display: flex; align-items: center; justify-content: center;
  font-size: 24rpx; color: #FFFFFF;
}
.radio-dot.checked { background: #1D1D1F; border-color: #1D1D1F; }

.address-info { flex: 1; min-width: 0; }
.address-header { display: flex; align-items: center; gap: 16rpx; margin-bottom: 8rpx; }
.address-name { font-size: 30rpx; font-weight: 600; color: #1D1D1F; }
.address-phone { font-size: 26rpx; color: #8E8E93; }
.default-tag {
  font-size: 20rpx; color: #1D1D1F; background: #F5F5F7;
  padding: 4rpx 12rpx; border-radius: 8rpx; border: 1rpx solid #E5E5EA;
}
.address-detail { font-size: 26rpx; color: #6E6E73; line-height: 1.5; }

.empty-state {
  display: flex; flex-direction: column; align-items: center; padding: 120rpx 0;
}
.empty-icon { font-size: 80rpx; margin-bottom: 16rpx; }
.empty-text { font-size: 30rpx; font-weight: 500; color: #1D1D1F; margin-bottom: 8rpx; }
.empty-hint { font-size: 26rpx; color: #8E8E93; }

.add-btn {
  margin-top: 32rpx; height: 96rpx;
  display: flex; align-items: center; justify-content: center;
  background: #FFFFFF; border: 2rpx solid #D2D2D7; border-radius: 24rpx;
  font-size: 30rpx; font-weight: 500; color: #1D1D1F;
}
.add-btn:active { background: #F5F5F7; }
