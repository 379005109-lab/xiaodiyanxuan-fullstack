<navigation-bar title="" back="{{false}}" color="white" background="transparent"></navigation-bar>
<scroll-view class="page-scroll" scroll-y>
<view class="page">
	<!-- 全屏Hero - 大D Logo -->
	<view class="hero-fullscreen">
		<!-- 用户头像 -->
		<view class="hero-avatar" bindtap="goProfile">
			<image src="{{userAvatar || '/images/default-avatar.png'}}" mode="aspectFill"></image>
		</view>
		<!-- Logo区域 -->
		<view class="hero-logo">D</view>
		<!-- 标语 -->
		<view class="hero-slogan">
			<view class="slogan-line">线上选款</view>
			<view class="slogan-line">展厅体验</view>
		</view>
		<view class="hero-price-tag">一口价</view>
		<view class="hero-arrow">↓</view>
	</view>

	<!-- 陪买服务卡片 -->
	<view class="service-card" bindtap="goGuideService">
		<view class="service-title">陪买服务</view>
		<view class="service-desc">专业顾问一对一陪同选购，为您甄选最适合的家居方案。</view>
		<view class="service-btn">
			<text>预约服务</text>
			<text class="arrow">›</text>
		</view>
	</view>

	<!-- 快捷入口 -->
	<view class="quick-entries">
		<view class="quick-item" bindtap="goBargain">
			<view class="quick-icon bargain">🏷️</view>
			<view class="quick-value">50%</view>
			<view class="quick-label">限时折扣</view>
		</view>
		<view class="quick-item" bindtap="goPackage">
			<view class="quick-icon package">📦</view>
			<view class="quick-value">套餐</view>
			<view class="quick-label">一站式购齐</view>
		</view>
	</view>

	<!-- 热门商品 -->
	<view class="section">
		<view class="section-header">
			<view class="section-title">本周热门</view>
			<view class="section-more" bindtap="goMoreHots">更多 ›</view>
		</view>
		<view class="hot-list">
			<block wx:for="{{hots}}" wx:key="id">
				<view class="hot-card" bindtap="goHotDetail" data-id="{{item.id}}">
					<view class="new-tag" wx:if="{{item.isNew}}">NEW</view>
					<image class="hot-cover" src="{{item.img}}" mode="aspectFill"></image>
					<view class="hot-info">
						<text class="h-name">{{item.name}}</text>
						<view class="h-price">
							<text class="price">¥{{item.price}}</text>
							<view class="cart-btn">🛒</view>
						</view>
					</view>
				</view>
			</block>
		</view>
	</view>
</view>
</scroll-view>
