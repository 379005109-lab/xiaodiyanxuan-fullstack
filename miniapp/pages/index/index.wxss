/**index.wxss**/
/* 小迪严选首页 — Apple 风格 */
page {
  background: #FFFFFF;
  color: #1D1D1F;
  height: 100vh;
}

.page-scroll { height: 100vh; }
.page { padding-top: calc(44px + env(safe-area-inset-top)); }

/* ========== Hero Banner ========== */
.hero-section {
  position: relative;
  width: 100%;
  height: calc(100vh - 120rpx);
  overflow: hidden;
}

.hero-swiper {
  width: 100%;
  height: 100%;
}

.hero-slide {
  position: relative;
  width: 100%;
  height: 100%;
}

.hero-img {
  width: 100%;
  height: 100%;
  display: block;
}

.hero-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to top, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.1) 40%, transparent 100%);
}

.hero-content {
  position: absolute;
  left: 48rpx;
  bottom: 200rpx;
  z-index: 10;
}

.hero-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 1.2;
  letter-spacing: -0.5rpx;
}

.hero-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 12rpx;
  font-weight: 400;
}

.hero-btn {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 32rpx;
  padding: 20rpx 40rpx;
  background: #FFFFFF;
  border: 2rpx solid #D2D2D7;
  border-radius: 28rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #1D1D1F;
}

.hero-btn-arrow {
  font-size: 28rpx;
}

/* 指示器 */
.hero-indicators {
  position: absolute;
  bottom: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  gap: 16rpx;
  z-index: 30;
}

.hero-dot {
  width: 16rpx;
  height: 4rpx;
  border-radius: 4rpx;
  background: rgba(255, 255, 255, 0.35);
  transition: all 0.5s ease;
}

.hero-dot.active {
  width: 48rpx;
  background: rgba(255, 255, 255, 0.9);
}
/* ========== 通用 Section ========== */
.section {
  padding: 48rpx 32rpx 0;
}

.section-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.section-header-left {
  flex: 1;
}

.section-title {
  font-size: 44rpx;
  font-weight: 600;
  color: #1D1D1F;
  letter-spacing: -0.5rpx;
  line-height: 1.2;
}

.section-desc {
  font-size: 26rpx;
  color: #86868B;
  margin-top: 8rpx;
  line-height: 1.5;
}

.section-more {
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-size: 26rpx;
  color: #1D1D1F;
  flex-shrink: 0;
  padding-top: 8rpx;
}

.more-arrow {
  font-size: 32rpx;
  color: #86868B;
}

/* ========== 砍价专区 ========== */
.bargain-scroll {
  width: 100%;
  white-space: nowrap;
  margin: 0 -32rpx;
  padding: 0 32rpx;
}

.bargain-list {
  display: inline-flex;
  gap: 24rpx;
  padding-right: 32rpx;
}

.bargain-card {
  width: 320rpx;
  flex-shrink: 0;
  display: inline-block;
}

.bargain-img-wrap {
  position: relative;
  width: 320rpx;
  height: 320rpx;
  border-radius: 32rpx;
  overflow: hidden;
  background: #F5F5F7;
}

.bargain-img {
  width: 100%;
  height: 100%;
}

.bargain-countdown {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 20rpx;
  background: rgba(245, 245, 247, 0.9);
  -webkit-backdrop-filter: blur(20rpx);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid #D2D2D7;
  border-radius: 999rpx;
  font-size: 20rpx;
  font-family: "SF Mono", "Menlo", monospace;
  color: #1D1D1F;
}

.countdown-icon {
  font-size: 20rpx;
}

.bargain-info {
  padding: 16rpx 4rpx 0;
}

.bargain-name {
  font-size: 26rpx;
  color: #1D1D1F;
  line-height: 1.4;
  min-height: 72rpx;
  white-space: normal;
}

.bargain-progress-wrap {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 16rpx;
}

.bargain-progress-bar {
  flex: 1;
  height: 4rpx;
  background: #E5E5EA;
  border-radius: 4rpx;
  overflow: hidden;
}

.bargain-progress-fill {
  height: 100%;
  background: #1D1D1F;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.bargain-progress-text {
  font-size: 20rpx;
  color: #86868B;
  font-weight: 500;
}

.bargain-price-row {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
  margin-top: 12rpx;
}

.bargain-price {
  font-size: 34rpx;
  font-weight: 600;
  color: #1D1D1F;
  letter-spacing: -0.5rpx;
}

.bargain-original-price {
  font-size: 24rpx;
  color: #86868B;
  text-decoration: line-through;
}

.bargain-entry-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  height: 96rpx;
  margin-top: 32rpx;
  background: #FFFFFF;
  border: 2rpx solid #D2D2D7;
  border-radius: 32rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #1D1D1F;
}

.bargain-entry-btn:active {
  background: #F5F5F7;
}

/* ========== 新品推荐 ========== */
.recommend-list {
  padding: 0;
}

.recommend-item {
  display: flex;
  gap: 24rpx;
  padding: 24rpx 8rpx;
  border-radius: 20rpx;
}

.recommend-item:active {
  background: #F5F5F7;
}

.recommend-img {
  width: 220rpx;
  height: 220rpx;
  border-radius: 32rpx;
  flex-shrink: 0;
  background: #F5F5F7;
}

.recommend-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
  padding: 8rpx 0;
}

.recommend-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #1D1D1F;
  letter-spacing: -0.3rpx;
}

.recommend-highlight {
  font-size: 24rpx;
  color: #86868B;
  margin-top: 8rpx;
  line-height: 1.5;
}

.recommend-bottom {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  margin-top: 12rpx;
}

.recommend-price-wrap {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.recommend-price {
  font-size: 34rpx;
  font-weight: 600;
  color: #1D1D1F;
  letter-spacing: -0.5rpx;
}

.recommend-original-price {
  font-size: 24rpx;
  color: #86868B;
  text-decoration: line-through;
}

.recommend-sales {
  font-size: 22rpx;
  color: #86868B;
}

.recommend-divider {
  height: 1rpx;
  background: #E5E5EA;
  margin-left: 252rpx;
}

/* ========== 空间灵感 ========== */
.space-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.space-card {
  position: relative;
  border-radius: 32rpx;
  overflow: hidden;
  aspect-ratio: 4/3;
}

.space-card:active {
  opacity: 0.9;
}

.space-img {
  width: 100%;
  height: 100%;
}

.space-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to top, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.05) 50%, transparent 100%);
}

.space-text {
  position: absolute;
  bottom: 24rpx;
  left: 24rpx;
  right: 24rpx;
}

.space-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #FFFFFF;
  letter-spacing: -0.3rpx;
}

.space-subtitle {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 4rpx;
}

/* ========== 精选好物 ========== */
.featured-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.featured-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
}

.featured-card:active {
  opacity: 0.9;
}

.featured-img-wrap {
  width: 100%;
  aspect-ratio: 1;
  background: #F5F5F7;
  border-radius: 24rpx;
  overflow: hidden;
}

.featured-img {
  width: 100%;
  height: 100%;
}

.featured-info {
  padding: 16rpx 4rpx 8rpx;
}

.featured-name {
  font-size: 26rpx;
  font-weight: 400;
  color: #1D1D1F;
  line-height: 1.4;
  min-height: 72rpx;
}

.featured-highlight {
  font-size: 22rpx;
  color: #86868B;
  margin-top: 4rpx;
}

.featured-price-row {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-top: 8rpx;
}

.featured-price {
  font-size: 34rpx;
  font-weight: 600;
  color: #1D1D1F;
  letter-spacing: -0.5rpx;
}

.featured-original {
  font-size: 24rpx;
  color: #86868B;
  text-decoration: line-through;
}

/* ========== 店铺信息 ========== */
.shop-section {
  padding-bottom: 32rpx;
}

.shop-card {
  background: #F5F5F7;
  border-radius: 32rpx;
  overflow: hidden;
  padding: 32rpx;
}

.shop-main {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.shop-logo {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  flex-shrink: 0;
  background: #FFFFFF;
}

.shop-logo-placeholder {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  background: #1D1D1F;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.shop-info {
  flex: 1;
  min-width: 0;
}

.shop-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.shop-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1D1D1F;
}

.shop-verified {
  font-size: 20rpx;
  color: #34C759;
  background: rgba(52, 199, 89, 0.12);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.shop-address {
  font-size: 24rpx;
  color: #86868B;
  margin-top: 8rpx;
}

.shop-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.shop-action-btn {
  flex: 1;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #1D1D1F;
  font-weight: 500;
}

.shop-action-btn:active {
  background: #E5E5EA;
}
