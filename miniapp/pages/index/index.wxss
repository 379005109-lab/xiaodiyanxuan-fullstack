/**index.wxss**/
/* ZenLife 2.0 首页 - Fresh Nature Gradient */
/* 严格按照设计规范 */

page { 
  background: linear-gradient(180deg, #e0f2fe 0%, #f0f9ff 50%, #dcfce7 100%);
  min-height: 100vh; 
}
.page-scroll { 
  min-height: 100vh; 
}

/* ========== Hero全屏区域 - 90vh ========== */
.hero-section { 
  position: relative; 
  width: 100%; 
  height: 90vh; 
  background: linear-gradient(135deg, #38bdf8 0%, #22d3ee 50%, #34d399 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

/* 背景装饰圆 - 模糊光斑效果 */
.hero-bg-decor {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.3;
  mix-blend-mode: overlay;
}
.decor-circle {
  position: absolute;
  border-radius: 50%;
  filter: blur(80rpx);
}
.circle-1 {
  top: 20%;
  right: 10%;
  width: 400rpx;
  height: 400rpx;
  border: 60rpx solid #FFFFFF;
}
.circle-2 {
  bottom: 20%;
  left: 10%;
  width: 500rpx;
  height: 500rpx;
  background: #FFFFFF;
}
.circle-3 {
  top: 40%;
  left: 30%;
  width: 300rpx;
  height: 300rpx;
  background: #e0f2fe;
}

/* 右上角头像 - 玻璃效果 */
.hero-avatar {
  position: absolute;
  top: calc(48rpx + env(safe-area-inset-top));
  right: 48rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  background: rgba(255,255,255,0.2);
  border: 2rpx solid rgba(255,255,255,0.3);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.15);
  z-index: 20;
}
.hero-avatar image {
  width: 100%;
  height: 100%;
  padding: 4rpx;
  border-radius: 50%;
}

/* 中央内容 */
.hero-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 0 60rpx;
  z-index: 10;
}

/* 大D Logo - 浮动动画 */
.hero-logo-wrap {
  animation: float 6s ease-in-out infinite;
}
.hero-logo {
  font-size: 400rpx;
  font-weight: 700;
  color: #FFFFFF;
  line-height: 0.9;
  opacity: 0.95;
  text-shadow: 0 0 100rpx rgba(0,0,0,0.1);
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

/* 标语 - 带倾斜效果 */
.hero-slogan {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  margin-top: 48rpx;
}

.slogan-line {
  font-size: 80rpx;
  font-weight: 900;
  color: #FFFFFF;
  letter-spacing: 16rpx;
  text-shadow: 0 8rpx 32rpx rgba(0,0,0,0.15);
}
.slogan-line.line-1 {
  transform: rotate(-2deg);
  transform-origin: bottom right;
}
.slogan-line.line-2 {
  transform: rotate(1deg);
  transform-origin: bottom left;
  margin-left: 60rpx;
}

/* 一口价 - 更大倾斜 */
.hero-price-wrap {
  margin-top: 64rpx;
}
.hero-price-tag {
  font-size: 96rpx;
  font-weight: 900;
  color: #FFFFFF;
  letter-spacing: 20rpx;
  text-shadow: 0 8rpx 32rpx rgba(0,0,0,0.2);
  transform: rotate(-6deg);
  display: block;
}

/* 底部箭头 */
.hero-arrow-wrap {
  position: absolute;
  bottom: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  animation: bounce 2s infinite;
}
.hero-arrow {
  font-size: 64rpx;
  color: rgba(255,255,255,0.8);
}

@keyframes bounce {
  0%, 100% { transform: translateX(-50%) translateY(0); }
  50% { transform: translateX(-50%) translateY(20rpx); }
}

/* ========== 陪买服务卡片 - 带背景图玻璃效果 ========== */
.service-card {
  position: relative;
  margin: -64rpx 48rpx 64rpx;
  background: #FFFFFF;
  border-radius: 64rpx;
  overflow: hidden;
  box-shadow: 0 40rpx 80rpx -20rpx rgba(0,0,0,0.1);
  z-index: 10;
  border: 2rpx solid rgba(255,255,255,0.5);
}

.service-bg-img {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  opacity: 0.3;
  z-index: -1;
}

.service-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255,255,255,0.8);
  z-index: 0;
}

.service-content {
  position: relative;
  padding: 48rpx;
  z-index: 1;
}

.service-title {
  font-size: 60rpx;
  font-weight: 700;
  color: #000000;
  margin-bottom: 16rpx;
}

.service-desc {
  font-size: 28rpx;
  font-weight: 700;
  color: #1f2937;
  opacity: 0.8;
  line-height: 1.6;
  margin-bottom: 48rpx;
  max-width: 70%;
}

.service-btn {
  display: inline-flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 40rpx;
  background: #000000;
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 700;
  border-radius: 999rpx;
  box-shadow: 0 16rpx 32rpx -8rpx rgba(0,0,0,0.3);
}

.service-btn .arrow {
  font-size: 32rpx;
}

/* ========== 快捷入口 - 带图标装饰 ========== */
.quick-actions {
  display: flex;
  gap: 32rpx;
  padding: 0 48rpx;
  margin-bottom: 48rpx;
}

.quick-item {
  flex: 1;
  background: #FFFFFF;
  border-radius: 48rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 40rpx -10rpx rgba(0,0,0,0.05);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 256rpx;
}

/* 右上角装饰圆 */
.quick-decor {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  transition: transform 0.5s;
}
.item-bargain .quick-decor {
  background: #dcfce7;
}
.item-package .quick-decor {
  background: #e0f2fe;
}

/* 图标容器 */
.quick-icon-wrap {
  width: 48rpx;
  height: 48rpx;
  position: relative;
  z-index: 1;
}
.quick-icon-text {
  font-size: 48rpx;
}

/* 文字信息 */
.quick-info {
  position: relative;
  z-index: 1;
}
.quick-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.quick-label {
  font-size: 24rpx;
  font-weight: 500;
  color: #9ca3af;
}

/* ========== 新品推荐 - 玻璃拟态卡片 ========== */
.new-products-banner { 
  position: relative; 
  width: calc(100% - 48rpx); 
  height: 480rpx; 
  border-radius: 48rpx; 
  overflow: hidden; 
  margin: 32rpx 24rpx; 
  box-shadow: 0 20rpx 60rpx -20rpx rgba(34, 197, 94, 0.2); 
}
.new-products-img { width: 100%; height: 100%; display: block; }
.new-products-overlay { 
  position: absolute; 
  bottom: 0; left: 0; right: 0; 
  padding: 48rpx 40rpx; 
  background: linear-gradient(to top, rgba(16, 185, 129, 0.85), rgba(34, 211, 238, 0.4), transparent); 
}
.new-products-title { 
  font-size: 56rpx; 
  font-weight: 800; 
  color: #FFFFFF; 
  margin-bottom: 16rpx; 
  text-shadow: 0 4rpx 16rpx rgba(0,0,0,0.2); 
}
.new-products-desc { 
  font-size: 30rpx; 
  font-weight: 500;
  color: rgba(255, 255, 255, 0.95); 
}

/* ========== 本周热门区块 ========== */
.section { 
  margin: 48rpx 24rpx; 
  padding-bottom: calc(env(safe-area-inset-bottom) + 40rpx); 
}
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}
.section-title { 
  font-size: 36rpx; 
  font-weight: 700; 
  color: #1f2937; 
  letter-spacing: 1rpx; 
}
.section-more {
  font-size: 26rpx;
  color: #22c55e;
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-weight: 500;
}

/* ========== 热门商品列表 - 玻璃拟态卡片 ========== */
.hot-list { 
  display: grid; 
  grid-template-columns: repeat(2, 1fr); 
  gap: 20rpx; 
  margin-bottom: 48rpx; 
}
.hot-card { 
  position: relative;
  background: rgba(255, 255, 255, 0.9); 
  border-radius: 48rpx; 
  overflow: hidden; 
  box-shadow: 0 8rpx 40rpx -10rpx rgba(0,0,0,0.05); 
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  transition: transform 0.2s, box-shadow 0.2s; 
  display: flex; 
  flex-direction: column; 
  backdrop-filter: blur(10px);
}
.hot-card:active { 
  transform: scale(0.97); 
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08); 
}
.hot-cover { 
  width: 100%; 
  height: 320rpx; 
  background: #f0f9ff; 
  flex-shrink: 0; 
  border-radius: 40rpx 40rpx 0 0;
}
.hot-info { 
  padding: 24rpx; 
  display: flex; 
  flex-direction: column; 
}
.h-name { 
  font-size: 28rpx; 
  color: #1f2937; 
  font-weight: 600; 
  line-height: 1.4; 
  margin-bottom: 12rpx; 
  display: -webkit-box; 
  -webkit-line-clamp: 1; 
  -webkit-box-orient: vertical; 
  overflow: hidden; 
  text-overflow: ellipsis; 
}
.h-price { 
  display: flex; 
  align-items: center; 
  justify-content: space-between;
}
.price { 
  font-size: 36rpx; 
  font-weight: 700; 
  color: #d97706; 
}
.save { 
  font-size: 22rpx; 
  color: #9ca3af; 
  background: rgba(34, 211, 153, 0.1); 
  padding: 6rpx 16rpx; 
  border-radius: 999rpx; 
}

/* ========== NEW标签 - 渐变胶囊 ========== */
.hot-card .new-tag {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  padding: 10rpx 24rpx;
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%);
  color: #FFFFFF;
  font-size: 22rpx;
  font-weight: 700;
  border-radius: 999rpx;
  z-index: 2;
  box-shadow: 0 8rpx 20rpx -8rpx rgba(52, 211, 153, 0.5);
}
