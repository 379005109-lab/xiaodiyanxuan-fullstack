/**index.wxss**/
/* 小迪严选首页 — 动态装修 */
page {
  background: #FFFFFF;
  color: #1D1D1F;
  height: 100vh;
}

.page-scroll { height: 100vh; }
.page { padding-top: calc(44px + env(safe-area-inset-top)); min-height: 100vh; }

/* 通用工具类 */
.text-ellipsis { overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }
.text-ellipsis-2 { overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; word-break: break-all; }
.price-symbol { font-size: 24rpx; font-weight: 500; }
.more-arrow { font-size: 28rpx; color: #86868B; margin-left: 4rpx; }

/* ========== 加载状态 ========== */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}
.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E5E5EA;
  border-top-color: #1D1D1F;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}
@keyframes spin { to { transform: rotate(360deg); } }
.loading-text {
  margin-top: 24rpx;
  font-size: 26rpx;
  color: #86868B;
}

/* ========== 空状态 / 错误状态 ========== */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}
.empty-icon { font-size: 80rpx; margin-bottom: 16rpx; }
.empty-text { font-size: 28rpx; color: #86868B; margin-bottom: 24rpx; }
.empty-retry {
  font-size: 28rpx;
  color: #FFFFFF;
  background: #1D1D1F;
  padding: 16rpx 48rpx;
  border-radius: 40rpx;
}

/* ========== 装修组件容器 ========== */
.deco-comp {
  box-sizing: border-box;
}

/* ========== 店铺头部 storeHeader ========== */
.deco-store-header {
  padding: 24rpx;
}

.shop-card {
  background: #F5F5F7;
  border-radius: 32rpx;
  overflow: hidden;
  padding: 32rpx;
}

.shop-main {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.shop-logo {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  flex-shrink: 0;
  background: #FFFFFF;
}

.shop-logo-placeholder {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  background: #1D1D1F;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.shop-info {
  flex: 1;
  min-width: 0;
}

.shop-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.shop-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1D1D1F;
}

.shop-verified {
  font-size: 20rpx;
  color: #34C759;
  background: rgba(52, 199, 89, 0.12);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.shop-contact {
  margin-top: 8rpx;
}

.shop-contact-name {
  font-size: 24rpx;
  color: #6E6E73;
}

.shop-contact-phone {
  font-size: 24rpx;
  color: #6E6E73;
}

.shop-address {
  font-size: 24rpx;
  color: #86868B;
  margin-top: 8rpx;
}

.shop-desc {
  font-size: 24rpx;
  color: #86868B;
  margin-top: 4rpx;
}

.shop-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.shop-action-btn {
  flex: 1;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #1D1D1F;
  font-weight: 500;
}

.shop-action-btn:active {
  background: #E5E5EA;
}

.action-icon {
  font-size: 28rpx;
}

/* ========== 轮播图 banner ========== */
.deco-banner {
  position: relative;
  width: 100%;
}

.deco-banner-swiper {
  width: 100%;
  height: 1333rpx;
}

.deco-banner-slide {
  width: 100%;
  height: 100%;
}

.deco-banner-img {
  width: 100%;
  height: 100%;
  display: block;
}

.deco-banner-dots {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 16rpx 0;
}

.deco-dot {
  width: 12rpx;
  height: 6rpx;
  border-radius: 6rpx;
  background: #D2D2D7;
  transition: all 0.3s ease;
}

.deco-dot.active {
  width: 36rpx;
  background: #1D1D1F;
}

/* ========== 砍价专区 bargain ========== */
.deco-bargain {
  padding: 0 0 24rpx;
}

.deco-bargain-header {
  padding: 24rpx 24rpx 16rpx;
}

.deco-bargain-title {
  font-size: 36rpx;
  font-weight: bold;
}

.deco-bargain-scroll {
  width: 100%;
}

.deco-bargain-list {
  display: flex;
  flex-direction: row;
  padding: 0 24rpx;
  gap: 16rpx;
}

.deco-bargain-card {
  flex-shrink: 0;
  width: 300rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.deco-bargain-img-wrap {
  position: relative;
  width: 100%;
  height: 300rpx;
  background: #f5f5f7;
}

.deco-bargain-img {
  width: 100%;
  height: 100%;
}

.deco-bargain-countdown {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
  background: rgba(0, 0, 0, 0.55);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.countdown-icon {
  font-size: 20rpx;
}

.deco-bargain-info {
  padding: 12rpx 16rpx 16rpx;
}

.deco-bargain-name {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  display: block;
}

.deco-bargain-tags {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 8rpx;
}

.deco-bargain-tag {
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border: 1rpx solid;
  border-radius: 4rpx;
  line-height: 1.4;
}

.deco-bargain-discount {
  font-size: 20rpx;
  color: #999;
}

.deco-bargain-price-row {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  margin-top: 8rpx;
}

.deco-bargain-price {
  font-size: 32rpx;
  font-weight: bold;
}

.deco-bargain-origin-price {
  font-size: 22rpx;
  text-decoration: line-through;
}

/* 砍价按钮 */
.deco-bargain-btn {
  display: block;
  text-align: center;
  font-size: 24rpx;
  padding: 10rpx 0;
  border-radius: 30rpx;
  margin-top: 12rpx;
}

.deco-bargain-btn-sm {
  display: inline-block;
  font-size: 22rpx;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  margin-top: 10rpx;
}

/* 列表布局 layoutStyle=1 */
.deco-bargain-list-vertical {
  padding: 0 24rpx;
}

.deco-bargain-list-item {
  display: flex;
  gap: 20rpx;
  padding: 16rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.deco-bargain-list-img {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  flex-shrink: 0;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f5f5f7;
}

.deco-bargain-list-img image {
  width: 100%;
  height: 100%;
}

.deco-bargain-list-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 4rpx 0;
}

.text-ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 网格布局 layoutStyle=2,3 */
.deco-bargain-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 0 24rpx;
  gap: 16rpx;
}

.deco-bargain-grid-2 .deco-bargain-grid-card {
  width: calc(50% - 8rpx);
}

.deco-bargain-grid-3 .deco-bargain-grid-card {
  width: calc(33.33% - 11rpx);
}

.deco-bargain-grid-card {
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.deco-bargain-grid-img {
  position: relative;
  width: 100%;
  height: 240rpx;
  background: #f5f5f7;
}

.deco-bargain-grid-img-sm {
  height: 180rpx;
}

.deco-bargain-grid-img image {
  width: 100%;
  height: 100%;
}

.deco-bargain-grid-info {
  padding: 12rpx 16rpx 16rpx;
}

.deco-bargain-countdown-sm {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
  background: rgba(0, 0, 0, 0.55);
  color: #fff;
  font-size: 18rpx;
  padding: 2rpx 10rpx;
  border-radius: 16rpx;
}

/* ========== 搜索框 searchBox ========== */
.deco-search {
  padding: 16rpx 24rpx;
}

.deco-search-box {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 28rpx;
  background: #F5F5F7;
  border-radius: 40rpx;
}

.deco-search-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.deco-search-placeholder {
  font-size: 28rpx;
  color: #86868B;
}

/* ========== 标题 title ========== */
.deco-title {
  padding: 32rpx 24rpx 16rpx;
}

.deco-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.deco-title-left {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.deco-title-text {
  display: block;
  line-height: 1.3;
}

.deco-subtitle-text {
  display: block;
  line-height: 1.4;
  margin-top: 4rpx;
}

.deco-title-right {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  padding-left: 16rpx;
}

/* ========== 商品列表 productList — grid ========== */
.deco-products {
  padding: 0 24rpx;
}

.deco-product-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.deco-product-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.deco-product-card:active {
  opacity: 0.9;
}

.deco-product-img-wrap {
  width: 100%;
  aspect-ratio: 1;
  background: #F5F5F7;
  overflow: hidden;
}

.deco-product-img {
  width: 100%;
  height: 100%;
}

.deco-product-info {
  padding: 16rpx 16rpx 20rpx;
}

.deco-product-name {
  font-size: 26rpx;
  color: #1D1D1F;
  line-height: 1.4;
  min-height: 72rpx;
}

.deco-product-bottom {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  margin-top: 8rpx;
}

.deco-product-price {
  font-size: 34rpx;
  font-weight: 600;
  color: #1D1D1F;
  letter-spacing: -0.5rpx;
}

.deco-product-sales {
  font-size: 22rpx;
  color: #86868B;
  flex-shrink: 0;
}

/* ========== 商品列表 productList — list ========== */
.deco-product-list {
  display: flex;
  flex-direction: column;
}

.deco-product-list-item {
  display: flex;
  gap: 24rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F2F2F7;
}

.deco-product-list-item:last-child {
  border-bottom: none;
}

.deco-product-list-item:active {
  background: #F5F5F7;
}

.deco-product-list-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
  background: #F5F5F7;
}

.deco-product-list-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
  padding: 8rpx 0;
}

/* ========== 商品列表 productList — scroll ========== */
.deco-product-scroll {
  width: 100%;
  white-space: nowrap;
}

.deco-product-scroll-inner {
  display: inline-flex;
  gap: 16rpx;
  padding: 0 4rpx;
}

.deco-product-scroll-card {
  width: 260rpx;
  flex-shrink: 0;
  display: inline-block;
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  white-space: normal;
}

.deco-product-scroll-card:active {
  opacity: 0.9;
}

.deco-product-scroll-img {
  width: 260rpx;
  height: 260rpx;
  background: #F5F5F7;
  display: block;
}

.deco-product-scroll-card .deco-product-name {
  padding: 12rpx 16rpx 0;
  min-height: 60rpx;
  font-size: 24rpx;
}

.deco-product-scroll-card .deco-product-bottom {
  padding: 4rpx 16rpx 16rpx;
}

.deco-product-scroll-card .deco-product-price {
  font-size: 30rpx;
}

/* ========== 图片魔方 imageCube ========== */
.deco-image-cube {
  padding: 0 24rpx;
}

.deco-cube-grid {
  display: grid;
  gap: 8rpx;
}

.deco-cube-col-1 { grid-template-columns: 1fr; }
.deco-cube-col-2 { grid-template-columns: 1fr 1fr; }
.deco-cube-col-3 { grid-template-columns: 1fr 1fr 1fr; }
.deco-cube-col-4 { grid-template-columns: 1fr 1fr 1fr 1fr; }

.deco-cube-item {
  width: 100%;
  aspect-ratio: 1;
  overflow: hidden;
}

.deco-cube-item:active {
  opacity: 0.9;
}

.deco-cube-img {
  width: 100%;
  height: 100%;
}

/* ========== 菜单导航 menuNav ========== */
.deco-menu-nav {
  padding: 24rpx;
}

.deco-menu-grid {
  display: grid;
  gap: 24rpx 0;
}

.deco-menu-col-4 { grid-template-columns: repeat(4, 1fr); }
.deco-menu-col-5 { grid-template-columns: repeat(5, 1fr); }

.deco-menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.deco-menu-item:active {
  opacity: 0.8;
}

.deco-menu-icon-wrap {
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
  overflow: hidden;
  background: #F5F5F7;
}

.deco-menu-icon-wrap.round {
  border-radius: 50%;
}

.deco-menu-icon {
  width: 100%;
  height: 100%;
}

.deco-menu-icon-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #1D1D1F;
  background: #F5F5F7;
}

.deco-menu-text {
  font-size: 24rpx;
  color: #1D1D1F;
  text-align: center;
}

/* ========== 优惠券 coupon ========== */
.deco-coupon {
  padding: 0 24rpx;
}

.deco-coupon-scroll {
  width: 100%;
  white-space: nowrap;
}

.deco-coupon-list {
  display: inline-flex;
  gap: 16rpx;
}

.deco-coupon-card {
  width: 280rpx;
  flex-shrink: 0;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 20rpx;
  background: linear-gradient(135deg, #FFF5F5, #FFFFFF);
  border-radius: 20rpx;
  border: 1rpx solid #FFE0E0;
  white-space: normal;
}

.deco-coupon-amount {
  display: flex;
  align-items: baseline;
  color: #FF4D4F;
}

.deco-coupon-amount .price-symbol {
  font-size: 28rpx;
  font-weight: 600;
  color: #FF4D4F;
}

.deco-coupon-value {
  font-size: 52rpx;
  font-weight: 700;
  line-height: 1;
}

.deco-coupon-info {
  margin-top: 8rpx;
}

.deco-coupon-condition {
  font-size: 22rpx;
  color: #86868B;
}

.deco-coupon-btn {
  margin-top: 16rpx;
  padding: 8rpx 32rpx;
  background: #FF4D4F;
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: 500;
  border-radius: 999rpx;
}

.deco-coupon-btn:active {
  opacity: 0.8;
}

/* ========== 辅助空白 spacer ========== */
.deco-spacer {
  width: 100%;
}

/* ========== 富文本 richText ========== */
.deco-rich-text {
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  color: #1D1D1F;
  line-height: 1.6;
  word-break: break-all;
}

/* ========== 视频 video ========== */
.deco-video {
  padding: 0 24rpx;
}

.deco-video-player {
  width: 100%;
  border-radius: 20rpx;
}

/* ========== 导航栏 navBar ========== */
.deco-navbar {
  padding: 0 24rpx;
}

.deco-navbar-list {
  display: flex;
  background: #F5F5F7;
  border-radius: 16rpx;
  overflow: hidden;
}

.deco-navbar-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  font-weight: 500;
  color: #1D1D1F;
}

.deco-navbar-item:active {
  background: #E5E5EA;
}
