/**index.wxss**/
/* 小迪严选首页 - ZenLife 2.0 */
page { 
  background: linear-gradient(180deg, #e0f2fe 0%, #f0f9ff 50%, #dcfce7 100%);
  background-attachment: fixed;
  color: #1f2937; 
  min-height: 100vh; 
}
.page-scroll { min-height: 100vh; }
.page { padding-top: 0; }

/* ========== 全屏Hero - 大D Logo ========== */
.hero-fullscreen {
  position: relative;
  width: 100%;
  height: 100vh;
  min-height: 100vh;
  background: linear-gradient(160deg, #38bdf8 0%, #22d3ee 35%, #34d399 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 48rpx;
}
.hero-avatar {
  position: absolute;
  top: calc(env(safe-area-inset-top) + 24rpx);
  right: 32rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid rgba(255,255,255,0.5);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.15);
}
.hero-avatar image {
  width: 100%;
  height: 100%;
}
.hero-logo {
  font-size: 400rpx;
  font-weight: 900;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1;
  margin-bottom: 32rpx;
  text-shadow: 0 20rpx 60rpx rgba(0,0,0,0.1);
  animation: float 3s ease-in-out infinite;
}
@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}
.hero-slogan {
  text-align: center;
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.slogan-line {
  font-size: 64rpx;
  font-weight: 800;
  color: #FFFFFF;
  line-height: 1.5;
  text-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
  letter-spacing: 4rpx;
}
.hero-price-tag {
  font-size: 56rpx;
  font-weight: 900;
  color: #FFFFFF;
  margin-top: 24rpx;
  letter-spacing: 12rpx;
  text-align: center;
}
.hero-arrow {
  position: absolute;
  bottom: 80rpx;
  font-size: 48rpx;
  color: rgba(255,255,255,0.8);
  animation: bounce 2s infinite;
}
@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(16rpx); }
}

/* ========== 陪买服务卡片 ========== */
.service-card {
  margin: -80rpx 24rpx 24rpx;
  padding: 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  box-shadow: 0 16rpx 48rpx -12rpx rgba(0,0,0,0.08);
  position: relative;
  z-index: 10;
}
.service-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 16rpx;
}
.service-desc {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.6;
  margin-bottom: 24rpx;
}
.service-btn {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 32rpx;
  background: #1f2937;
  color: #FFFFFF;
  border-radius: 999rpx;
  font-size: 28rpx;
  font-weight: 600;
}
.service-btn .arrow {
  font-size: 32rpx;
}

/* ========== 快捷入口 ========== */
.quick-entries {
  display: flex;
  gap: 20rpx;
  margin: 0 24rpx 32rpx;
}
.quick-item {
  flex: 1;
  padding: 28rpx 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx -8rpx rgba(0,0,0,0.05);
}
.quick-icon {
  font-size: 40rpx;
  margin-bottom: 12rpx;
}
.quick-icon.bargain { color: #22d3ee; }
.quick-icon.package { color: #34d399; }
.quick-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 4rpx;
}
.quick-label {
  font-size: 24rpx;
  color: #9ca3af;
}

/* ========== 本周热门区块 ========== */
.section { 
  margin: 48rpx 24rpx; 
  padding-bottom: calc(env(safe-area-inset-bottom) + 40rpx); 
}
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}
.section-title { 
  font-size: 36rpx; 
  font-weight: 700; 
  color: #1f2937; 
  letter-spacing: 1rpx; 
}
.section-more {
  font-size: 26rpx;
  color: #22c55e;
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-weight: 500;
}

/* ========== 热门商品列表 - 玻璃拟态卡片 ========== */
.hot-list { 
  display: grid; 
  grid-template-columns: repeat(2, 1fr); 
  gap: 20rpx; 
  margin-bottom: 48rpx; 
}
.hot-card { 
  position: relative;
  background: rgba(255, 255, 255, 0.9); 
  border-radius: 48rpx; 
  overflow: hidden; 
  box-shadow: 0 8rpx 40rpx -10rpx rgba(0,0,0,0.05); 
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  transition: transform 0.2s, box-shadow 0.2s; 
  display: flex; 
  flex-direction: column; 
  backdrop-filter: blur(10px);
}
.hot-card:active { 
  transform: scale(0.97); 
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08); 
}
.hot-cover { 
  width: 100%; 
  height: 320rpx; 
  background: #f0f9ff; 
  flex-shrink: 0; 
  border-radius: 40rpx 40rpx 0 0;
}
.hot-info { 
  padding: 24rpx; 
  display: flex; 
  flex-direction: column; 
}
.h-name { 
  font-size: 28rpx; 
  color: #1f2937; 
  font-weight: 600; 
  line-height: 1.4; 
  margin-bottom: 12rpx; 
  display: -webkit-box; 
  -webkit-line-clamp: 1; 
  -webkit-box-orient: vertical; 
  overflow: hidden; 
  text-overflow: ellipsis; 
}
.h-price { 
  display: flex; 
  align-items: center; 
  justify-content: space-between;
}
.price { 
  font-size: 36rpx; 
  font-weight: 700; 
  color: #d97706; 
}
.save { 
  font-size: 22rpx; 
  color: #9ca3af; 
  background: rgba(34, 211, 153, 0.1); 
  padding: 6rpx 16rpx; 
  border-radius: 999rpx; 
}
.cart-btn {
  width: 56rpx;
  height: 56rpx;
  background: #1f2937;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

/* ========== NEW标签 - 渐变胶囊 ========== */
.hot-card .new-tag {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  padding: 10rpx 24rpx;
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%);
  color: #FFFFFF;
  font-size: 22rpx;
  font-weight: 700;
  border-radius: 999rpx;
  z-index: 2;
  box-shadow: 0 8rpx 20rpx -8rpx rgba(52, 211, 153, 0.5);
}
