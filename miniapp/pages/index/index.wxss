/**index.wxss**/
/* 小迪严选首页 - ZenLife 2.0 Fresh Nature Gradient */
page { 
  background: linear-gradient(180deg, #e0f2fe 0%, #f0f9ff 50%, #dcfce7 100%);
  background-attachment: fixed;
  color: #1f2937; 
  min-height: 100vh; 
}
.page-scroll { min-height: 100vh; }
.page { padding-top: calc(44px + env(safe-area-inset-top)); }

/* ========== 满屏全屏页 - 清新渐变 ========== */
.fullscreen-banner { 
  position: relative; 
  width: 100%; 
  height: 100vh; 
  min-height: 100vh; 
  overflow: hidden; 
  background: linear-gradient(135deg, #38bdf8 0%, #22d3ee 40%, #34d399 100%);
}
.fullscreen-img { width: 100%; height: 100%; display: block; opacity: 0.3; }
.fullscreen-overlay { 
  position: absolute; 
  top: 0; left: 0; right: 0; bottom: 0; 
  background: linear-gradient(to top, rgba(16, 185, 129, 0.4), rgba(34, 211, 238, 0.2), transparent); 
}
.fullscreen-content { 
  position: absolute; 
  left: 32rpx; 
  right: 32rpx;
  bottom: 200rpx; 
  z-index: 10; 
  text-align: center;
}
.fullscreen-title { 
  font-size: 160rpx; 
  font-weight: 800; 
  color: #FFFFFF; 
  margin-bottom: 24rpx;
  text-shadow: 0 8rpx 32rpx rgba(0,0,0,0.2);
}
.fullscreen-subtitle { 
  font-size: 48rpx; 
  font-weight: 700;
  color: rgba(255, 255, 255, 0.95); 
  margin-bottom: 16rpx;
  letter-spacing: 8rpx;
}
.fullscreen-desc { 
  font-size: 36rpx; 
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9); 
  margin-bottom: 48rpx; 
}
.fullscreen-action { 
  display: inline-flex; 
  align-items: center; 
  gap: 16rpx; 
  padding: 28rpx 56rpx; 
  background: rgba(255, 255, 255, 0.95); 
  border-radius: 999rpx; 
  font-size: 32rpx; 
  font-weight: 700; 
  color: #22c55e;
  box-shadow: 0 16rpx 48rpx -12rpx rgba(52, 211, 153, 0.5);
}
.fullscreen-action .arrow { font-size: 36rpx; }

/* ========== 新品推荐 - 玻璃拟态卡片 ========== */
.new-products-banner { 
  position: relative; 
  width: calc(100% - 48rpx); 
  height: 480rpx; 
  border-radius: 48rpx; 
  overflow: hidden; 
  margin: 32rpx 24rpx; 
  box-shadow: 0 20rpx 60rpx -20rpx rgba(34, 197, 94, 0.2); 
}
.new-products-img { width: 100%; height: 100%; display: block; }
.new-products-overlay { 
  position: absolute; 
  bottom: 0; left: 0; right: 0; 
  padding: 48rpx 40rpx; 
  background: linear-gradient(to top, rgba(16, 185, 129, 0.85), rgba(34, 211, 238, 0.4), transparent); 
}
.new-products-title { 
  font-size: 56rpx; 
  font-weight: 800; 
  color: #FFFFFF; 
  margin-bottom: 16rpx; 
  text-shadow: 0 4rpx 16rpx rgba(0,0,0,0.2); 
}
.new-products-desc { 
  font-size: 30rpx; 
  font-weight: 500;
  color: rgba(255, 255, 255, 0.95); 
}

/* ========== 本周热门区块 ========== */
.section { 
  margin: 48rpx 24rpx; 
  padding-bottom: calc(env(safe-area-inset-bottom) + 40rpx); 
}
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}
.section-title { 
  font-size: 36rpx; 
  font-weight: 700; 
  color: #1f2937; 
  letter-spacing: 1rpx; 
}
.section-more {
  font-size: 26rpx;
  color: #22c55e;
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-weight: 500;
}

/* ========== 热门商品列表 - 玻璃拟态卡片 ========== */
.hot-list { 
  display: grid; 
  grid-template-columns: repeat(2, 1fr); 
  gap: 20rpx; 
  margin-bottom: 48rpx; 
}
.hot-card { 
  position: relative;
  background: rgba(255, 255, 255, 0.9); 
  border-radius: 48rpx; 
  overflow: hidden; 
  box-shadow: 0 8rpx 40rpx -10rpx rgba(0,0,0,0.05); 
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  transition: transform 0.2s, box-shadow 0.2s; 
  display: flex; 
  flex-direction: column; 
  backdrop-filter: blur(10px);
}
.hot-card:active { 
  transform: scale(0.97); 
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08); 
}
.hot-cover { 
  width: 100%; 
  height: 320rpx; 
  background: #f0f9ff; 
  flex-shrink: 0; 
  border-radius: 40rpx 40rpx 0 0;
}
.hot-info { 
  padding: 24rpx; 
  display: flex; 
  flex-direction: column; 
}
.h-name { 
  font-size: 28rpx; 
  color: #1f2937; 
  font-weight: 600; 
  line-height: 1.4; 
  margin-bottom: 12rpx; 
  display: -webkit-box; 
  -webkit-line-clamp: 1; 
  -webkit-box-orient: vertical; 
  overflow: hidden; 
  text-overflow: ellipsis; 
}
.h-price { 
  display: flex; 
  align-items: center; 
  justify-content: space-between;
}
.price { 
  font-size: 36rpx; 
  font-weight: 700; 
  color: #d97706; 
}
.save { 
  font-size: 22rpx; 
  color: #9ca3af; 
  background: rgba(34, 211, 153, 0.1); 
  padding: 6rpx 16rpx; 
  border-radius: 999rpx; 
}

/* ========== NEW标签 - 渐变胶囊 ========== */
.hot-card .new-tag {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  padding: 10rpx 24rpx;
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%);
  color: #FFFFFF;
  font-size: 22rpx;
  font-weight: 700;
  border-radius: 999rpx;
  z-index: 2;
  box-shadow: 0 8rpx 20rpx -8rpx rgba(52, 211, 153, 0.5);
}
