.page-container {
  min-height: 100vh;
  background: #FAFAFA;
}

/* Toast */
.toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
  background: rgba(0,0,0,0.75);
  color: #fff;
  padding: 16rpx 40rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  opacity: 0;
  transition: opacity 0.2s;
}
.toast.show { opacity: 1; }

/* Modal */
.modal-mask {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.4);
  z-index: 90;
  display: flex;
  align-items: center;
  justify-content: center;
}
.modal-dialog {
  width: 540rpx;
  background: #fff;
  border-radius: 40rpx;
  overflow: hidden;
}
.modal-body {
  padding: 40rpx 32rpx 32rpx;
  text-align: center;
}
.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1D1D1F;
  margin-bottom: 16rpx;
}
.modal-desc {
  font-size: 26rpx;
  color: #6E6E73;
}
.modal-actions {
  display: flex;
  border-top: 1rpx solid #E5E5EA;
}
.modal-btn {
  flex: 1;
  padding: 24rpx 0;
  text-align: center;
  font-size: 34rpx;
}
.modal-cancel {
  color: #6E6E73;
  border-right: 1rpx solid #E5E5EA;
}
.modal-confirm {
  color: #1D1D1F;
  font-weight: 500;
}

/* Nav Bar */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 50;
  background: rgba(255,255,255,0.95);
  backdrop-filter: blur(20px);
  border-bottom: 1rpx solid #E5E5EA;
}
.nav-content {
  height: 88rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.nav-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1D1D1F;
}
.nav-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.nav-icon-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}
.nav-text-btn {
  font-size: 30rpx;
  color: #6E6E73;
  white-space: nowrap;
}
.nav-text-bold {
  color: #1D1D1F;
  font-weight: 500;
}

/* Category Bar */
.category-bar {
  position: fixed;
  left: 0;
  right: 0;
  z-index: 40;
  background: rgba(255,255,255,0.95);
  backdrop-filter: blur(20px);
  border-bottom: 1rpx solid #E5E5EA;
}
.category-scroll {
  white-space: nowrap;
}
.category-list {
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
  gap: 16rpx;
}
.category-chip {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 0 32rpx;
  height: 72rpx;
  border-radius: 36rpx;
  white-space: nowrap;
  background: #fff;
  border: 2rpx solid #D2D2D7;
  transition: all 0.2s;
}
.category-chip.active {
  background: #F5F5F7;
  border-color: #C7C7CC;
}
.category-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1D1D1F;
}

/* Material Area */
.material-area {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}
.material-stats {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 32rpx;
}
.stats-count {
  font-size: 26rpx;
  color: #6E6E73;
}
.stats-manage {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #1D1D1F;
}
.stats-arrow {
  margin-left: 4rpx;
}

/* Material Grid */
.material-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 0 24rpx;
  gap: 20rpx;
}
.material-card {
  width: calc(50% - 10rpx);
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  border: 2rpx solid #E5E5EA;
  transition: all 0.2s;
}
.material-card.selected {
  border-color: #1D1D1F;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}
.material-img-wrap {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  background: #F5F5F7;
  overflow: hidden;
}
.material-img {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
}
.select-circle {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 4rpx solid #D2D2D7;
  background: rgba(255,255,255,0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  font-size: 20rpx;
  color: #fff;
}
.select-circle.checked {
  background: #1D1D1F;
  border-color: #1D1D1F;
}
.date-tag {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  background: rgba(255,255,255,0.9);
  backdrop-filter: blur(8px);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  z-index: 10;
}
.date-tag text {
  font-size: 20rpx;
  color: #6E6E73;
}
.more-btn {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #fff;
  z-index: 10;
  background: rgba(0,0,0,0.3);
  border-radius: 50%;
}
.material-info {
  padding: 20rpx 24rpx;
}
.material-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #1D1D1F;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.material-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}
.material-tag {
  font-size: 22rpx;
  color: #6E6E73;
  background: #F5F5F7;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx 0;
}
.empty-icon {
  font-size: 128rpx;
  color: #C6C6C8;
  margin-bottom: 24rpx;
}
.empty-text {
  font-size: 30rpx;
  color: #6E6E73;
  margin-bottom: 32rpx;
}
.empty-btn {
  padding: 0 48rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  border: 2rpx solid #D2D2D7;
  color: #1D1D1F;
  border-radius: 32rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* Bottom Tip */
.bottom-tip {
  text-align: center;
  padding: 48rpx 0;
  font-size: 26rpx;
  color: #6E6E73;
}

/* Manage Bar */
.manage-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 98rpx;
  background: #fff;
  border-top: 1rpx solid #E5E5EA;
  z-index: 50;
  padding: 16rpx 32rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.manage-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.select-circle-small {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 4rpx solid #D2D2D7;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #fff;
}
.select-circle-small.checked {
  background: #1D1D1F;
  border-color: #1D1D1F;
}
.manage-text {
  font-size: 28rpx;
  color: #1D1D1F;
}
.manage-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.manage-action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 0 24rpx;
  height: 80rpx;
  border-radius: 28rpx;
  border: 2rpx solid #D2D2D7;
  background: #fff;
  font-size: 28rpx;
  font-weight: 500;
  color: #1D1D1F;
  white-space: nowrap;
}
.manage-action-btn.disabled {
  background: #F5F5F7;
  border-color: #E5E5EA;
  color: #AEAEB2;
}
.manage-icon-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 28rpx;
  border: 2rpx solid #D2D2D7;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #1D1D1F;
}
.manage-icon-btn.disabled {
  background: #F5F5F7;
  border-color: #E5E5EA;
  color: #AEAEB2;
}

/* FAB Button */
.fab-btn {
  position: fixed;
  right: 32rpx;
  z-index: 50;
  width: 112rpx;
  height: 112rpx;
  background: #fff;
  border: 2rpx solid #D2D2D7;
  border-radius: 50%;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.12);
  display: flex;
  align-items: center;
  justify-content: center;
}
.fab-icon {
  font-size: 48rpx;
  color: #1D1D1F;
  transition: transform 0.2s;
}
.fab-btn.active .fab-icon {
  transform: rotate(90deg);
}

/* Menu */
.menu-mask {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.4);
  z-index: 40;
}
.menu-panel {
  position: fixed;
  right: 32rpx;
  z-index: 50;
  background: #fff;
  border-radius: 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(0,0,0,0.12);
  overflow: hidden;
  width: 440rpx;
}
.menu-header {
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #E5E5EA;
}
.menu-header-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1D1D1F;
}
.menu-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx 32rpx;
}
.menu-item.border-bottom {
  border-bottom: 1rpx solid #E5E5EA;
}
.menu-item-icon-wrap {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #F5F5F7;
}
.menu-item-icon {
  font-size: 32rpx;
}
.menu-item-name {
  flex: 1;
  font-size: 28rpx;
  color: #1D1D1F;
}
.menu-item-arrow {
  font-size: 32rpx;
  color: #C6C6C8;
}
