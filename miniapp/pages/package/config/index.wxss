/* 套餐配置页 — Apple 风格 */
page { background: #F5F5F7; color: #1D1D1F; }
.page { padding-top: calc(88rpx + env(safe-area-inset-top)); }
.nav-bar {
  position: fixed; top: 0; left: 0; right: 0; z-index: 40;
  background: rgba(255,255,255,0.95); backdrop-filter: saturate(180%) blur(40rpx);
  border-bottom: 1rpx solid #E5E5EA;
  display: flex; align-items: center; justify-content: space-between;
  height: calc(88rpx + env(safe-area-inset-top)); padding: env(safe-area-inset-top) 32rpx 0;
}
.nav-back { width: 64rpx; height: 64rpx; display: flex; align-items: center; justify-content: center; font-size: 40rpx; }
.nav-title { font-size: 34rpx; font-weight: 600; }
.nav-placeholder { width: 64rpx; }

.content { padding: 24rpx 32rpx; }

.pkg-header { margin-bottom: 32rpx; }
.pkg-name { font-size: 40rpx; font-weight: 700; color: #1D1D1F; }
.pkg-base-price { font-size: 26rpx; color: #8E8E93; margin-top: 8rpx; }

.category-section { margin-bottom: 32rpx; }
.category-title { font-size: 30rpx; font-weight: 600; color: #1D1D1F; margin-bottom: 16rpx; }
.category-hint { font-size: 24rpx; color: #8E8E93; font-weight: 400; }

.product-list { display: flex; flex-direction: column; gap: 12rpx; }

.product-card {
  display: flex; align-items: center; gap: 20rpx;
  background: #FFFFFF; border-radius: 20rpx; padding: 20rpx;
  border: 2rpx solid #E5E5EA; position: relative;
}
.product-card.selected { border-color: #1D1D1F; }
.product-card:active { background: #F5F5F7; }

.product-img { width: 120rpx; height: 120rpx; border-radius: 16rpx; flex-shrink: 0; background: #F5F5F7; }
.product-info { flex: 1; min-width: 0; }
.product-name { font-size: 28rpx; font-weight: 500; color: #1D1D1F; }
.product-price { font-size: 30rpx; font-weight: 600; color: #1D1D1F; margin-top: 8rpx; }
.product-check {
  position: absolute; top: 16rpx; right: 16rpx;
  width: 40rpx; height: 40rpx; border-radius: 50%;
  background: #1D1D1F; color: #FFFFFF;
  display: flex; align-items: center; justify-content: center; font-size: 24rpx;
}

.text-ellipsis { overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }

/* 底部栏 */
.bottom-bar {
  position: fixed; bottom: 0; left: 0; right: 0;
  background: rgba(255,255,255,0.95); backdrop-filter: saturate(180%) blur(40rpx);
  border-top: 1rpx solid #E5E5EA;
  display: flex; align-items: center; justify-content: space-between;
  padding: 16rpx 32rpx; padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}
.bar-info { flex: 1; }
.bar-count { font-size: 24rpx; color: #8E8E93; }
.bar-price { display: flex; align-items: baseline; gap: 4rpx; margin-top: 4rpx; }
.bar-label { font-size: 26rpx; color: #6E6E73; }
.bar-amount { font-size: 40rpx; font-weight: 700; color: #1D1D1F; }

.bar-btn {
  height: 88rpx; padding: 0 48rpx;
  display: flex; align-items: center; justify-content: center;
  background: #1D1D1F; border-radius: 20rpx;
  font-size: 30rpx; font-weight: 500; color: #FFFFFF;
}
.bar-btn.disabled { background: #E5E5EA; color: #C6C6C8; }
.bar-btn:active { background: #000000; }
