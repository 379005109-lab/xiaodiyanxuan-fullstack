/**package/index.wxss**/
/* 小迪严选套餐页 - ZenLife 2.0 */
page { 
  background: linear-gradient(180deg, #e0f2fe 0%, #f0f9ff 50%, #dcfce7 100%);
  background-attachment: fixed;
  color: #1f2937; 
}
.scrollarea { 
  min-height: 100vh; 
}
.page { 
  padding: 24rpx; 
  padding-top: calc(env(safe-area-inset-top) + 100rpx); 
  padding-bottom: calc(env(safe-area-inset-bottom) + 180rpx);
  box-sizing: border-box; 
}

/* ========== 页面标题 ========== */
.page-header {
  margin-bottom: 24rpx;
}
.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f2937;
}

/* ========== 套餐列表 ========== */
.pkg-list { 
  display: flex;
  flex-direction: column;
  gap: 24rpx; 
}
.pkg-card-new { 
  width: 100%;
  background: rgba(255, 255, 255, 0.95); 
  border-radius: 32rpx; 
  overflow: hidden;
  box-shadow: 0 12rpx 40rpx -16rpx rgba(0,0,0,0.08);
}
.pkg-cover-wrap {
  position: relative;
}
.pkg-cover-new { 
  width: 100%; 
  height: 360rpx;
  background: #f0f9ff;
}
.pkg-tag {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  padding: 12rpx 24rpx;
  background: rgba(31, 41, 55, 0.85);
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 999rpx;
}
.pkg-info-new {
  padding: 24rpx 28rpx 28rpx;
}
.pkg-name { 
  font-size: 36rpx; 
  font-weight: 700; 
  color: #1f2937;
  margin-bottom: 8rpx;
}
.pkg-desc {
  font-size: 26rpx;
  color: #6B7280;
  margin-bottom: 16rpx;
}
.pkg-price-row { 
  display: flex; 
  align-items: center; 
  justify-content: space-between;
}
.pkg-price-info {
  display: flex;
  flex-direction: column;
}
.pkg-price-label {
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 4rpx;
}
.pkg-price-value { 
  font-size: 44rpx; 
  color: #d97706; 
  font-weight: 700; 
}
.pkg-view-btn {
  padding: 16rpx 36rpx;
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%);
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 999rpx;
  box-shadow: 0 8rpx 24rpx -8rpx rgba(52, 211, 153, 0.5);
}

/* 加载和空状态 */
.loading-text, .empty-text {
  text-align: center;
  padding: 60rpx 0;
  color: #9CA3AF;
  font-size: 28rpx;
}

/* ========== 底部操作栏 ========== */
.bottom-bar { 
  position: fixed; 
  left: 0; right: 0; bottom: 0; 
  height: 120rpx; 
  background: var(--color-card); 
  display: flex; 
  align-items: center; 
  gap: 24rpx;
  padding: 0 24rpx; 
  box-shadow: 0 -8rpx 24rpx rgba(0,0,0,0.06); 
  box-sizing: border-box; 
  padding-bottom: env(safe-area-inset-bottom);
}
.sum {
  display: flex;
  align-items: center;
  gap: 8rpx;
}
.sum .label { 
  font-size: 24rpx; 
  color: #6B7280; 
}
.sum .count {
  font-size: 28rpx;
  color: var(--color-primary);
  font-weight: 600;
}
.sum-price {
  flex: 1;
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}
.sum-price .label { 
  font-size: 24rpx; 
  color: #6B7280; 
}
.sum-price .value { 
  font-size: 36rpx; 
  color: var(--color-accent); 
  font-weight: 700; 
}
.btn-primary { 
  height: 80rpx;
  min-height: 80rpx;
  border-radius: 12rpx; 
  padding: 0 48rpx; 
  background: var(--color-primary) !important; 
  color: #FFFFFF !important; 
  border: none; 
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}
.btn-primary::after {
  display: none;
}


