/**package/index.wxss**/
/* 小迪严选套餐页 - 按UI设计规范 */
page { 
  background: var(--color-bg); 
  color: var(--color-text); 
}
.scrollarea { 
  height: 100vh; 
}
.page { 
  padding: 24rpx 24rpx 180rpx; 
  padding-top: calc(44px + env(safe-area-inset-top) + 24rpx); 
  box-sizing: border-box; 
}

/* ========== 顶部Banner ========== */
.pkg-banner { 
  width: 100%; 
  height: 320rpx; 
  border-radius: 16rpx; 
  margin-bottom: 24rpx; 
  background: var(--color-primary); 
  position: relative;
  overflow: hidden;
}
.pkg-banner-img {
  width: 100%;
  height: 100%;
}
.pkg-banner-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx;
  background: linear-gradient(to top, rgba(20, 69, 47, 0.9), transparent);
}
.pkg-banner-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #FFFFFF;
}
.pkg-banner-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 8rpx;
}

/* ========== 分类标签 ========== */
.tabs { 
  display: flex; 
  gap: 12rpx; 
  padding: 0 0 24rpx; 
  overflow-x: auto;
  white-space: nowrap;
}
.tab { 
  padding: 16rpx 28rpx; 
  color: var(--color-text); 
  font-size: 26rpx;
  background: var(--color-card);
  border-radius: 9999rpx;
  border: 2rpx solid var(--color-border);
  flex-shrink: 0;
}
.tab.active { 
  color: #FFFFFF; 
  font-weight: 600; 
  background: var(--color-primary);
  border-color: var(--color-primary);
}

/* ========== 套餐列表 ========== */
.pkg-list { 
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx; 
}
.pkg-card-new { 
  background: var(--color-card); 
  border-radius: 16rpx; 
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
}
.pkg-cover-new { 
  width: 100%; 
  height: 200rpx; 
  background: var(--color-bg);
}
.pkg-info-new {
  padding: 16rpx 20rpx 20rpx;
}
.pkg-name { 
  font-size: 28rpx; 
  font-weight: 600; 
  color: var(--color-text);
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.pkg-price-row { 
  display: flex; 
  align-items: center; 
  gap: 12rpx; 
}
.pkg-price-value { 
  font-size: 32rpx; 
  color: var(--color-accent); 
  font-weight: 700; 
}
.pkg-save-tag { 
  font-size: 20rpx; 
  color: var(--color-primary); 
  background: rgba(20, 69, 47, 0.1); 
  padding: 4rpx 10rpx; 
  border-radius: 4rpx;
  font-weight: 500;
}

/* ========== 底部操作栏 ========== */
.bottom-bar { 
  position: fixed; 
  left: 0; right: 0; bottom: 0; 
  height: 120rpx; 
  background: var(--color-card); 
  display: flex; 
  align-items: center; 
  gap: 24rpx;
  padding: 0 24rpx; 
  box-shadow: 0 -8rpx 24rpx rgba(0,0,0,0.06); 
  box-sizing: border-box; 
  padding-bottom: env(safe-area-inset-bottom);
}
.sum {
  display: flex;
  align-items: center;
  gap: 8rpx;
}
.sum .label { 
  font-size: 24rpx; 
  color: #6B7280; 
}
.sum .count {
  font-size: 28rpx;
  color: var(--color-primary);
  font-weight: 600;
}
.sum-price {
  flex: 1;
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}
.sum-price .label { 
  font-size: 24rpx; 
  color: #6B7280; 
}
.sum-price .value { 
  font-size: 36rpx; 
  color: var(--color-accent); 
  font-weight: 700; 
}
.btn-primary { 
  height: 80rpx;
  min-height: 80rpx;
  border-radius: 12rpx; 
  padding: 0 48rpx; 
  background: var(--color-primary) !important; 
  color: #FFFFFF !important; 
  border: none; 
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}
.btn-primary::after {
  display: none;
}


