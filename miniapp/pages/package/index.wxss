/**package/index.wxss**/
page { background: #FAFAFA; }

.page-container { min-height: 100vh; background: #FAFAFA; }

/* Nav Bar */
.nav-bar {
  position: fixed; top: 0; left: 0; right: 0; z-index: 50;
  background: rgba(255,255,255,0.95);
  backdrop-filter: blur(20px);
  border-bottom: 1rpx solid #E5E5EA;
}
.nav-content {
  height: 88rpx; padding: 0 32rpx;
  display: flex; align-items: center; justify-content: space-between;
}
.nav-title { font-size: 34rpx; font-weight: 700; color: #1D1D1F; }
.nav-right { display: flex; align-items: center; gap: 8rpx; }
.nav-link-icon { font-size: 32rpx; color: #6E6E73; }
.nav-link { font-size: 28rpx; color: #6E6E73; }

/* Scroll Area */
.scroll-area {
  position: fixed; left: 0; right: 0; bottom: 0;
}

/* Page Header */
.page-header { padding: 32rpx 32rpx 16rpx; }
.header-title { font-size: 48rpx; font-weight: 700; color: #1D1D1F; }
.header-desc { font-size: 28rpx; color: #6E6E73; margin-top: 8rpx; }

/* Package List */
.pkg-list { padding: 16rpx 32rpx; }
.pkg-card {
  background: #FFFFFF; border-radius: 32rpx;
  border: 1rpx solid #E5E5EA; overflow: hidden;
  margin-bottom: 24rpx;
}
.pkg-main {
  display: flex; padding: 24rpx; gap: 24rpx;
}
.pkg-img-wrap {
  width: 200rpx; height: 200rpx; flex-shrink: 0;
  border-radius: 24rpx; overflow: hidden; background: #F5F5F7;
}
.pkg-img { width: 100%; height: 100%; }
.pkg-info { flex: 1; display: flex; flex-direction: column; justify-content: center; min-width: 0; }
.pkg-name {
  font-size: 32rpx; font-weight: 600; color: #1D1D1F;
  overflow: hidden; text-overflow: ellipsis; white-space: nowrap;
  margin-bottom: 12rpx;
}
.pkg-tags { display: flex; flex-wrap: wrap; gap: 8rpx; margin-bottom: 12rpx; }
.pkg-tag {
  font-size: 22rpx; color: #6E6E73; background: #F5F5F7;
  padding: 6rpx 16rpx; border-radius: 20rpx;
}
.pkg-price-row { display: flex; align-items: center; gap: 12rpx; }
.pkg-price { font-size: 36rpx; font-weight: 700; color: #1D1D1F; }
.pkg-items-count { font-size: 24rpx; color: #6E6E73; }

/* Action */
.pkg-action {
  padding: 0 24rpx 24rpx;
}
.pkg-config-btn {
  width: 100%; height: 80rpx;
  display: flex; align-items: center; justify-content: center;
  background: #FFFFFF; color: #1D1D1F;
  border: 2rpx solid #D2D2D7; border-radius: 28rpx;
  font-size: 28rpx; font-weight: 500;
}
.pkg-config-btn:active { background: #F5F5F7; }

/* Bottom Tip */
.bottom-tip {
  text-align: center; padding: 48rpx 0;
  font-size: 26rpx; color: #6E6E73;
}

/* Empty State */
.empty-state {
  display: flex; flex-direction: column; align-items: center;
  justify-content: center; padding: 160rpx 0;
}
.empty-icon { font-size: 96rpx; color: #E5E5EA; margin-bottom: 24rpx; }
.empty-text { font-size: 28rpx; color: #8E8E93; }
