<view class="page-container">
	<!-- 顶部导航栏 -->
	<view class="nav-bar" style="padding-top: {{statusBarHeight}}px;">
		<view class="nav-content">
			<view class="nav-title">套餐</view>
			<view class="nav-right" bindtap="goMyPackages">
				<text class="nav-link-icon ri ri-file-list-3-line"></text>
				<text class="nav-link">我的套餐</text>
			</view>
		</view>
	</view>

	<!-- 主体内容 -->
	<scroll-view class="scroll-area" scroll-y enhanced show-scrollbar="{{false}}" style="top: {{navBarHeight}}px;">
		<!-- 页面标题区 -->
		<view class="page-header">
			<view class="header-title">灵感套系</view>
			<view class="header-desc">精选家具套餐，一站式配齐</view>
		</view>

		<!-- 套餐列表 -->
		<view class="pkg-list">
			<block wx:for="{{packages}}" wx:key="id">
				<view class="pkg-card">
					<view class="pkg-main">
						<view class="pkg-img-wrap">
							<image class="pkg-img" src="{{item.image}}" mode="aspectFill"></image>
						</view>
						<view class="pkg-info">
							<view class="pkg-name">{{item.name}}</view>
							<view class="pkg-tags">
								<text class="pkg-tag" wx:if="{{item.style}}">{{item.style}}</text>
								<text class="pkg-tag" wx:if="{{item.roomType}}">{{item.roomType}}</text>
							</view>
							<view class="pkg-price-row">
								<text class="pkg-price">¥{{item.price}}</text>
								<text class="pkg-items-count" wx:if="{{item.contents.length > 0}}">可选{{item.contents.length}}件</text>
							</view>
						</view>
					</view>
					<view class="pkg-action">
						<view class="pkg-config-btn" data-id="{{item.id}}" bindtap="goPackageConfig">配置此套系</view>
					</view>
				</view>
			</block>
		</view>

		<!-- 底部提示 -->
		<view class="bottom-tip" wx:if="{{packages.length > 0}}">已展示全部套餐</view>

		<!-- 空状态 -->
		<view class="empty-state" wx:if="{{!isLoading && packages.length === 0}}">
			<text class="empty-icon ri ri-inbox-line"></text>
			<text class="empty-text">暂无套餐</text>
		</view>

		<view style="height: 160rpx;"></view>
	</scroll-view>
</view>
