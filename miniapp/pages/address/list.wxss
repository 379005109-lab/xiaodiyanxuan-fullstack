.container { padding: 20rpx; min-height: 100vh; background: #f5f5f5; }
.address-item { background: #fff; padding: 20rpx; border-radius: 16rpx; margin-bottom: 20rpx; display: flex; align-items: center; }
.info { flex: 1; }
.name { font-weight: bold; display: block; }
.detail { color: #666; font-size: 26rpx; margin-top: 10rpx; display: block; }
.edit { color: #4f46e5; font-size: 26rpx; }
.empty { text-align: center; padding: 60rpx; color: #999; }
.add-btn { background: #4f46e5; color: #fff; text-align: center; padding: 24rpx; border-radius: 50rpx; margin-top: 40rpx; }
