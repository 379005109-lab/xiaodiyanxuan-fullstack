.container { padding: 20rpx; background: #f5f5f5; min-height: 100vh; }
.form-item { display: flex; align-items: center; background: #fff; padding: 30rpx; margin-bottom: 2rpx; }
.form-item text:first-child { width: 160rpx; color: #333; }
.form-item input { flex: 1; }
.form-item .value { flex: 1; color: #999; text-align: right; }
.submit-btn { background: #4f46e5; color: #fff; text-align: center; padding: 24rpx; border-radius: 50rpx; margin-top: 60rpx; }
