/* 帮砍页 — Apple 风格 */
page { background: #F5F5F7; color: #1D1D1F; }
.page { padding-top: calc(88rpx + env(safe-area-inset-top)); }
.nav-bar {
  position: fixed; top: 0; left: 0; right: 0; z-index: 40;
  background: rgba(255,255,255,0.95); backdrop-filter: saturate(180%) blur(40rpx);
  border-bottom: 1rpx solid #E5E5EA;
  display: flex; align-items: center; justify-content: space-between;
  height: calc(88rpx + env(safe-area-inset-top)); padding: env(safe-area-inset-top) 32rpx 0;
}
.nav-back { width: 64rpx; height: 64rpx; display: flex; align-items: center; justify-content: center; font-size: 40rpx; }
.nav-title { font-size: 34rpx; font-weight: 600; }
.nav-placeholder { width: 64rpx; }

.content { padding: 24rpx 32rpx; }

.product-card {
  display: flex; gap: 20rpx; background: #FFFFFF; border-radius: 24rpx; padding: 24rpx;
  border: 1rpx solid #E5E5EA; margin-bottom: 20rpx;
}
.product-img { width: 160rpx; height: 160rpx; border-radius: 20rpx; flex-shrink: 0; background: #F5F5F7; }
.product-info { flex: 1; display: flex; flex-direction: column; justify-content: space-between; }
.product-name { font-size: 30rpx; font-weight: 600; color: #1D1D1F; }
.product-price-row { display: flex; align-items: baseline; gap: 12rpx; }
.price-current { font-size: 36rpx; font-weight: 700; color: #1D1D1F; }
.price-original { font-size: 24rpx; color: #8E8E93; text-decoration: line-through; }

.progress-card {
  background: #FFFFFF; border-radius: 24rpx; padding: 28rpx;
  border: 1rpx solid #E5E5EA; margin-bottom: 24rpx;
}
.progress-header { display: flex; justify-content: space-between; margin-bottom: 16rpx; }
.progress-label { font-size: 28rpx; font-weight: 500; color: #1D1D1F; }
.progress-value { font-size: 28rpx; font-weight: 600; color: #1D1D1F; }
.progress-bar { height: 8rpx; background: #E5E5EA; border-radius: 8rpx; overflow: hidden; }
.progress-fill { height: 100%; background: #1D1D1F; border-radius: 8rpx; transition: width 0.3s; }
.progress-info { display: flex; justify-content: space-between; margin-top: 12rpx; font-size: 24rpx; color: #8E8E93; }

.help-btn {
  height: 96rpx; display: flex; align-items: center; justify-content: center;
  background: #1D1D1F; border-radius: 24rpx; font-size: 32rpx; font-weight: 600; color: #FFFFFF;
  margin-bottom: 32rpx;
}
.help-btn:active { background: #000000; }
.help-btn.disabled { background: #E5E5EA; color: #C6C6C8; }

.record-section { margin-top: 8rpx; }
.record-title { font-size: 30rpx; font-weight: 600; color: #1D1D1F; margin-bottom: 16rpx; }
.record-list { display: flex; flex-direction: column; gap: 0; background: #FFFFFF; border-radius: 24rpx; border: 1rpx solid #E5E5EA; overflow: hidden; }
.record-item { display: flex; align-items: center; gap: 16rpx; padding: 20rpx 24rpx; border-bottom: 1rpx solid #E5E5EA; }
.record-item:last-child { border-bottom: none; }
.record-avatar { width: 64rpx; height: 64rpx; border-radius: 50%; flex-shrink: 0; }
.record-avatar-placeholder { width: 64rpx; height: 64rpx; border-radius: 50%; background: #F5F5F7; display: flex; align-items: center; justify-content: center; font-size: 28rpx; color: #8E8E93; flex-shrink: 0; }
.record-info { flex: 1; }
.record-name { font-size: 28rpx; font-weight: 500; color: #1D1D1F; display: block; }
.record-time { font-size: 22rpx; color: #8E8E93; display: block; margin-top: 4rpx; }
.record-amount { font-size: 28rpx; font-weight: 600; color: #FF3B30; flex-shrink: 0; }
