/**bargain/index.wxss**/
/* 砍价专区 - ZenLife 2.0 设计 */
page {
  font-family: -apple-system, BlinkMacSystemFont, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "Helvetica Neue", Arial, sans-serif;
  background: linear-gradient(180deg, #e0f2fe 0%, #f0f9ff 50%, #dcfce7 100%);
  background-attachment: fixed;
  color: #1f2937;
}
.scrollarea { min-height: 100vh; }
.page { 
  padding: 24rpx; 
  padding-top: calc(env(safe-area-inset-top) + 100rpx);
  padding-bottom: calc(env(safe-area-inset-bottom) + 160rpx);
}

/* ========== 顶部活动Banner ========== */
.bargain-banner {
  position: relative;
  padding: 32rpx;
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
}
.banner-bg {
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%);
  opacity: 0.95;
}
.banner-content {
  position: relative;
  z-index: 1;
}
.banner-title {
  font-size: 40rpx;
  font-weight: 800;
  color: #fff;
  margin-bottom: 8rpx;
}
.banner-subtitle {
  font-size: 26rpx;
  color: rgba(255,255,255,0.9);
}
.banner-action {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 1;
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 12rpx 24rpx;
  background: rgba(255,255,255,0.25);
  border-radius: 999rpx;
  color: #fff;
  font-size: 24rpx;
  font-weight: 600;
}
.banner-action .arrow { font-size: 28rpx; }

/* ========== 章节标题 ========== */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}
.section-desc {
  font-size: 24rpx;
  color: #9ca3af;
}

/* ========== 商品网格 ========== */
.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}
.product-card-new {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
}
.product-image-box {
  position: relative;
  width: 100%;
  padding-top: 100%;
  background: #f8fafc;
}
.product-img {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
}
.discount-tag {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  padding: 6rpx 12rpx;
  background: #ef4444;
  color: #fff;
  font-size: 22rpx;
  font-weight: 700;
  border-radius: 8rpx;
}
.product-detail {
  padding: 16rpx;
}
.product-name-new {
  font-size: 26rpx;
  font-weight: 600;
  color: #1f2937;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.product-prices {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  margin-bottom: 12rpx;
}
.current-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #ef4444;
}
.origin-price {
  font-size: 22rpx;
  color: #9ca3af;
  text-decoration: line-through;
}
.product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.helper-info {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 20rpx;
  color: #6b7280;
}
.helper-dot-new {
  width: 10rpx;
  height: 10rpx;
  background: #22c55e;
  border-radius: 50%;
}
.cut-btn {
  padding: 10rpx 20rpx;
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%) !important;
  color: #fff !important;
  font-size: 22rpx;
  font-weight: 600;
  border-radius: 999rpx;
  border: none;
  line-height: 1;
}
.cut-btn::after { display: none; }

/* ========== 材质预览 ========== */
.material-preview {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin: 12rpx 0;
  padding: 8rpx 0;
  border-top: 1rpx solid #f3f4f6;
}
.material-thumb {
  width: 40rpx;
  height: 40rpx;
  border-radius: 6rpx;
  border: 1rpx solid #e5e7eb;
}
.material-more {
  font-size: 20rpx;
  color: #22d3ee;
  margin-left: auto;
}

/* ========== 我的砍价 - 网格卡片样式 ========== */
.my-bargain-section { 
  margin-top: 32rpx; 
}
.status-tag {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  padding: 6rpx 12rpx;
  background: #22c55e;
  color: #fff;
  font-size: 20rpx;
  font-weight: 600;
  border-radius: 8rpx;
}
.progress-bar-mini {
  height: 6rpx;
  background: #e5e7eb;
  border-radius: 3rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}
.progress-fill-mini {
  height: 100%;
  background: linear-gradient(90deg, #22d3ee 0%, #34d399 100%);
  border-radius: inherit;
}
.my-card-actions {
  display: flex;
  justify-content: center;
}
.action-btn {
  flex: 1;
  height: 48rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  border: none;
  padding: 0;
}
.action-btn.invite {
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%) !important;
  color: #fff !important;
}
.action-btn::after { display: none; }
.my-card {
  border: 2rpx solid rgba(34, 211, 153, 0.3);
}

/* ========== 规则说明 ========== */
.rules { 
  padding: 24rpx;
  padding-bottom: 60rpx; 
}
.rule-header { 
  font-size: 28rpx; 
  font-weight: 600; 
  color: #333333; 
  margin-bottom: 12rpx; 
}
.rule-body { 
  font-size: 24rpx; 
  color: #666666; 
  line-height: 1.8; 
  background: #FFFFFF; 
  border-radius: 12rpx; 
  padding: 24rpx; 
}
