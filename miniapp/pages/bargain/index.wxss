/**bargain/index.wxss**/
/* 砍价专区 - ZenLife 2.0 设计 */
page {
  font-family: -apple-system, BlinkMacSystemFont, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "Helvetica Neue", Arial, sans-serif;
  background: linear-gradient(180deg, #e0f2fe 0%, #f0f9ff 50%, #dcfce7 100%);
  background-attachment: fixed;
  color: #1f2937;
}
.scrollarea { min-height: 100vh; }
.page { 
  padding: 24rpx; 
  padding-top: calc(env(safe-area-inset-top) + 100rpx);
  padding-bottom: calc(env(safe-area-inset-bottom) + 160rpx);
}

/* ========== 顶部标题栏 ========== */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}
.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f2937;
}
.my-bargain-btn {
  padding: 16rpx 28rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 999rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #22c55e;
  border: 2rpx solid #22c55e;
}

/* ========== 筛选栏 ========== */
.filter-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  margin: 0 24rpx 24rpx;
  border-radius: 12rpx;
  padding: 24rpx 0;
}
.filter-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}
.filter-text { font-size: 28rpx; color: #333333; }
.filter-arrow { font-size: 20rpx; color: #999999; }
.filter-divider { width: 1rpx; height: 32rpx; background: #E0E0E0; }

/* ========== 筛选弹窗 ========== */
.filter-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
  display: flex;
  align-items: flex-end;
}
.filter-popup-content {
  width: 100%;
  background: var(--color-card);
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}
.filter-popup-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text);
  text-align: center;
  margin-bottom: 32rpx;
}
.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.filter-option {
  padding: 20rpx 32rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: var(--color-text);
  background: var(--color-bg);
  border: 2rpx solid var(--color-border);
}
.filter-option.active {
  background: var(--color-primary);
  color: #FFFFFF;
  border-color: var(--color-primary);
}

/* ========== 商品列表 ========== */
.product-list { padding: 0; }
.product-card {
  display: flex;
  gap: 24rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx -12rpx rgba(0,0,0,0.05);
}
/* 左侧图片 */
.product-image-wrap {
  position: relative;
  width: 220rpx;
  height: 220rpx;
  flex-shrink: 0;
}
.product-image {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
  background: #f0f9ff;
}
.helper-badge {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%);
  color: #FFFFFF;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 600;
}
.helper-icon { font-size: 20rpx; }
.helper-count { font-size: 22rpx; }
/* 右侧信息 */
.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}
.product-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f2937;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.product-desc {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.save-badge {
  display: inline-block;
  background: #FFF8E6;
  color: #B8860B;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  margin-bottom: 16rpx;
  align-self: flex-start;
}
.price-row {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  margin-bottom: 16rpx;
}
.price-origin { font-size: 24rpx; color: #9ca3af; text-decoration: line-through; }
.price-current { font-size: 40rpx; color: #d97706; font-weight: 700; }
.price-symbol { font-size: 28rpx; color: #d97706; font-weight: 600; }
.price-value { font-size: 40rpx; color: #d97706; font-weight: 700; }
/* 砍一刀按钮 */
.action-btns { display: flex; gap: 16rpx; margin-top: auto; }
.btn-start {
  padding: 16rpx 32rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #f59e0b 0%, #f97316 100%) !important;
  color: #FFFFFF !important;
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  border: none;
  box-shadow: 0 8rpx 24rpx -8rpx rgba(249, 115, 22, 0.5);
}
.btn-help {
  flex: 1;
  height: 68rpx;
  border-radius: 34rpx;
  background: #FFFFFF !important;
  color: #22c55e !important;
  font-size: 26rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  border: 2rpx solid #22c55e !important;
  padding: 0;
}
.btn-start::after, .btn-help::after { display: none; }

/* ========== 我的砍价 ========== */
.my-bargain { padding: 24rpx; }
.section-title-new { font-size: 32rpx; font-weight: 600; color: #333333; margin-bottom: 20rpx; }
.my-bargain-card { background: #FFFFFF; border-radius: 16rpx; padding: 24rpx; margin-bottom: 16rpx; }
.my-bargain-row { display: flex; gap: 20rpx; margin-bottom: 16rpx; }
.my-bargain-img { width: 140rpx; height: 140rpx; border-radius: 12rpx; background: #F5F5F5; flex-shrink: 0; }
.my-bargain-info { flex: 1; min-width: 0; }
.my-bargain-header { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 12rpx; }
.my-bargain-name { font-size: 28rpx; font-weight: 600; color: #333333; flex: 1; line-height: 1.4; }
.my-bargain-status { font-size: 22rpx; color: #1A3A2F; background: rgba(26, 58, 47, 0.1); padding: 6rpx 12rpx; border-radius: 4rpx; flex-shrink: 0; margin-left: 12rpx; }
.my-bargain-prices { display: flex; align-items: baseline; gap: 12rpx; margin-bottom: 12rpx; }
.my-bargain-target { font-size: 28rpx; font-weight: 600; color: #333333; }
.my-bargain-origin { font-size: 22rpx; color: #CCCCCC; text-decoration: line-through; }
.my-bargain-progress-wrap { display: flex; align-items: center; gap: 12rpx; }
.my-bargain-progress-bar { flex: 1; height: 6rpx; background: #EEEEEE; border-radius: 3rpx; overflow: hidden; }
.my-bargain-progress-fill { height: 100%; background: #1A3A2F; border-radius: inherit; }
.my-bargain-remain { font-size: 22rpx; color: #B8860B; flex-shrink: 0; }
.my-bargain-btns { display: flex; gap: 16rpx; }
.my-bargain-btn { flex: 1; height: 64rpx; border-radius: 32rpx; font-size: 26rpx; font-weight: 500; display: flex; align-items: center; justify-content: center; line-height: 1; border: none; padding: 0; }
.my-bargain-btn.invite { background: #1A3A2F !important; color: #FFFFFF !important; }
.my-bargain-btn.cancel { background: #FFFFFF !important; color: #999999 !important; border: 1rpx solid #E0E0E0 !important; }
.my-bargain-btn::after { display: none; }

/* ========== 规则说明 ========== */
.rules { 
  padding: 24rpx;
  padding-bottom: 60rpx; 
}
.rule-header { 
  font-size: 28rpx; 
  font-weight: 600; 
  color: #333333; 
  margin-bottom: 12rpx; 
}
.rule-body { 
  font-size: 24rpx; 
  color: #666666; 
  line-height: 1.8; 
  background: #FFFFFF; 
  border-radius: 12rpx; 
  padding: 24rpx; 
}
