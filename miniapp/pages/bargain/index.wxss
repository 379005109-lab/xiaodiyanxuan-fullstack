/**bargain/index.wxss**/
/* ZenLife 2.0 砍价专区 - 严格按设计规范 */
page {
  background: linear-gradient(180deg, #e0f2fe 0%, #f0f9ff 50%, #dcfce7 100%);
  min-height: 100vh;
}

/* ========== 玻璃拟态顶部 ========== */
.bargain-header-wrap {
  position: sticky;
  top: 0;
  z-index: 20;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255,255,255,0.7);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  padding: calc(env(safe-area-inset-top) + 16rpx) 48rpx 24rpx;
  border-radius: 0 0 64rpx 64rpx;
  box-shadow: 0 8rpx 32rpx -8rpx rgba(0,0,0,0.05);
  border-bottom: 2rpx solid rgba(255,255,255,0.5);
}
.header-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f2937;
}
.my-bargain-btn {
  padding: 12rpx 32rpx;
  background: rgba(255,255,255,0.8);
  color: #22c55e;
  font-size: 24rpx;
  font-weight: 700;
  border-radius: 999rpx;
  border: 2rpx solid rgba(34, 197, 94, 0.2);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
}

.scrollarea { 
  height: calc(100vh - 160rpx); 
}
.page { 
  padding: 48rpx;
  padding-bottom: 200rpx; 
}

/* ========== 砍价商品列表 - BargainRowItem ========== */
.bargain-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.bargain-card {
  display: flex;
  background: #FFFFFF;
  border-radius: 48rpx;
  padding: 32rpx;
  gap: 32rpx;
  height: 288rpx;
  box-shadow: 0 8rpx 40rpx -10rpx rgba(0,0,0,0.05);
  border: 2rpx solid #f9fafb;
  transition: transform 0.3s, box-shadow 0.3s;
}
.bargain-card:active {
  transform: translateY(-8rpx);
  box-shadow: 0 16rpx 48rpx -10rpx rgba(0,0,0,0.1);
}

/* 左侧图片 */
.bargain-image {
  position: relative;
  width: 256rpx;
  height: 100%;
  border-radius: 32rpx;
  overflow: hidden;
  flex-shrink: 0;
  background: #f9fafb;
}
.bargain-image image {
  width: 100%;
  height: 100%;
  transition: transform 0.5s;
}
.bargain-card:active .bargain-image image {
  transform: scale(1.1);
}

/* 助力标签 - 玻璃效果 */
.helper-tag {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(255,255,255,0.9);
  color: #1f2937;
  font-size: 18rpx;
  font-weight: 500;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  z-index: 10;
}
.helper-dot {
  width: 12rpx;
  height: 12rpx;
  background: #ef4444;
  border-radius: 50%;
  animation: pulse 2s infinite;
}
@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 右侧信息 */
.bargain-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 8rpx 0;
}
.bargain-top {
  flex: 1;
}
.bargain-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.bargain-desc {
  font-size: 24rpx;
  color: #9ca3af;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 底部价格行 */
.bargain-bottom {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.bargain-prices {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}
.origin-price {
  font-size: 24rpx;
  color: #9ca3af;
  text-decoration: line-through;
}
.current-price {
  font-size: 36rpx;
  font-weight: 700;
  color: #d97706;
}

/* 砍一刀按钮 - 渐变发光 */
.cut-btn {
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%);
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: 700;
  padding: 16rpx 40rpx;
  border-radius: 999rpx;
  box-shadow: 0 10rpx 30rpx -8rpx rgba(52, 211, 153, 0.5);
  transition: transform 0.2s;
}
.cut-btn:active {
  transform: scale(0.95);
}

/* ========== 筛选弹窗 ========== */
.filter-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
  display: flex;
  align-items: flex-end;
}
.filter-popup-content {
  width: 100%;
  background: var(--color-card);
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}
.filter-popup-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text);
  text-align: center;
  margin-bottom: 32rpx;
}
.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.filter-option {
  padding: 20rpx 32rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: var(--color-text);
  background: var(--color-bg);
  border: 2rpx solid var(--color-border);
}
.filter-option.active {
  background: var(--color-primary);
  color: #FFFFFF;
  border-color: var(--color-primary);
}

/* ========== 商品列表 ========== */
.product-list { padding: 0 24rpx; }
.product-card {
  display: flex;
  gap: 24rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}
/* 左侧图片 */
.product-image-wrap {
  position: relative;
  width: 240rpx;
  height: 300rpx;
  flex-shrink: 0;
}
.product-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background: #F0F0F0;
}
.helper-badge {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #FFFFFF;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}
.helper-icon { font-size: 20rpx; }
.helper-count { font-size: 22rpx; }
/* 右侧信息 */
.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}
.product-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.4;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.save-badge {
  display: inline-block;
  background: #FFF8E6;
  color: #B8860B;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  margin-bottom: 16rpx;
  align-self: flex-start;
}
.price-row {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  margin-bottom: 20rpx;
}
.price-symbol { font-size: 28rpx; color: #333333; font-weight: 600; }
.price-value { font-size: 44rpx; color: #333333; font-weight: 700; }
.price-origin { font-size: 24rpx; color: #CCCCCC; text-decoration: line-through; margin-left: 8rpx; }
/* 按钮 */
.action-btns { display: flex; gap: 16rpx; margin-top: auto; }
.btn-start {
  flex: 1;
  height: 68rpx;
  border-radius: 34rpx;
  background: #1A3A2F !important;
  color: #FFFFFF !important;
  font-size: 26rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  border: none;
  padding: 0;
}
.btn-help {
  flex: 1;
  height: 68rpx;
  border-radius: 34rpx;
  background: #FFFFFF !important;
  color: #1A3A2F !important;
  font-size: 26rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  border: 2rpx solid #1A3A2F !important;
  padding: 0;
}
.btn-start::after, .btn-help::after { display: none; }

/* ========== 我的砍价 ========== */
.my-bargain { padding: 24rpx; }
.section-title-new { font-size: 32rpx; font-weight: 600; color: #333333; margin-bottom: 20rpx; }
.my-bargain-card { background: #FFFFFF; border-radius: 16rpx; padding: 24rpx; margin-bottom: 16rpx; }
.my-bargain-row { display: flex; gap: 20rpx; margin-bottom: 16rpx; }
.my-bargain-img { width: 140rpx; height: 140rpx; border-radius: 12rpx; background: #F5F5F5; flex-shrink: 0; }
.my-bargain-info { flex: 1; min-width: 0; }
.my-bargain-header { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 12rpx; }
.my-bargain-name { font-size: 28rpx; font-weight: 600; color: #333333; flex: 1; line-height: 1.4; }
.my-bargain-status { font-size: 22rpx; color: #1A3A2F; background: rgba(26, 58, 47, 0.1); padding: 6rpx 12rpx; border-radius: 4rpx; flex-shrink: 0; margin-left: 12rpx; }
.my-bargain-prices { display: flex; align-items: baseline; gap: 12rpx; margin-bottom: 12rpx; }
.my-bargain-target { font-size: 28rpx; font-weight: 600; color: #333333; }
.my-bargain-origin { font-size: 22rpx; color: #CCCCCC; text-decoration: line-through; }
.my-bargain-progress-wrap { display: flex; align-items: center; gap: 12rpx; }
.my-bargain-progress-bar { flex: 1; height: 6rpx; background: #EEEEEE; border-radius: 3rpx; overflow: hidden; }
.my-bargain-progress-fill { height: 100%; background: #1A3A2F; border-radius: inherit; }
.my-bargain-remain { font-size: 22rpx; color: #B8860B; flex-shrink: 0; }
.my-bargain-btns { display: flex; gap: 16rpx; }
.my-bargain-btn { flex: 1; height: 64rpx; border-radius: 32rpx; font-size: 26rpx; font-weight: 500; display: flex; align-items: center; justify-content: center; line-height: 1; border: none; padding: 0; }
.my-bargain-btn.invite { background: #1A3A2F !important; color: #FFFFFF !important; }
.my-bargain-btn.cancel { background: #FFFFFF !important; color: #999999 !important; border: 1rpx solid #E0E0E0 !important; }
.my-bargain-btn::after { display: none; }

/* ========== 规则说明 ========== */
.rules { 
  padding: 24rpx;
  padding-bottom: 60rpx; 
}
.rule-header { 
  font-size: 28rpx; 
  font-weight: 600; 
  color: #333333; 
  margin-bottom: 12rpx; 
}
.rule-body { 
  font-size: 24rpx; 
  color: #666666; 
  line-height: 1.8; 
  background: #FFFFFF; 
  border-radius: 12rpx; 
  padding: 24rpx; 
}
