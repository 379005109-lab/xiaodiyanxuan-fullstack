/**bargain/index.wxss**/
/* 砍价专区 - ZenLife 2.0 设计 */
page {
  font-family: -apple-system, BlinkMacSystemFont, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "Helvetica Neue", Arial, sans-serif;
  background: linear-gradient(180deg, #e0f2fe 0%, #f0f9ff 50%, #dcfce7 100%);
  background-attachment: fixed;
  color: #1f2937;
}
.scrollarea { min-height: 100vh; }
.page { 
  padding: 24rpx; 
  padding-top: calc(env(safe-area-inset-top) + 100rpx);
  padding-bottom: calc(env(safe-area-inset-bottom) + 160rpx);
}

/* ========== 顶部标题栏卡片 ========== */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 20rpx 28rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 999rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}
.page-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}
.my-bargain-link {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%);
  border-radius: 999rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #fff;
  border: none;
}

/* ========== 商品列表 ========== */
.product-list { padding: 0; }
.product-card {
  display: flex;
  gap: 20rpx;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx -12rpx rgba(0,0,0,0.06);
}
/* 左侧图片 */
.product-image-wrap {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
  border-radius: 20rpx;
  overflow: hidden;
}
.product-image {
  width: 100%;
  height: 100%;
  background: #f0f9ff;
}
/* 图片渐变遮罩 - 已移除，保持图片原色 */
.image-gradient {
  display: none;
}
.helper-badge {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  gap: 6rpx;
  background: rgba(255, 255, 255, 0.95);
  color: #1f2937;
  padding: 8rpx 14rpx;
  border-radius: 20rpx 0 12rpx 0;
  font-size: 20rpx;
  font-weight: 500;
}
.helper-dot {
  width: 12rpx;
  height: 12rpx;
  background: #22c55e;
  border-radius: 50%;
  animation: pulse 2s infinite;
}
@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}
.helper-count { font-size: 20rpx; color: #374151; }
/* 右侧信息 */
.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
  padding: 4rpx 0;
}
.product-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f2937;
  line-height: 1.3;
  margin-bottom: 8rpx;
}
.product-desc {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.price-action {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: auto;
}
.price-row {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}
.price-origin { 
  font-size: 24rpx; 
  color: #9ca3af; 
  text-decoration: line-through;
}
.price-current { 
  font-size: 36rpx; 
  color: #f59e0b; 
  font-weight: 700;
}
/* 砍一刀按钮 - 渐变色 */
.btn-cut {
  padding: 18rpx 40rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%) !important;
  color: #FFFFFF !important;
  font-size: 28rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  border: none;
  box-shadow: 0 8rpx 24rpx -8rpx rgba(52, 211, 153, 0.5);
}
.btn-cut::after { display: none; }

/* ========== 我的砍价 ========== */
.my-bargain { padding: 0; margin-top: 32rpx; }
.section-title-new { 
  font-size: 32rpx; 
  font-weight: 700; 
  color: #1f2937; 
  margin-bottom: 20rpx; 
}
.my-bargain-card { 
  background: rgba(255, 255, 255, 0.98); 
  border-radius: 24rpx; 
  padding: 20rpx; 
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx -12rpx rgba(0,0,0,0.06);
}
.my-bargain-row { 
  display: flex; 
  gap: 20rpx; 
  margin-bottom: 16rpx; 
}
.my-bargain-img { 
  width: 200rpx; 
  height: 200rpx; 
  border-radius: 20rpx; 
  background: #f0f9ff; 
  flex-shrink: 0; 
}
.my-bargain-info { 
  flex: 1; 
  min-width: 0;
  display: flex;
  flex-direction: column;
  padding: 4rpx 0;
}
.my-bargain-header { 
  display: flex; 
  justify-content: space-between; 
  align-items: flex-start; 
  margin-bottom: 8rpx; 
}
.my-bargain-name { 
  font-size: 30rpx; 
  font-weight: 700; 
  color: #1f2937; 
  flex: 1; 
  line-height: 1.3; 
}
.my-bargain-status { 
  font-size: 20rpx; 
  color: #22c55e; 
  background: rgba(34, 197, 94, 0.1); 
  padding: 6rpx 12rpx; 
  border-radius: 8rpx; 
  flex-shrink: 0; 
  margin-left: 12rpx; 
}
.my-bargain-prices { 
  display: flex; 
  align-items: baseline; 
  gap: 8rpx; 
  margin-bottom: 12rpx; 
}
.my-bargain-target { 
  font-size: 36rpx; 
  font-weight: 700; 
  color: #f59e0b; 
}
.my-bargain-origin { 
  font-size: 24rpx; 
  color: #9ca3af; 
  text-decoration: line-through; 
}
.my-bargain-progress-wrap { 
  display: flex; 
  align-items: center; 
  gap: 12rpx;
  margin-top: auto;
}
.my-bargain-progress-bar { 
  flex: 1; 
  height: 8rpx; 
  background: #e5e7eb; 
  border-radius: 4rpx; 
  overflow: hidden; 
}
.my-bargain-progress-fill { 
  height: 100%; 
  background: linear-gradient(90deg, #22d3ee 0%, #34d399 100%); 
  border-radius: inherit; 
}
.my-bargain-remain { 
  font-size: 22rpx; 
  color: #f59e0b; 
  flex-shrink: 0; 
}
.my-bargain-btns { 
  display: flex; 
  gap: 12rpx; 
  margin-top: 12rpx;
  justify-content: flex-end;
}
.my-bargain-btn { 
  min-width: 140rpx;
  max-width: 180rpx;
  height: 52rpx; 
  border-radius: 26rpx; 
  font-size: 22rpx; 
  font-weight: 500; 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  line-height: 1; 
  border: none; 
  padding: 0 20rpx; 
}
.my-bargain-btn.invite { 
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%) !important; 
  color: #FFFFFF !important;
  box-shadow: 0 8rpx 24rpx -8rpx rgba(52, 211, 153, 0.5);
}
.my-bargain-btn.cancel { 
  background: rgba(255, 255, 255, 0.9) !important; 
  color: #9ca3af !important; 
  border: 2rpx solid #e5e7eb !important; 
}
.my-bargain-btn::after { display: none; }

/* ========== 规则说明 ========== */
.rules { 
  padding: 24rpx;
  padding-bottom: 60rpx; 
}
.rule-header { 
  font-size: 28rpx; 
  font-weight: 600; 
  color: #333333; 
  margin-bottom: 12rpx; 
}
.rule-body { 
  font-size: 24rpx; 
  color: #666666; 
  line-height: 1.8; 
  background: #FFFFFF; 
  border-radius: 12rpx; 
  padding: 24rpx; 
}
