/**bargain/index.wxss**/
/* 砍价专区 - ZenLife 2.0 设计 */
page {
  font-family: -apple-system, BlinkMacSystemFont, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "Helvetica Neue", Arial, sans-serif;
  background: linear-gradient(180deg, #e0f2fe 0%, #f0f9ff 50%, #dcfce7 100%);
  background-attachment: fixed;
  color: #1f2937;
}
.scrollarea { min-height: 100vh; }
.page { 
  padding: 24rpx; 
  padding-top: calc(env(safe-area-inset-top) + 100rpx);
  padding-bottom: calc(env(safe-area-inset-bottom) + 160rpx);
}

/* ========== 顶部标题栏 ========== */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}
.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f2937;
}
.my-bargain-link {
  padding: 16rpx 28rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 999rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #22c55e;
  border: 2rpx solid #22c55e;
}

/* ========== 商品列表 ========== */
.product-list { padding: 0; }
.product-card {
  display: flex;
  gap: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx -12rpx rgba(0,0,0,0.05);
}
/* 左侧图片 */
.product-image-wrap {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}
.product-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  background: #f0f9ff;
}
.helper-badge {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  gap: 6rpx;
  background: rgba(255, 255, 255, 0.95);
  color: #1f2937;
  padding: 6rpx 12rpx;
  border-radius: 16rpx 0 12rpx 0;
  font-size: 20rpx;
  font-weight: 500;
}
.helper-dot {
  width: 12rpx;
  height: 12rpx;
  background: #ef4444;
  border-radius: 50%;
}
.helper-count { font-size: 20rpx; color: #374151; }
/* 右侧信息 */
.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
  padding: 4rpx 0;
}
.product-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f2937;
  line-height: 1.3;
  margin-bottom: 8rpx;
}
.product-desc {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.5;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.price-row {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-bottom: 12rpx;
}
.price-origin { 
  font-size: 24rpx; 
  color: #9ca3af; 
  text-decoration: line-through;
  order: 1;
}
.price-symbol { 
  font-size: 26rpx; 
  color: #d97706; 
  font-weight: 600;
  order: 2;
}
.price-value { 
  font-size: 36rpx; 
  color: #d97706; 
  font-weight: 700;
  order: 3;
}
/* 砍一刀按钮 */
.btn-cut {
  align-self: flex-end;
  padding: 14rpx 36rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #f59e0b 0%, #f97316 100%) !important;
  color: #FFFFFF !important;
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  border: none;
  margin-top: auto;
}
.btn-cut::after { display: none; }

/* ========== 我的砍价 ========== */
.my-bargain { padding: 24rpx; }
.section-title-new { font-size: 32rpx; font-weight: 600; color: #333333; margin-bottom: 20rpx; }
.my-bargain-card { background: #FFFFFF; border-radius: 16rpx; padding: 24rpx; margin-bottom: 16rpx; }
.my-bargain-row { display: flex; gap: 20rpx; margin-bottom: 16rpx; }
.my-bargain-img { width: 140rpx; height: 140rpx; border-radius: 12rpx; background: #F5F5F5; flex-shrink: 0; }
.my-bargain-info { flex: 1; min-width: 0; }
.my-bargain-header { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 12rpx; }
.my-bargain-name { font-size: 28rpx; font-weight: 600; color: #333333; flex: 1; line-height: 1.4; }
.my-bargain-status { font-size: 22rpx; color: #1A3A2F; background: rgba(26, 58, 47, 0.1); padding: 6rpx 12rpx; border-radius: 4rpx; flex-shrink: 0; margin-left: 12rpx; }
.my-bargain-prices { display: flex; align-items: baseline; gap: 12rpx; margin-bottom: 12rpx; }
.my-bargain-target { font-size: 28rpx; font-weight: 600; color: #333333; }
.my-bargain-origin { font-size: 22rpx; color: #CCCCCC; text-decoration: line-through; }
.my-bargain-progress-wrap { display: flex; align-items: center; gap: 12rpx; }
.my-bargain-progress-bar { flex: 1; height: 6rpx; background: #EEEEEE; border-radius: 3rpx; overflow: hidden; }
.my-bargain-progress-fill { height: 100%; background: #1A3A2F; border-radius: inherit; }
.my-bargain-remain { font-size: 22rpx; color: #B8860B; flex-shrink: 0; }
.my-bargain-btns { display: flex; gap: 16rpx; }
.my-bargain-btn { flex: 1; height: 64rpx; border-radius: 32rpx; font-size: 26rpx; font-weight: 500; display: flex; align-items: center; justify-content: center; line-height: 1; border: none; padding: 0; }
.my-bargain-btn.invite { background: #1A3A2F !important; color: #FFFFFF !important; }
.my-bargain-btn.cancel { background: #FFFFFF !important; color: #999999 !important; border: 1rpx solid #E0E0E0 !important; }
.my-bargain-btn::after { display: none; }

/* ========== 规则说明 ========== */
.rules { 
  padding: 24rpx;
  padding-bottom: 60rpx; 
}
.rule-header { 
  font-size: 28rpx; 
  font-weight: 600; 
  color: #333333; 
  margin-bottom: 12rpx; 
}
.rule-body { 
  font-size: 24rpx; 
  color: #666666; 
  line-height: 1.8; 
  background: #FFFFFF; 
  border-radius: 12rpx; 
  padding: 24rpx; 
}
