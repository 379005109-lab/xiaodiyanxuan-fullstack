/**bargain/detail/index.wxss**/
/* 小迪严选砍价详情页 - 按UI设计规范 */
page { 
  background: var(--color-bg); 
  color: var(--color-text); 
}
.page-scroll { height: 100vh; }
.page { 
  padding: 24rpx 32rpx 200rpx; 
  padding-top: calc(44px + env(safe-area-inset-top) + 24rpx); 
}

/* ========== 商品卡片 ========== */
.goods-card {
  display: flex;
  gap: 24rpx;
  background: var(--color-card);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}
.goods-cover {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  background: var(--color-bg);
  flex-shrink: 0;
}
.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.goods-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text);
  line-height: 1.4;
  margin-bottom: 16rpx;
}
.goods-prices {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}
.current-price {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--color-accent);
}
.origin-price {
  font-size: 26rpx;
  color: #9CA3AF;
  text-decoration: line-through;
}

/* ========== 砍价进度 ========== */
.progress-section {
  background: var(--color-card);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-top: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}
.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.progress-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-text);
}
.progress-percent {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--color-accent);
}
.progress-bar {
  height: 16rpx;
  background: rgba(214, 173, 96, 0.2);
  border-radius: 8rpx;
  overflow: hidden;
}
.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--color-accent) 0%, #E8C98D 100%);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}
.progress-info {
  display: flex;
  justify-content: space-between;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #6B7280;
}

/* ========== 倒计时 ========== */
.countdown-section {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: rgba(20, 69, 47, 0.08);
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 24rpx;
}
.countdown-icon {
  font-size: 40rpx;
}
.countdown-text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  font-size: 24rpx;
  color: #6B7280;
}
.countdown-time {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--color-primary);
}

/* ========== 砍价记录 ========== */
.records-section {
  background: var(--color-card);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-top: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}
.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 24rpx;
}
.records-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.record-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.record-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: var(--color-bg);
}
.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}
.record-name {
  font-size: 26rpx;
  color: var(--color-text);
}
.record-time {
  font-size: 22rpx;
  color: #9CA3AF;
}
.record-amount {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-accent);
}
.record-empty {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #9CA3AF;
}

/* ========== 邀请好友 ========== */
.invite-section {
  background: linear-gradient(135deg, var(--color-primary) 0%, #1a5a3d 100%);
  border-radius: 16rpx;
  padding: 40rpx 32rpx;
  margin-top: 24rpx;
  text-align: center;
}
.invite-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}
.invite-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 32rpx;
}
.invite-btn {
  width: 320rpx;
  height: 80rpx;
  min-height: 80rpx;
  border-radius: 40rpx;
  background: var(--color-accent) !important;
  color: #FFFFFF !important;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  padding: 0;
  margin: 0 auto;
}
.invite-btn::after {
  display: none;
}

/* ========== 底部操作栏 ========== */
.bottom-bar {
  position: fixed;
  left: 0; right: 0; bottom: 0;
  display: flex;
  gap: 16rpx;
  padding: 20rpx 32rpx;
  background: var(--color-card);
  box-shadow: 0 -8rpx 24rpx rgba(0, 0, 0, 0.06);
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}
.btn-share, .btn-buy, .btn-continue, .btn-cancel {
  flex: 1;
  height: 80rpx;
  min-height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  padding: 0;
}
.btn-share {
  background: var(--color-card) !important;
  color: var(--color-primary) !important;
  border: 2rpx solid var(--color-primary) !important;
}
.btn-buy {
  background: var(--color-accent) !important;
  color: #FFFFFF !important;
}
.btn-continue {
  background: var(--color-primary) !important;
  color: #FFFFFF !important;
}
.btn-cancel {
  background: var(--color-card) !important;
  color: #DC2626 !important;
  border: 2rpx solid #DC2626 !important;
}
.btn-share::after, .btn-buy::after, .btn-continue::after, .btn-cancel::after {
  display: none;
}

/* ========== 成交提示 ========== */
.deal-section {
  background: linear-gradient(135deg, var(--color-accent) 0%, #E8C98D 100%);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-top: 24rpx;
  text-align: center;
}
.deal-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 12rpx;
}
.deal-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 8rpx;
}
.deal-price {
  font-size: 40rpx;
  font-weight: 700;
  color: #FFFFFF;
}
