/* 我的砍价页 — Apple 风格 */
page { background: #F5F5F7; color: #1D1D1F; }
.page { padding-top: calc(88rpx + env(safe-area-inset-top)); }
.nav-bar {
  position: fixed; top: 0; left: 0; right: 0; z-index: 40;
  background: rgba(255,255,255,0.95); backdrop-filter: saturate(180%) blur(40rpx);
  border-bottom: 1rpx solid #E5E5EA;
  display: flex; align-items: center; justify-content: space-between;
  height: calc(88rpx + env(safe-area-inset-top)); padding: env(safe-area-inset-top) 32rpx 0;
}
.nav-back { width: 64rpx; height: 64rpx; display: flex; align-items: center; justify-content: center; font-size: 40rpx; }
.nav-title { font-size: 34rpx; font-weight: 600; }
.nav-placeholder { width: 64rpx; }

.content { padding: 0 32rpx; }

.tabs {
  display: flex; gap: 0; margin-bottom: 24rpx;
  background: #FFFFFF; border-radius: 20rpx; border: 1rpx solid #E5E5EA; overflow: hidden;
}
.tab {
  flex: 1; height: 80rpx; display: flex; align-items: center; justify-content: center;
  font-size: 28rpx; color: #8E8E93; font-weight: 400;
}
.tab.active { color: #1D1D1F; font-weight: 600; background: #F5F5F7; }

.bargain-list { display: flex; flex-direction: column; gap: 16rpx; }

.bargain-card {
  display: flex; gap: 20rpx; background: #FFFFFF; border-radius: 24rpx; padding: 24rpx;
  border: 1rpx solid #E5E5EA;
}
.bargain-card:active { background: #FAFAFA; }
.bargain-img { width: 160rpx; height: 160rpx; border-radius: 20rpx; flex-shrink: 0; background: #F5F5F7; }
.bargain-info { flex: 1; min-width: 0; display: flex; flex-direction: column; justify-content: space-between; }
.bargain-name { font-size: 28rpx; font-weight: 500; color: #1D1D1F; }
.text-ellipsis { overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }

.bargain-progress-wrap { display: flex; align-items: center; gap: 12rpx; margin-top: 8rpx; }
.bargain-progress-bar { flex: 1; height: 6rpx; background: #E5E5EA; border-radius: 6rpx; overflow: hidden; }
.bargain-progress-fill { height: 100%; background: #1D1D1F; border-radius: 6rpx; }
.bargain-progress-text { font-size: 22rpx; color: #8E8E93; font-weight: 500; }

.bargain-price-row { display: flex; align-items: baseline; gap: 12rpx; margin-top: 4rpx; }
.bargain-current { font-size: 34rpx; font-weight: 700; color: #1D1D1F; }
.bargain-original { font-size: 24rpx; color: #8E8E93; text-decoration: line-through; }

.bargain-bottom { display: flex; align-items: center; justify-content: space-between; margin-top: 4rpx; }
.bargain-helpers { font-size: 22rpx; color: #8E8E93; }
.bargain-countdown { font-size: 22rpx; color: #FF3B30; font-weight: 500; }

.empty-state { display: flex; flex-direction: column; align-items: center; padding: 120rpx 0; }
.empty-icon { font-size: 80rpx; margin-bottom: 16rpx; }
.empty-title { font-size: 30rpx; font-weight: 500; color: #1D1D1F; margin-bottom: 32rpx; }
.empty-btn {
  height: 88rpx; padding: 0 64rpx;
  display: flex; align-items: center; justify-content: center;
  background: #FFFFFF; border: 2rpx solid #D2D2D7; border-radius: 24rpx;
  font-size: 30rpx; font-weight: 500; color: #1D1D1F;
}
.empty-btn:active { background: #F5F5F7; }
