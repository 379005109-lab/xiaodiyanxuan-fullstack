.container { padding: 20rpx; background: #f5f5f5; min-height: 100vh; padding-bottom: 140rpx; }
.address-section { background: #fff; padding: 30rpx; border-radius: 16rpx; margin-bottom: 20rpx; }
.address-section .name { font-weight: bold; display: block; }
.address-section .detail { color: #666; font-size: 26rpx; margin-top: 10rpx; display: block; }
.goods-section { background: #fff; padding: 20rpx; border-radius: 16rpx; margin-bottom: 20rpx; }
.goods-item { display: flex; margin-bottom: 16rpx; }
.goods-item image { width: 120rpx; height: 120rpx; border-radius: 8rpx; margin-right: 20rpx; }
.goods-item .info { flex: 1; }
.remark-section { background: #fff; padding: 20rpx; border-radius: 16rpx; display: flex; align-items: center; }
.remark-section input { flex: 1; margin-left: 20rpx; }
.bottom-bar { position: fixed; bottom: 0; left: 0; right: 0; background: #fff; display: flex; align-items: center; justify-content: space-between; padding: 20rpx 30rpx; padding-bottom: calc(20rpx + env(safe-area-inset-bottom)); }
.total { font-size: 32rpx; color: #e53935; font-weight: bold; }
.submit-btn { background: #4f46e5; color: #fff; padding: 20rpx 60rpx; border-radius: 50rpx; }
