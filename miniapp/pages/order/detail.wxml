<view class="container" wx:if="{{order}}">
  <view class="status-bar">{{order.statusText}}</view>
  <view class="section">
    <text class="title">收货信息</text>
    <text>{{order.address.name}} {{order.address.phone}}</text>
    <text>{{order.address.province}}{{order.address.city}}{{order.address.district}}{{order.address.detail}}</text>
  </view>
  <view class="section">
    <text class="title">商品信息</text>
    <view class="goods-item" wx:for="{{order.goods}}" wx:key="id">
      <image src="{{item.thumb}}" mode="aspectFill"/>
      <view class="info">
        <text class="name">{{item.name}}</text>
        <text class="price">¥{{item.price}} x{{item.count}}</text>
      </view>
    </view>
  </view>
  <view class="section">
    <view class="row"><text>订单编号</text><text>{{order.orderNo}}</text></view>
    <view class="row"><text>下单时间</text><text>{{order.createdAt}}</text></view>
    <view class="row total"><text>订单总额</text><text>¥{{order.totalPrice}}</text></view>
  </view>
</view>
