/* 确认订单页 - 小迪严选主题 */
page { 
  background: linear-gradient(180deg, #e0f2fe 0%, #f0f9ff 50%, #dcfce7 100%);
  background-attachment: fixed;
  color: #1f2937; 
}
.scrollarea { 
  height: 100vh; 
}
.page { 
  padding: 24rpx 24rpx 180rpx; 
  padding-top: calc(44px + env(safe-area-inset-top) + 24rpx); 
  box-sizing: border-box; 
}

/* ========== 提醒条 ========== */
.notice-bar {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 24rpx;
  background: rgba(214, 173, 96, 0.15);
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}
.notice-icon {
  width: 32rpx;
  height: 32rpx;
  background: var(--color-accent);
  color: #FFFFFF;
  border-radius: 50%;
  font-size: 22rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}
.notice-text {
  font-size: 26rpx;
  color: var(--color-accent-dark);
  font-weight: 500;
}

/* ========== 卡片 ========== */
.card { 
  background: var(--color-card); 
  border: 2rpx solid var(--color-border); 
  border-radius: 16rpx; 
  padding: 24rpx; 
  margin-bottom: 24rpx; 
}
.goods-card {
  border-color: var(--color-primary);
  border-width: 2rpx;
}
.package-goods-card { 
  border-color: var(--color-primary); 
}
.recommendation-goods-card { 
  border-color: var(--color-accent); 
}
.title { 
  font-weight: 700; 
  margin-bottom: 20rpx; 
  color: var(--color-text); 
  font-size: 30rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.title::before {
  content: '';
  width: 6rpx;
  height: 32rpx;
  background: var(--color-primary);
  border-radius: 3rpx;
}
/* 新版卡片标题 */
.card-title-bar { display: flex; align-items: center; gap: 12rpx; margin-bottom: 24rpx; }
.card-title-line { width: 6rpx; height: 32rpx; background: var(--color-primary); border-radius: 3rpx; }
.card-title-text { font-size: 30rpx; font-weight: 700; color: var(--color-text); }
/* 新版商品项 */
.goods-item-new { display: flex; gap: 20rpx; padding: 20rpx 0; border-bottom: 1rpx solid var(--color-border); }
.goods-item-new:last-of-type { border-bottom: none; }
.goods-thumb { width: 140rpx; height: 100rpx; border-radius: 12rpx; background: var(--color-bg); flex-shrink: 0; }
.goods-detail { flex: 1; min-width: 0; }
.goods-name-row { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 8rpx; }
.goods-name { font-size: 28rpx; font-weight: 600; color: var(--color-primary); flex: 1; }
.goods-delete-btn { width: 48rpx; height: 48rpx; display: flex; align-items: center; justify-content: center; font-size: 28rpx; color: #9CA3AF; flex-shrink: 0; }
.goods-price-new { font-size: 32rpx; font-weight: 700; color: #DC2626; margin-top: 8rpx; }
.goods-price-qty { display: flex; align-items: center; justify-content: space-between; margin-top: 8rpx; }
.goods-qty { font-size: 24rpx; color: #9CA3AF; }
.goods-spec-text { font-size: 24rpx; color: #6B7280; margin-bottom: 4rpx; }
.goods-spec-tags { display: flex; flex-wrap: wrap; gap: 8rpx; margin-top: 8rpx; }
.spec-tag { padding: 6rpx 12rpx; background: var(--color-bg); border: 1rpx solid var(--color-border); border-radius: 6rpx; font-size: 22rpx; color: #6B7280; }
/* 新版价格汇总 */
.price-summary-new { margin-top: 20rpx; padding-top: 20rpx; border-top: 1rpx solid var(--color-border); }
.summary-row { display: flex; justify-content: space-between; align-items: center; padding: 8rpx 0; }
.summary-label { font-size: 26rpx; color: #6B7280; }
.summary-value { font-size: 26rpx; color: var(--color-text); }
.summary-total { padding-top: 16rpx; }
.summary-value-total { font-size: 36rpx; font-weight: 700; color: var(--color-accent); }

/* ========== 商品项 ========== */
.goods-item {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 0;
  border-bottom: 2rpx solid var(--color-border);
}
.goods-item:last-of-type {
  border-bottom: none;
}
.goods-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background: var(--color-bg);
  flex-shrink: 0;
}
.goods-info {
  flex: 1;
  min-width: 0;
}
.goods-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-primary);
  margin-bottom: 8rpx;
}
.goods-spec {
  font-size: 24rpx;
  color: #6B7280;
  margin-bottom: 12rpx;
}
.goods-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 12rpx;
}
.tag {
  padding: 6rpx 12rpx;
  background: var(--color-bg);
  border: 2rpx solid var(--color-border);
  border-radius: 6rpx;
  font-size: 22rpx;
  color: #6B7280;
}
.extra-info {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}
.extra-item {
  font-size: 24rpx;
  color: #6B7280;
}
.extra-price {
  color: var(--color-accent);
  font-weight: 700;
}
.goods-price {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--color-accent);
  flex-shrink: 0;
}

/* ========== 套餐商品项 ========== */
.package-item { 
  display: flex; 
  flex-direction: column;
  padding: 24rpx 0; 
  border-bottom: 2rpx solid var(--color-border);
}
.package-item:last-child { border-bottom: none; }
.package-item-row {
  display: flex;
  gap: 20rpx;
}
.package-item-img { 
  width: 140rpx; 
  height: 140rpx; 
  border-radius: 12rpx; 
  background: var(--color-bg); 
  flex-shrink: 0; 
}
.package-item-info { 
  flex: 1; 
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}
.package-item-name { 
  font-weight: 600; 
  color: var(--color-text); 
  font-size: 28rpx;
  line-height: 1.3;
}
.package-item-category { 
  font-size: 22rpx; 
  color: var(--color-primary);
  background: rgba(20, 69, 47, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  display: inline-block;
  width: fit-content;
}
.package-item-dims { 
  font-size: 22rpx; 
  color: #6B7280; 
}
.package-item-material-info { 
  font-size: 22rpx; 
  color: #6B7280; 
  line-height: 1.6;
  margin-top: 4rpx;
}
.package-item-price-wrap { 
  display: flex; 
  align-items: center; 
  gap: 12rpx;
  margin-top: 8rpx;
}
.package-item-price-original { 
  font-size: 24rpx; 
  color: #9CA3AF; 
  text-decoration: line-through; 
}
.package-item-price { 
  font-size: 32rpx; 
  color: var(--color-accent); 
  font-weight: 700; 
}
.package-item-actions { 
  display: flex; 
  align-items: center; 
  justify-content: space-between;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid var(--color-border);
}
.quantity-control { 
  display: flex; 
  align-items: center; 
  gap: 20rpx;
  background: var(--color-bg);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}
.quantity-btn { 
  width: 48rpx; 
  height: 48rpx; 
  border: none;
  border-radius: 24rpx; 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  font-size: 32rpx; 
  color: var(--color-text); 
  background: var(--color-card);
}
.quantity-value { 
  min-width: 48rpx; 
  text-align: center; 
  font-size: 28rpx; 
  color: var(--color-text);
  font-weight: 600;
}
.delete-btn { 
  font-size: 26rpx; 
  color: #DC2626; 
  padding: 12rpx 24rpx; 
  background: rgba(220, 38, 38, 0.08);
  border-radius: 24rpx;
}
.package-item-total { 
  font-weight: 700; 
  color: var(--color-accent); 
  font-size: 32rpx;
  flex-shrink: 0;
}

/* ========== 价格汇总 ========== */
.price-summary { 
  margin-top: 20rpx; 
  padding-top: 20rpx; 
  border-top: 2rpx solid var(--color-border); 
}
.price-row { 
  display: flex; 
  justify-content: space-between; 
  align-items: center; 
  padding: 8rpx 0; 
}
.price-label { 
  color: #6B7280; 
  font-size: 28rpx; 
}
.price-value {
  color: var(--color-text);
  font-size: 28rpx;
}
.price-value-original { 
  color: #9CA3AF; 
  text-decoration: line-through; 
  font-size: 28rpx; 
}
.price-value-discount { 
  color: var(--color-accent); 
  font-size: 28rpx; 
  font-weight: 600; 
}
.price-row-total { 
  margin-top: 12rpx; 
  padding-top: 12rpx; 
  border-top: 2rpx solid var(--color-border); 
}
.price-value-total { 
  color: var(--color-accent); 
  font-size: 36rpx; 
  font-weight: 700; 
}

/* ========== 搭配推荐 ========== */
.recommendations-scroll { white-space: nowrap; padding: 0 4rpx; }
.recommendations-list { display: flex; gap: 24rpx; padding: 12rpx 0; }
.recommendation-item { width: 180rpx; flex-shrink: 0; display: flex; flex-direction: column; align-items: center; padding: 16rpx; background: #FAFAFA; border-radius: 12rpx; }
.recommendation-img { 
  width: 148rpx; 
  height: 148rpx; 
  border-radius: 8rpx; 
  background: #FFFFFF; 
  margin-bottom: 12rpx; 
}
.recommendation-name { 
  font-size: 24rpx; 
  color: #333333; 
  margin-bottom: 8rpx; 
  overflow: hidden; 
  text-overflow: ellipsis; 
  white-space: nowrap; 
  width: 100%;
  text-align: center;
}
.recommendation-price { font-size: 28rpx; color: #333333; font-weight: 600; margin-bottom: 12rpx; display: block; text-align: center; }
.recommendation-quantity-control { display: flex; align-items: center; justify-content: center; gap: 8rpx; margin-bottom: 12rpx; }
.rec-qty-btn, .rec-quantity-btn { 
  width: 44rpx; 
  height: 44rpx; 
  border: 2rpx solid #e5e7eb; 
  border-radius: 22rpx; 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  font-size: 28rpx; 
  color: #374151; 
  background: #f9fafb; 
}
.rec-quantity-value { min-width: 44rpx; text-align: center; font-size: 26rpx; color: #333333; }
.recommendation.rec-add-btn {
  width: 100%;
  height: 52rpx; 
  padding: 0 20rpx; 
  border-radius: 26rpx; 
  background: #333333; 
  color: #FFFFFF; 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  font-size: 24rpx; 
  font-weight: 500; 
}
.recommendation-add { 
  width: 100%;
  height: 52rpx; 
  padding: 0 20rpx; 
  border-radius: 26rpx; 
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%); 
  color: #FFFFFF; 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  font-size: 24rpx; 
  font-weight: 500; 
}
.recommendation-add.added { background: #9ca3af; }
.add-icon { font-size: 24rpx; font-weight: 500; }

/* ========== 收货地址 ========== */
.address-card {
  border-color: var(--color-primary);
}
.address-select {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}
.address-info {
  flex: 1;
}
.address-user {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}
.address-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--color-text);
}
.address-phone {
  font-size: 28rpx;
  color: #6B7280;
}
.address-tag {
  padding: 4rpx 12rpx;
  background: var(--color-primary);
  color: #FFFFFF;
  font-size: 22rpx;
  border-radius: 6rpx;
}
.address-detail {
  font-size: 26rpx;
  color: #6B7280;
  line-height: 1.5;
}
.address-arrow {
  font-size: 40rpx;
  color: #9CA3AF;
  margin-left: 16rpx;
}
.address-form {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}
.ipt { 
  height: 80rpx; 
  background: #f9fafb; 
  border: 2rpx solid #e5e7eb; 
  border-radius: 12rpx; 
  padding: 0 20rpx; 
  font-size: 28rpx;
}
.ipt:focus {
  border-color: #0891b2;
  background: #ffffff;
}
.default-check {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 0;
}
.check-box {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #d1d5db;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #FFFFFF;
}
.check-box.checked {
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%);
  border-color: #22d3ee;
}

/* ========== 订单备注 ========== */
.remark-input {
  width: 100%;
  height: 160rpx;
  background: var(--color-bg);
  border: 2rpx solid var(--color-border);
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* ========== 底部提交栏 ========== */
.submit-bar { 
  position: fixed; 
  left: 0; right: 0; bottom: 0; 
  background: var(--color-card); 
  display: flex; 
  align-items: center; 
  justify-content: flex-end; 
  gap: 24rpx;
  padding: 20rpx 24rpx; 
  box-shadow: 0 -8rpx 24rpx rgba(0,0,0,0.06); 
  z-index: 100;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}
.submit-bar-left { 
  flex: 1;
  display: flex; 
  align-items: baseline;
  gap: 8rpx;
}
.sum-label { 
  font-size: 26rpx; 
  color: #6B7280; 
}
.sum-value { 
  font-size: 40rpx; 
  font-weight: 700; 
  color: var(--color-accent); 
}
.btn-submit { 
  flex-shrink: 0;
  height: 80rpx;
  min-height: 80rpx;
  min-width: 200rpx;
  border-radius: 40rpx; 
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%) !important; 
  color: #FFFFFF !important; 
  padding: 0 48rpx; 
  border: none; 
  font-weight: 600; 
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  box-shadow: 0 8rpx 24rpx -8rpx rgba(52, 211, 153, 0.5);
}
.btn-submit::after {
  display: none;
}

/* 价格汇总卡片 */
.price-card { padding: 24rpx; }

/* ========== 套餐提示 ========== */
.package-notice {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid #A5D6A7;
}
.package-notice-icon {
  font-size: 40rpx;
  flex-shrink: 0;
}
.package-notice-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}
.package-notice-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2E7D32;
}
.package-notice-desc {
  font-size: 24rpx;
  color: #388E3C;
  line-height: 1.5;
}
.package-tag {
  margin-left: auto;
  padding: 6rpx 16rpx;
  background: #4CAF50;
  color: #FFFFFF;
  font-size: 22rpx;
  border-radius: 20rpx;
  font-weight: 500;
}
.package-goods-item {
  background: rgba(76, 175, 80, 0.05);
}
.package-lock-icon {
  font-size: 28rpx;
  color: #9E9E9E;
  padding: 8rpx;
}

