/* 确认订单页 — Apple 风格 */
page {
  background: #F5F5F7;
  color: #1D1D1F;
}

.scrollarea { height: 100vh; }

.page {
  padding: 0 32rpx 180rpx;
  padding-top: calc(44px + env(safe-area-inset-top) + 16rpx);
  box-sizing: border-box;
}

/* ========== 提醒条 ========== */
.notice-bar {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 24rpx;
  background: #FFF9E6;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.notice-icon { font-size: 28rpx; flex-shrink: 0; }

.notice-text {
  font-size: 26rpx;
  color: #B25000;
  font-weight: 500;
}

/* ========== 卡片 ========== */
.section-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1D1D1F;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

/* ========== 商品行 ========== */
.goods-row {
  display: flex;
  gap: 20rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F5F5F7;
}

.goods-row:last-of-type { border-bottom: none; }

.goods-thumb {
  width: 140rpx;
  height: 140rpx;
  border-radius: 16rpx;
  background: #F5F5F7;
  flex-shrink: 0;
}

.goods-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.goods-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1D1D1F;
  line-height: 1.3;
}

.goods-specs {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-top: 8rpx;
}

.goods-tag {
  font-size: 22rpx;
  color: #86868B;
  background: #F5F5F7;
  padding: 4rpx 14rpx;
  border-radius: 8rpx;
}

.goods-price-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 12rpx;
}

.goods-price {
  font-size: 28rpx;
  font-weight: 500;
  color: #1D1D1F;
}

.goods-qty {
  font-size: 22rpx;
  color: #86868B;
  font-weight: 400;
}

.goods-del {
  font-size: 24rpx;
  color: #FF3B30;
}

/* ========== 总计行 ========== */
.total-row {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  padding-top: 20rpx;
  margin-top: 12rpx;
  border-top: 1rpx solid #F5F5F7;
}

.total-label {
  font-size: 26rpx;
  color: #86868B;
}

.total-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #1D1D1F;
}

/* ========== 价格汇总 ========== */
.summary-line {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.summary-label {
  font-size: 26rpx;
  color: #86868B;
}

.summary-val {
  font-size: 26rpx;
  color: #1D1D1F;
}

.summary-main {
  padding-top: 16rpx;
  margin-top: 8rpx;
  border-top: 1rpx solid #F5F5F7;
}

.summary-val-big {
  font-size: 36rpx;
  font-weight: 600;
  color: #1D1D1F;
}

/* ========== 套餐提示 ========== */
.pkg-notice {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 24rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
}

.pkg-notice-icon { font-size: 40rpx; flex-shrink: 0; }

.pkg-notice-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.pkg-notice-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1D1D1F;
}

.pkg-notice-desc {
  font-size: 24rpx;
  color: #86868B;
  line-height: 1.5;
}

.pkg-badge {
  font-size: 22rpx;
  font-weight: 500;
  color: #FFFFFF;
  background: #1D1D1F;
  padding: 4rpx 16rpx;
  border-radius: 999rpx;
}

/* ========== 搭配推荐 ========== */
.rec-scroll { white-space: nowrap; margin: 0 -8rpx; }

.rec-list { display: inline-flex; gap: 16rpx; padding: 4rpx 8rpx; }

.rec-item {
  width: 200rpx;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  background: #F5F5F7;
  border-radius: 20rpx;
}

.rec-img {
  width: 168rpx;
  height: 168rpx;
  border-radius: 14rpx;
  background: #FFFFFF;
  margin-bottom: 12rpx;
}

.rec-name {
  font-size: 24rpx;
  color: #1D1D1F;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
  text-align: center;
}

.rec-price {
  font-size: 26rpx;
  font-weight: 500;
  color: #1D1D1F;
  margin-bottom: 12rpx;
}

.rec-qty-wrap {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.rec-qty-btn {
  width: 44rpx;
  height: 44rpx;
  border: 2rpx solid #D2D2D7;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #1D1D1F;
  background: #FFFFFF;
}

.rec-qty-num {
  min-width: 36rpx;
  text-align: center;
  font-size: 26rpx;
  color: #1D1D1F;
  font-weight: 500;
}

.rec-add-btn {
  width: 100%;
  height: 52rpx;
  border-radius: 999rpx;
  background: #1D1D1F;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 500;
}

.rec-add-btn.added {
  background: #D2D2D7;
  color: #86868B;
}

/* ========== 收货地址 ========== */
.addr-select {
  display: flex;
  align-items: center;
}

.addr-body { flex: 1; }

.addr-top {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.addr-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1D1D1F;
}

.addr-phone {
  font-size: 26rpx;
  color: #86868B;
}

.addr-tag {
  padding: 4rpx 12rpx;
  background: #1D1D1F;
  color: #FFFFFF;
  font-size: 20rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.addr-detail {
  font-size: 26rpx;
  color: #86868B;
  line-height: 1.5;
}

.addr-arrow {
  font-size: 40rpx;
  color: #D2D2D7;
  margin-left: 16rpx;
}

.addr-form {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.form-input {
  height: 88rpx;
  background: #F5F5F7;
  border: none;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #1D1D1F;
}

.form-check {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 0;
}

.check-circle {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #D2D2D7;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #FFFFFF;
}

.check-circle.checked {
  background: #1D1D1F;
  border-color: #1D1D1F;
}

.check-label {
  font-size: 26rpx;
  color: #86868B;
}

/* ========== 订单备注 ========== */
.remark-area {
  width: 100%;
  height: 160rpx;
  background: #F5F5F7;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  color: #1D1D1F;
}

/* ========== 底部提交栏 ========== */
.submit-bar {
  position: fixed;
  left: 0; right: 0; bottom: 0;
  background: rgba(255, 255, 255, 0.92);
  backdrop-filter: saturate(180%) blur(20px);
  -webkit-backdrop-filter: saturate(180%) blur(20px);
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 24rpx;
  padding: 20rpx 32rpx;
  z-index: 100;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
}

.submit-left {
  flex: 1;
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.submit-label {
  font-size: 26rpx;
  color: #86868B;
}

.submit-price {
  font-size: 40rpx;
  font-weight: 600;
  color: #1D1D1F;
}

.price-sym {
  font-size: 28rpx;
}

.submit-btn {
  flex-shrink: 0;
  height: 88rpx;
  min-width: 220rpx;
  border-radius: 999rpx;
  background: #1D1D1F !important;
  color: #FFFFFF !important;
  padding: 0 48rpx;
  border: none;
  font-weight: 600;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.submit-btn::after { display: none; }
