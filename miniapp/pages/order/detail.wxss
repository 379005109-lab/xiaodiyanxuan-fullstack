.container { padding: 20rpx; background: #f5f5f5; min-height: 100vh; }
.status-bar { background: #4f46e5; color: #fff; padding: 30rpx; font-size: 32rpx; border-radius: 16rpx; margin-bottom: 20rpx; }
.section { background: #fff; border-radius: 16rpx; padding: 20rpx; margin-bottom: 20rpx; }
.title { font-weight: bold; display: block; margin-bottom: 16rpx; }
.goods-item { display: flex; margin-top: 16rpx; }
.goods-item image { width: 120rpx; height: 120rpx; border-radius: 8rpx; margin-right: 20rpx; }
.row { display: flex; justify-content: space-between; padding: 10rpx 0; font-size: 28rpx; }
.total text:last-child { color: #e53935; font-weight: bold; }
