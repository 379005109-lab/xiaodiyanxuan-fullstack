.container { padding: 20rpx; background: #f5f5f5; min-height: 100vh; }
.order-item { background: #fff; border-radius: 16rpx; margin-bottom: 20rpx; padding: 20rpx; }
.order-header { display: flex; justify-content: space-between; margin-bottom: 20rpx; font-size: 26rpx; color: #666; }
.status { color: #4f46e5; }
.goods-item { display: flex; margin-bottom: 16rpx; }
.goods-item image { width: 120rpx; height: 120rpx; border-radius: 8rpx; margin-right: 20rpx; }
.goods-item .info { flex: 1; }
.goods-item .name { font-size: 28rpx; color: #333; }
.goods-item .count { font-size: 24rpx; color: #999; }
.order-footer { text-align: right; font-size: 28rpx; color: #333; border-top: 1rpx solid #f5f5f5; padding-top: 16rpx; }
.empty { text-align: center; padding: 100rpx; color: #999; }
