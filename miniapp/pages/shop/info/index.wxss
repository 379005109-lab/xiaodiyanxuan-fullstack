.page {
  min-height: 100vh;
  background: #FFFFFF;
}

/* ========== 地图区域 ========== */
.map-area {
  width: 100%;
  height: 560rpx;
  background: #F5F5F7;
}

.shop-map {
  width: 100%;
  height: 100%;
}

.map-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.map-placeholder-icon {
  font-size: 60rpx;
}

.map-placeholder-text {
  font-size: 26rpx;
  color: #86868B;
  padding: 0 40rpx;
  text-align: center;
}

/* ========== 店铺基本信息 ========== */
.shop-basic {
  padding: 32rpx;
  border-bottom: 1rpx solid #E5E5EA;
}

.shop-basic-row {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.shop-logo-wrap {
  width: 120rpx;
  height: 120rpx;
  border-radius: 24rpx;
  overflow: hidden;
  flex-shrink: 0;
  background: #F5F5F7;
}

.shop-logo {
  width: 100%;
  height: 100%;
}

.shop-logo-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 600;
  color: #1D1D1F;
  background: #F5F5F7;
}

.shop-basic-info {
  flex: 1;
  min-width: 0;
}

.shop-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.shop-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #1D1D1F;
}

.shop-verified-tag {
  padding: 4rpx 12rpx;
  background: rgba(52, 199, 89, 0.1);
  color: #34C759;
  font-size: 22rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(52, 199, 89, 0.2);
  white-space: nowrap;
}

.shop-stats {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
  font-size: 24rpx;
  color: #86868B;
}

.dot-sep {
  color: #D2D2D7;
}

.shop-desc {
  font-size: 24rpx;
  color: #86868B;
  line-height: 1.5;
  display: block;
}

/* ========== 联系信息 ========== */
.contact-section {
  padding: 20rpx 32rpx;
}

.contact-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  padding: 24rpx 0;
}

.contact-item + .contact-item {
  border-top: 1rpx solid #F5F5F7;
}

.contact-icon-wrap {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #F5F5F7;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.contact-icon {
  font-size: 28rpx;
}

.contact-content {
  flex: 1;
  min-width: 0;
}

.contact-label {
  font-size: 24rpx;
  color: #86868B;
  display: block;
  margin-bottom: 4rpx;
}

.contact-value {
  font-size: 28rpx;
  color: #1D1D1F;
  font-weight: 500;
  display: block;
  line-height: 1.5;
}

.contact-action {
  padding: 10rpx 28rpx;
  border: 1rpx solid #D2D2D7;
  border-radius: 40rpx;
  font-size: 24rpx;
  color: #1D1D1F;
  font-weight: 500;
  white-space: nowrap;
  flex-shrink: 0;
  align-self: center;
}

.contact-action:active {
  background: #F5F5F7;
}

/* ========== 底部操作栏 ========== */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #FFFFFF;
  border-top: 1rpx solid #E5E5EA;
}

.bottom-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  border: 1rpx solid #D2D2D7;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #1D1D1F;
}

.bottom-btn:active {
  background: #F5F5F7;
}

.bottom-btn-icon {
  font-size: 30rpx;
}
