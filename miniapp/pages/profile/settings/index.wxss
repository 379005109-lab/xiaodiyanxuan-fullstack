/* 设置页 — Apple 风格 */
page { background: #F5F5F7; color: #1D1D1F; }

.content { padding: 24rpx 32rpx; }

.settings-group {
  background: #FFFFFF; border-radius: 24rpx; border: 1rpx solid #E5E5EA;
  overflow: hidden; margin-bottom: 24rpx;
}
.settings-item {
  display: flex; align-items: center; justify-content: space-between;
  padding: 28rpx 32rpx; border-bottom: 1rpx solid #E5E5EA;
}
.settings-item:last-child { border-bottom: none; }
.settings-item:active { background: #FAFAFA; }

.item-label { font-size: 30rpx; color: #1D1D1F; }
.item-value { font-size: 28rpx; color: #8E8E93; }
.item-arrow { font-size: 36rpx; color: #C7C7CC; }

.logout-btn {
  margin-top: 48rpx; height: 96rpx;
  display: flex; align-items: center; justify-content: center;
  background: #FFFFFF; border: 2rpx solid #D2D2D7; border-radius: 24rpx;
  font-size: 32rpx; font-weight: 500; color: #FF3B30;
}
.logout-btn:active { background: #F5F5F7; }
