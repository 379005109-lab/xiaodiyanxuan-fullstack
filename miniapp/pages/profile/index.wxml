<navigation-bar title="" back="{{false}}" color="black" background="transparent"></navigation-bar>
<scroll-view class="scrollarea" scroll-y>
<view class="page">
		<!-- 设置按钮 -->
		<view class="settings-btn" bindtap="goSettings">•••</view>

		<!-- 用户头像和信息 -->
		<view class="header">
			<image class="avatar" src="{{avatar}}" mode="aspectFill"></image>
			<view class="u-info">
				<text class="name">{{nickname || '用户'}}</text>
				<text class="badge">钻石会员</text>
			</view>
		</view>

		<!-- 统计数据 -->
		<view class="stats">
			<view class="stat" bindtap="goFavorites">
				<text class="value">{{favoriteCount || 0}}</text>
				<text class="label">收藏</text>
			</view>
			<view class="stat" bindtap="goOrders">
				<text class="value">{{orderCount || 0}}</text>
				<text class="label">订单</text>
			</view>
			<view class="stat" bindtap="goCoupons">
				<text class="value orange">¥{{couponAmount || 0}}</text>
				<text class="label">优惠券</text>
			</view>
		</view>

		<!-- 快捷入口 -->
		<view class="quick-actions">
			<view class="quick-action" bindtap="goBooking">
				<view class="quick-action-icon"><view class="icon-calendar"></view></view>
				<text class="quick-action-text">我的预约</text>
			</view>
			<view class="quick-action" bindtap="goCart">
				<view class="quick-action-icon"><view class="icon-cart"></view></view>
				<text class="quick-action-text">我的购物车</text>
			</view>
		</view>

		<!-- 最近浏览 -->
		<view class="recent-section" wx:if="{{recentItem}}">
			<view class="section-header">
				<view class="section-icon"><view class="icon-clock"></view></view>
				<text class="section-title">最近浏览</text>
			</view>
			<view class="recent-item" bindtap="goProductDetail" data-id="{{recentItem.id}}">
				<image class="recent-img" src="{{recentItem.cover}}" mode="aspectFill"></image>
				<view class="recent-info">
					<text class="recent-name">{{recentItem.name}}</text>
					<text class="recent-desc">{{recentItem.desc || '精选好物'}}</text>
					<text class="recent-price">¥{{recentItem.price}}</text>
				</view>
				<view class="recent-buy-btn">购买</view>
			</view>
		</view>

		<!-- 更多功能列表 -->
		<view class="list">
			<view class="cell" bindtap="goReferral">
				<view class="cell-icon-box"><view class="icon-gift"></view></view>
				<text class="cell-text">推荐有奖</text>
				<text class="cell-arrow">›</text>
			</view>
			<view class="cell" bindtap="goAddress">
				<view class="cell-icon-box"><view class="icon-location"></view></view>
				<text class="cell-text">地址管理</text>
				<text class="cell-arrow">›</text>
			</view>
			<view class="cell" bindtap="goService">
				<view class="cell-icon-box"><view class="icon-chat"></view></view>
				<text class="cell-text">客服中心</text>
				<text class="cell-arrow">›</text>
			</view>
			<view class="cell" bindtap="goLanguage">
				<view class="cell-icon-box"><view class="icon-globe"></view></view>
				<text class="cell-text">语言 / Language</text>
				<text class="cell-arrow">›</text>
			</view>
		</view>

		<view class="footer">
			<view class="fold">关于我们 · 隐私政策 · 帮助中心</view>
			<view class="copy">© 小迪严选</view>
		</view>
	</view>
</scroll-view>


