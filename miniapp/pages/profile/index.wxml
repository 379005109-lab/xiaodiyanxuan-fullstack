<navigation-bar title="我的" back="{{false}}" color="black" background="#FFF"></navigation-bar>
<view class="page">
		<view class="header">
			<image class="avatar" src="{{avatar}}" mode="aspectFill"></image>
			<view class="u-info">
				<text class="name">昵称</text>
				<text class="badge" wx:if="{{isDesigner}}">设计师认证</text>
			</view>
		</view>

		<view class="stats">
			<view class="stat" bindtap="goOrders">
				<text class="value">{{orderCount}}</text>
				<text class="label">我的订单</text>
			</view>
			<view class="stat" bindtap="goCart">
				<text class="value">{{cartCount}}</text>
				<text class="label">购物车</text>
			</view>
			<view class="stat" bindtap="goFavorites">
				<text class="value">{{favoriteCount}}</text>
				<text class="label">我的收藏</text>
			</view>
		</view>

		<view class="list">
			<view class="cell" bindtap="goCart">
				<view class="cell-icon-box"><text class="cell-icon-simple">⊞</text></view>
				<text class="cell-text">我的购物车</text>
				<text class="cell-arrow">›</text>
			</view>
			<view class="cell" bindtap="goBooking">
				<view class="cell-icon-box"><text class="cell-icon-simple">◎</text></view>
				<text class="cell-text">我的预约</text>
				<view class="cell-badge" wx:if="{{bookingCount > 0}}">{{bookingCount}}</view>
				<text class="cell-arrow">›</text>
			</view>
			<view class="cell" bindtap="goOrders">
				<view class="cell-icon-box"><text class="cell-icon-simple">☰</text></view>
				<text class="cell-text">我的订单</text>
				<text class="cell-arrow">›</text>
			</view>
			<view class="cell" bindtap="goFavorites">
				<view class="cell-icon-box"><text class="cell-icon-simple">♡</text></view>
				<text class="cell-text">我的收藏</text>
				<text class="cell-arrow">›</text>
			</view>
			<view class="cell" bindtap="goCoupons">
				<view class="cell-icon-box"><text class="cell-icon-simple">◇</text></view>
				<text class="cell-text">优惠券</text>
				<text class="cell-arrow">›</text>
			</view>
			<view class="cell" bindtap="goAddress">
				<view class="cell-icon-box"><text class="cell-icon-simple">◉</text></view>
				<text class="cell-text">地址管理</text>
				<text class="cell-arrow">›</text>
			</view>
			<view class="cell" bindtap="goService">
				<view class="cell-icon-box"><text class="cell-icon-simple">○</text></view>
				<text class="cell-text">客服中心</text>
				<text class="cell-arrow">›</text>
			</view>
			<view class="cell" bindtap="goLanguage">
				<view class="cell-icon-box"><text class="cell-icon-simple">🌐</text></view>
				<text class="cell-text">语言 / Language</text>
				<text class="cell-arrow">›</text>
			</view>
		</view>

		
		<view class="footer">
			<view class="fold">关于我们 · 隐私政策 · 帮助中心</view>
			<view class="copy">© 小迪严选</view>
		</view>
	</view>


