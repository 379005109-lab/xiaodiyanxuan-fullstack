/* 我的订单页 — Apple 风格 */
page {
  background: #FFFFFF;
  color: #1D1D1F;
}

.scrollarea { height: 100vh; }

.page {
  padding: 0 32rpx;
  padding-top: calc(44px + env(safe-area-inset-top) + 16rpx);
  box-sizing: border-box;
}

/* ========== 标签筛选 ========== */
.tabs-scroll {
  width: calc(100% + 64rpx);
  margin-left: -32rpx;
  margin-bottom: 24rpx;
  white-space: nowrap;
}

.tabs-wrap {
  display: inline-flex;
  gap: 0;
  padding: 0 32rpx;
}

.tab-item {
  display: inline-block;
  padding: 14rpx 28rpx;
  font-size: 26rpx;
  color: #86868B;
  font-weight: 400;
  border-radius: 999rpx;
  white-space: nowrap;
}

.tab-item.active {
  color: #FFFFFF;
  background: #1D1D1F;
  font-weight: 500;
}

/* ========== 订单列表 ========== */
.order-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.order-card {
  background: #FFFFFF;
  border: 1rpx solid #E5E5EA;
  border-radius: 24rpx;
  overflow: hidden;
}

.order-cancelled {
  opacity: 0.6;
}

/* ========== 修改提示 ========== */
.modified-banner {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  background: #FFF9E6;
  border-bottom: 1rpx solid #FFE4A0;
}

.modified-dot {
  font-size: 28rpx;
}

.modified-title {
  flex: 1;
  font-size: 24rpx;
  font-weight: 500;
  color: #B25000;
}

.modified-action {
  font-size: 24rpx;
  color: #B25000;
  font-weight: 500;
}

/* ========== 订单头部 ========== */
.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid #F5F5F7;
}

.order-no {
  font-size: 24rpx;
  color: #86868B;
  font-family: -apple-system, monospace;
}

.order-status {
  font-size: 26rpx;
  font-weight: 500;
  color: #1D1D1F;
}

.order-status.status-grey {
  color: #86868B;
}

/* ========== 商品项 ========== */
.order-goods {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 24rpx;
}

.og-thumb {
  width: 140rpx;
  height: 140rpx;
  border-radius: 16rpx;
  background: #F5F5F7;
  flex-shrink: 0;
}

.og-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.og-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1D1D1F;
  line-height: 1.3;
}

.og-specs {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-top: 8rpx;
}

.og-spec {
  font-size: 22rpx;
  color: #86868B;
  background: #F5F5F7;
  padding: 4rpx 14rpx;
  border-radius: 8rpx;
}

.og-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 12rpx;
}

.og-price {
  font-size: 28rpx;
  font-weight: 500;
  color: #1D1D1F;
}

.og-qty {
  font-size: 24rpx;
  color: #86868B;
}

/* ========== 订单金额 ========== */
.order-total-row {
  display: flex;
  align-items: baseline;
  justify-content: flex-end;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  border-top: 1rpx solid #F5F5F7;
}

.order-total-label {
  font-size: 24rpx;
  color: #86868B;
}

.order-total-price {
  font-size: 34rpx;
  font-weight: 600;
  color: #1D1D1F;
}

.price-cancelled {
  color: #86868B !important;
  text-decoration: line-through;
}

.order-original-price {
  font-size: 24rpx;
  color: #86868B;
  text-decoration: line-through;
}

/* ========== 操作按钮 ========== */
.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  padding: 16rpx 24rpx 20rpx;
}

.act-btn {
  height: 64rpx;
  padding: 0 32rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  border: none;
}

.act-btn::after { display: none; }

.act-btn.act-outline {
  background: #FFFFFF !important;
  color: #86868B !important;
  border: 2rpx solid #D2D2D7;
}

.act-btn.act-primary {
  background: #1D1D1F !important;
  color: #FFFFFF !important;
}

.act-btn.act-warning {
  background: #FF9500 !important;
  color: #FFFFFF !important;
}

.act-btn.act-danger {
  background: #FFFFFF !important;
  color: #FF3B30 !important;
  border: 2rpx solid #FF3B30;
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 160rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #86868B;
}

/* ========== 取消弹窗 ========== */
.modal-mask {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 85%;
  max-width: 600rpx;
  background: #FFFFFF;
  border-radius: 28rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #E5E5EA;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1D1D1F;
}

.modal-close {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #86868B;
  background: #F5F5F7;
  border-radius: 50%;
}

.modal-body {
  padding: 32rpx;
}

.modal-label {
  font-size: 26rpx;
  color: #86868B;
  margin-bottom: 16rpx;
  display: block;
}

.modal-textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #D2D2D7;
  border-radius: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #FAFAFA;
}

.modal-count {
  display: block;
  text-align: right;
  font-size: 22rpx;
  color: #86868B;
  margin-top: 8rpx;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 24rpx 32rpx 32rpx;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 28rpx;
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.modal-btn::after { display: none; }

.modal-cancel {
  background: #F5F5F7 !important;
  color: #1D1D1F !important;
}

.modal-confirm {
  background: #FF3B30 !important;
  color: #FFFFFF !important;
}
