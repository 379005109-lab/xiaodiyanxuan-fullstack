/* 我的订单页 - 小迪严选主题 */
page { 
  background: linear-gradient(180deg, #e0f2fe 0%, #f0f9ff 50%, #dcfce7 100%);
  background-attachment: fixed;
  color: #1f2937; 
}
.page { padding: 24rpx; padding-bottom: 140rpx; min-height: 100vh; padding-top: calc(44px + env(safe-area-inset-top) + 24rpx); box-sizing: border-box; }
custom-tab-bar { position: fixed; left: 0; right: 0; bottom: 0; z-index: 1000; }

/* 页面标题 */
.page-header { margin-bottom: 32rpx; }
.page-title { font-size: 40rpx; font-weight: 700; color: var(--color-primary); }
.page-subtitle { font-size: 24rpx; color: var(--color-primary); opacity: 0.6; margin-top: 8rpx; }

/* 标签筛选 */
.tabs-wrap { display: flex; flex-wrap: wrap; gap: 16rpx; margin-bottom: 32rpx; }
.tab-item { padding: 16rpx 28rpx; border-radius: 32rpx; font-size: 26rpx; background: #FFFFFF; color: #6B7280; border: 1rpx solid var(--color-border); }
.tab-item.active { background: var(--color-primary); color: #FFFFFF; border-color: var(--color-primary); }

/* 订单列表 */
.order-list { display: flex; flex-direction: column; gap: 24rpx; }
.order-card-new { background: #FFFFFF; border-radius: 16rpx; overflow: hidden; }

/* 订单状态头 */
.order-status-bar { display: flex; align-items: center; padding: 20rpx 24rpx; border-bottom: 1rpx solid var(--color-border); }
.status-icon { width: 32rpx; height: 32rpx; display: flex; align-items: center; justify-content: center; font-size: 24rpx; color: var(--color-primary); margin-right: 12rpx; }
.status-text { font-size: 26rpx; color: var(--color-primary); font-weight: 500; }
.order-price { margin-left: auto; font-size: 36rpx; font-weight: 700; color: #2E7D32; }

/* 商品项 */
.order-goods-item { display: flex; gap: 20rpx; padding: 24rpx; border-bottom: 1rpx solid var(--color-border); }
.order-goods-item:last-of-type { border-bottom: none; }
.goods-thumb { width: 140rpx; height: 100rpx; border-radius: 8rpx; background: var(--color-bg); flex-shrink: 0; }
.goods-content { flex: 1; min-width: 0; }
.goods-title { font-size: 28rpx; font-weight: 600; color: var(--color-text); margin-bottom: 8rpx; }
.goods-spec { font-size: 24rpx; color: #6B7280; margin-bottom: 6rpx; }
.goods-material-row { display: flex; flex-direction: column; gap: 4rpx; margin-bottom: 8rpx; }
.material-item { font-size: 22rpx; color: #666666; }
.goods-tags-row { display: flex; flex-wrap: wrap; gap: 8rpx; margin-bottom: 8rpx; }
.tag-item { padding: 4rpx 12rpx; background: var(--color-bg); border: 1rpx solid var(--color-border); border-radius: 4rpx; font-size: 22rpx; color: #6B7280; }
.goods-qty { font-size: 24rpx; color: #9CA3AF; }

/* 订单信息 */
.order-info-section { padding: 20rpx 24rpx; background: #FAFAFA; }
.info-row { display: flex; padding: 6rpx 0; font-size: 24rpx; }
.info-label { color: #9CA3AF; width: 120rpx; flex-shrink: 0; }
.info-value { color: var(--color-text); flex: 1; }

/* 操作按钮 */
.order-action-bar { display: flex; justify-content: flex-end; gap: 16rpx; padding: 20rpx 24rpx; }
.action-btn { height: 64rpx; padding: 0 32rpx; border-radius: 32rpx; font-size: 26rpx; display: flex; align-items: center; justify-content: center; line-height: 1; }
.action-btn.outline { background: #FFFFFF; color: #DC2626; border: 1rpx solid #DC2626; }
.action-btn.primary { background: var(--color-primary); color: #FFFFFF; border: none; }
.action-btn.referral { background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%); color: #FFFFFF; border: none; }
.action-btn::after { display: none; }

/* 空状态 */
.empty-state { padding: 120rpx 40rpx; text-align: center; }
.empty-icon { font-size: 80rpx; color: #D1D5DB; margin-bottom: 24rpx; }
.empty-text { font-size: 28rpx; color: #9CA3AF; }

/* ========== 订单修改提示 ========== */
.order-modified { border: 2rpx solid #FF9800; }
.modified-banner {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
  border-bottom: 1rpx solid #FFB74D;
}
.modified-icon {
  font-size: 36rpx;
  color: #E65100;
  flex-shrink: 0;
}
.modified-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}
.modified-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #E65100;
}
.modified-reason {
  font-size: 24rpx;
  color: #F57C00;
}
.modified-time {
  font-size: 22rpx;
  color: #FF9800;
}
.modified-btn {
  padding: 12rpx 24rpx;
  background: #FF9800;
  color: #FFFFFF;
  font-size: 24rpx;
  border-radius: 24rpx;
  flex-shrink: 0;
}
.modified-tag {
  margin-left: 12rpx;
  padding: 4rpx 12rpx;
  background: #FF9800;
  color: #FFFFFF;
  font-size: 20rpx;
  border-radius: 20rpx;
  font-weight: 500;
}
.price-changed {
  color: #E65100 !important;
}
.original-price {
  font-size: 24rpx;
  color: #9CA3AF;
  text-decoration: line-through;
  margin-left: 12rpx;
}

/* 确认修改按钮 */
.action-btn.warning {
  background: #FF9800;
  color: #FFFFFF;
  border: none;
}

/* 删除按钮 */
.action-btn.danger {
  background: #DC2626;
  color: #FFFFFF;
  border: none;
}

/* 已取消标签 */
.tab-cancelled.active {
  background: #9E9E9E;
  border-color: #9E9E9E;
}

/* ========== 已取消订单样式 ========== */
.order-cancelled {
  opacity: 0.8;
  border: 1rpx solid #E0E0E0;
}
.status-cancelled {
  background: #F5F5F5;
}
.icon-cancelled {
  color: #9E9E9E !important;
}
.text-cancelled {
  color: #9E9E9E !important;
}
.price-cancelled {
  color: #9E9E9E !important;
  text-decoration: line-through;
}
.cancelled-tag {
  margin-left: 12rpx;
  padding: 4rpx 12rpx;
  background: #9E9E9E;
  color: #FFFFFF;
  font-size: 20rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

/* ========== 取消订单弹窗 ========== */
.cancel-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cancel-modal {
  width: 85%;
  max-width: 600rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
}
.cancel-modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #F0F0F0;
}
.cancel-modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}
.cancel-modal-close {
  font-size: 32rpx;
  color: #999999;
  padding: 8rpx;
}
.cancel-modal-body {
  padding: 32rpx;
}
.cancel-modal-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
  display: block;
}
.cancel-reason-input {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border: 1rpx solid #E0E0E0;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #FAFAFA;
}
.cancel-reason-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}
.cancel-modal-footer {
  display: flex;
  gap: 24rpx;
  padding: 24rpx 32rpx 32rpx;
}
.cancel-modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}
.cancel-modal-btn::after {
  display: none;
}
.cancel-btn {
  background: #F5F5F5;
  color: #666666;
}
.confirm-btn {
  background: #DC2626;
  color: #FFFFFF;
}

/* ========== 售后/退货样式 ========== */
.tab-refund {
  position: relative;
}
.refund-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background: #DC2626;
  color: #FFFFFF;
  font-size: 20rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.status-refund {
  background: #FFF8E1;
}
.icon-refund {
  color: #F59E0B !important;
}
.text-refund {
  color: #F59E0B !important;
}
.refund-tag {
  padding: 4rpx 12rpx;
  background: #FEF3C7;
  color: #D97706;
  font-size: 22rpx;
  border-radius: 4rpx;
  margin-left: 12rpx;
}
.refund-tag.completed {
  background: #D1FAE5;
  color: #059669;
}

