/* 购物车页面 — Apple 风格 */
page {
  background: #FFFFFF;
  color: #1D1D1F;
}

.scrollarea { height: 100vh; }

.page {
  padding: 0 32rpx;
  padding-top: calc(44px + env(safe-area-inset-top) + 16rpx);
  box-sizing: border-box;
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 32rpx;
}

.empty-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1D1D1F;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #86868B;
  margin-bottom: 48rpx;
}

.empty-btn {
  height: 88rpx;
  padding: 0 64rpx;
  background: #1D1D1F !important;
  color: #FFFFFF !important;
  border: none;
  border-radius: 28rpx;
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.empty-btn::after { display: none; }

/* ========== 全选栏 ========== */
.select-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  margin-bottom: 16rpx;
}

.select-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.select-text {
  font-size: 28rpx;
  color: #1D1D1F;
  font-weight: 400;
}

.select-count {
  font-size: 24rpx;
  color: #86868B;
}

/* ========== 复选框 ========== */
.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #D2D2D7;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #FFFFFF;
  flex-shrink: 0;
  background: #FFFFFF;
  transition: all 0.2s ease;
}

.checkbox.checked {
  background: #1D1D1F;
  border-color: #1D1D1F;
}

/* ========== 购物车列表 ========== */
.cart-list {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.cart-card {
  position: relative;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #E5E5EA;
  overflow: hidden;
}

.cart-row {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.cart-thumb {
  width: 180rpx;
  height: 180rpx;
  border-radius: 20rpx;
  background: #F5F5F7;
  flex-shrink: 0;
}

.cart-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
}

.cart-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1D1D1F;
  line-height: 1.4;
}

.cart-specs {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-top: 8rpx;
}

.cart-spec {
  font-size: 22rpx;
  color: #86868B;
  background: #F5F5F7;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

.cart-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 16rpx;
}

.cart-price {
  font-size: 34rpx;
  font-weight: 600;
  color: #1D1D1F;
  letter-spacing: -0.5rpx;
}

/* ========== 数量控制 ========== */
.qty-control {
  display: flex;
  align-items: center;
  gap: 0;
  border: 2rpx solid #D2D2D7;
  border-radius: 16rpx;
  overflow: hidden;
}

.qty-btn {
  width: 56rpx;
  height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #1D1D1F;
  background: #FFFFFF;
}

.qty-btn:active {
  background: #F5F5F7;
}

.qty-value {
  min-width: 56rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 500;
  color: #1D1D1F;
  background: #FFFFFF;
  border-left: 2rpx solid #D2D2D7;
  border-right: 2rpx solid #D2D2D7;
  line-height: 52rpx;
}

/* ========== 删除按钮 ========== */
.cart-delete {
  position: absolute;
  right: 0;
  top: 24rpx;
  font-size: 24rpx;
  color: #FF3B30;
  padding: 8rpx 0;
}

/* ========== 底部结算栏 ========== */
.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.92);
  -webkit-backdrop-filter: saturate(180%) blur(40rpx);
  backdrop-filter: saturate(180%) blur(40rpx);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 32rpx;
  border-top: 1rpx solid #E5E5EA;
  z-index: 100;
}

.safe-area-bottom {
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}

.bar-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-shrink: 0;
}

.bar-all-text {
  font-size: 26rpx;
  color: #1D1D1F;
}

.bar-right {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.bar-total {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.bar-total-label {
  font-size: 26rpx;
  color: #86868B;
}

.bar-total-price {
  font-size: 36rpx;
  font-weight: 600;
  color: #1D1D1F;
  letter-spacing: -0.5rpx;
}

.bar-checkout-btn {
  height: 80rpx;
  min-height: 80rpx;
  padding: 0 48rpx;
  background: #1D1D1F !important;
  color: #FFFFFF !important;
  border: none;
  border-radius: 28rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.bar-checkout-btn::after { display: none; }

.bar-checkout-btn[disabled] {
  background: #D2D2D7 !important;
  color: #86868B !important;
}
