/**profile/index.wxss**/
page { background: #FAFAFA; }

.page-container { min-height: 100vh; background: #FAFAFA; }

/* Modal */
.modal-mask {
  position: fixed; inset: 0; background: rgba(0,0,0,0.4); z-index: 90;
  display: flex; align-items: center; justify-content: center;
}
.modal-dialog { width: 540rpx; background: #fff; border-radius: 40rpx; overflow: hidden; }
.modal-body { padding: 40rpx 32rpx 32rpx; text-align: center; }
.modal-title { font-size: 34rpx; font-weight: 600; color: #1D1D1F; margin-bottom: 16rpx; }
.modal-desc { font-size: 26rpx; color: #6E6E73; }
.modal-actions { display: flex; border-top: 1rpx solid #E5E5EA; }
.modal-btn { flex: 1; padding: 24rpx 0; text-align: center; font-size: 34rpx; }
.modal-cancel { color: #6E6E73; border-right: 1rpx solid #E5E5EA; }
.modal-confirm { color: #FF3B30; font-weight: 500; }

/* Nav Bar */
.nav-bar {
  position: fixed; top: 0; left: 0; right: 0; z-index: 50;
  background: rgba(255,255,255,0.95); backdrop-filter: blur(20px);
  border-bottom: 1rpx solid #E5E5EA;
}
.nav-content {
  height: 88rpx; padding: 0 32rpx;
  display: flex; align-items: center; justify-content: center;
}
.nav-title { font-size: 34rpx; font-weight: 700; color: #1D1D1F; }

/* Scroll Area */
.scroll-area { position: fixed; left: 0; right: 0; bottom: 0; }

/* User Card */
.user-card {
  margin: 24rpx 32rpx; padding: 28rpx 24rpx;
  background: #F5F5F7; border-radius: 32rpx;
  display: flex; align-items: center; justify-content: space-between;
}
.user-left { display: flex; align-items: center; gap: 20rpx; }
.avatar-wrap {
  width: 108rpx; height: 108rpx; border-radius: 50%;
  border: 4rpx solid #E5E5EA; overflow: hidden; flex-shrink: 0;
}
.avatar { width: 100%; height: 100%; }
.user-info { display: flex; flex-direction: column; gap: 8rpx; }
.user-name-row { display: flex; align-items: center; gap: 12rpx; }
.nickname { font-size: 34rpx; font-weight: 600; color: #1D1D1F; }
.edit-icon { font-size: 28rpx; color: #8E8E93; }
.user-phone { font-size: 26rpx; color: #6E6E73; }
.user-arrow { font-size: 36rpx; color: #C7C7CC; }

/* Assets Row */
.assets-row {
  display: flex; gap: 16rpx; padding: 0 32rpx; margin-bottom: 16rpx;
}
.asset-card {
  flex: 1; background: #F5F5F7; border-radius: 28rpx; padding: 24rpx;
  border: 1rpx solid #E5E5EA;
}
.asset-header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 8rpx; }
.asset-title { font-size: 26rpx; color: #6E6E73; }
.asset-arrow { font-size: 28rpx; color: #C7C7CC; }
.asset-value { font-size: 48rpx; font-weight: 700; color: #1D1D1F; margin-bottom: 4rpx; }
.asset-unit { font-size: 24rpx; font-weight: 400; color: #6E6E73; margin-left: 4rpx; }
.asset-desc { font-size: 22rpx; color: #8E8E93; margin-bottom: 16rpx; }
.asset-btns { display: flex; gap: 12rpx; }
.asset-btn {
  flex: 1; height: 56rpx; display: flex; align-items: center; justify-content: center;
  font-size: 24rpx; font-weight: 500; border-radius: 20rpx;
  background: #FFFFFF; color: #1D1D1F; border: 1rpx solid #D2D2D7;
}
.asset-btn-primary { background: #1D1D1F; color: #FFFFFF; border-color: #1D1D1F; }
.asset-btn-warm { background: #FFF8F0; color: #1D1D1F; border-color: #E8D5C4; }

/* Section Card */
.section-card {
  margin: 16rpx 32rpx; background: #FFFFFF; border-radius: 28rpx;
  border: 1rpx solid #E5E5EA; overflow: hidden;
}
.section-header {
  display: flex; align-items: center; justify-content: space-between;
  padding: 24rpx 24rpx 16rpx;
}
.section-title { font-size: 30rpx; font-weight: 600; color: #1D1D1F; }
.section-link { display: flex; align-items: center; gap: 4rpx; font-size: 26rpx; color: #6E6E73; }
.section-arrow { font-size: 28rpx; color: #C6C6C8; }

/* Order Shortcuts */
.order-shortcuts {
  display: flex; padding: 8rpx 24rpx 24rpx; justify-content: space-around;
}
.order-shortcut { display: flex; flex-direction: column; align-items: center; gap: 8rpx; }
.shortcut-icon-wrap {
  position: relative; width: 88rpx; height: 88rpx; display: flex; align-items: center; justify-content: center;
  background: #FFFFFF; border-radius: 50%; border: 1rpx solid #E5E5EA;
}
.shortcut-icon { font-size: 44rpx; color: #1D1D1F; }
.shortcut-badge {
  position: absolute; top: -4rpx; right: -8rpx;
  min-width: 32rpx; height: 32rpx; padding: 0 8rpx;
  background: #FF3B30; color: #FFFFFF; font-size: 20rpx; font-weight: 600;
  border-radius: 32rpx; display: flex; align-items: center; justify-content: center;
}
.shortcut-label { font-size: 24rpx; color: #6E6E73; }

/* Service List */
.service-list { }
.service-item {
  display: flex; align-items: center; padding: 24rpx;
  border-top: 1rpx solid #F5F5F7;
}
.service-icon { font-size: 40rpx; margin-right: 20rpx; width: 48rpx; text-align: center; color: #6E6E73; }
.service-text { flex: 1; font-size: 30rpx; color: #1D1D1F; }
.service-right { display: flex; align-items: center; gap: 8rpx; }
.service-hint { font-size: 24rpx; color: #8E8E93; }
.service-arrow { font-size: 36rpx; color: #C7C7CC; }
.service-badge {
  min-width: 32rpx; height: 32rpx; padding: 0 8rpx;
  background: #FF3B30; color: #FFFFFF; font-size: 20rpx; font-weight: 600;
  border-radius: 32rpx; display: flex; align-items: center; justify-content: center;
}

/* Logout Button */
.logout-btn {
  margin: 32rpx 32rpx 0; height: 88rpx;
  display: flex; align-items: center; justify-content: center;
  background: #FFFFFF; border: 1rpx solid #E5E5EA; border-radius: 28rpx;
  font-size: 30rpx; color: #FF3B30; font-weight: 500;
}
