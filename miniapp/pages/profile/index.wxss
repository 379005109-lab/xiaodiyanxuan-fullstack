/**profile/index.wxss**/
/* 小迪严选个人中心 - ZenLife 2.0 */
page { 
  background: linear-gradient(180deg, #e0f2fe 0%, #f0f9ff 50%, #dcfce7 100%);
  background-attachment: fixed;
  color: #1f2937; 
}
.scrollarea { min-height: 100vh; }
.page { 
  padding: 24rpx; 
  padding-top: calc(env(safe-area-inset-top) + 80rpx); 
  padding-bottom: calc(env(safe-area-inset-bottom) + 180rpx);
  box-sizing: border-box; 
}

/* ========== 设置按钮 ========== */
.settings-btn {
  position: absolute;
  top: calc(env(safe-area-inset-top) + 24rpx);
  right: 24rpx;
  font-size: 40rpx;
  color: #6b7280;
}

/* ========== 用户头部 ========== */
.header { 
  display: flex; 
  flex-direction: column;
  align-items: center; 
  padding: 32rpx 0 24rpx;
}
.avatar { 
  width: 160rpx; 
  height: 160rpx; 
  border-radius: 50%; 
  background: #f0f9ff;
  border: 6rpx solid rgba(255,255,255,0.8);
  box-shadow: 0 12rpx 40rpx -12rpx rgba(34, 211, 153, 0.3);
  margin-bottom: 20rpx;
}
.u-info { 
  text-align: center;
}
.u-info .name { 
  font-size: 36rpx; 
  color: #1f2937; 
  font-weight: 700; 
  margin-bottom: 12rpx;
}
.badge { 
  display: inline-flex; 
  font-size: 24rpx; 
  color: #22c55e; 
  background: linear-gradient(135deg, rgba(34, 211, 238, 0.15) 0%, rgba(52, 211, 153, 0.15) 100%);
  border-radius: 999rpx; 
  padding: 8rpx 24rpx;
  font-weight: 600;
}

/* ========== 统计数据 ========== */
.stats { 
  margin: 24rpx 0; 
  display: flex;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 24rpx 16rpx;
  box-shadow: 0 8rpx 32rpx -12rpx rgba(0,0,0,0.05);
}
.stat { 
  flex: 1;
  display: flex; 
  flex-direction: column; 
  align-items: center;
  gap: 8rpx;
  border-right: 2rpx solid #f0f0f0;
}
.stat:last-child {
  border-right: none;
}
.value { 
  font-size: 36rpx; 
  font-weight: 700; 
  color: #1f2937; 
}
.value.orange {
  color: #d97706;
}
.label { 
  font-size: 24rpx; 
  color: #9ca3af; 
}

/* ========== 快捷入口 ========== */
.quick-actions {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}
.quick-action {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 28rpx 24rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx -12rpx rgba(0,0,0,0.05);
}
.quick-action-icon {
  width: 48rpx;
  height: 48rpx;
  background: #f0f9ff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}
.quick-action-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

/* ========== 最近浏览 ========== */
.recent-section {
  margin-top: 24rpx;
}
.section-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 16rpx;
  padding: 0 8rpx;
}
.section-icon {
  font-size: 28rpx;
  color: #9ca3af;
}
.section-title { 
  font-size: 28rpx; 
  color: #6b7280;
  font-weight: 500;
}
.recent-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 24rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx -12rpx rgba(0,0,0,0.05);
}
.recent-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  background: #f0f9ff;
}
.recent-info {
  flex: 1;
}
.recent-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 6rpx;
}
.recent-desc {
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 8rpx;
}
.recent-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #d97706;
}
.recent-buy-btn {
  padding: 14rpx 28rpx;
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%);
  color: #FFFFFF;
  font-size: 26rpx;
  font-weight: 600;
  border-radius: 999rpx;
}

/* ========== 列表 ========== */
.list { 
  background: rgba(255, 255, 255, 0.95); 
  border-radius: 24rpx; 
  overflow: hidden; 
  margin-top: 24rpx;
  box-shadow: 0 8rpx 32rpx -12rpx rgba(0,0,0,0.05);
}
.cell { 
  padding: 28rpx 24rpx; 
  border-bottom: 2rpx solid #f5f5f5; 
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.cell:last-child { 
  border-bottom: none; 
}
.cell-icon-box {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  background: #f0f9ff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.cell-icon-simple {
  font-size: 28rpx;
  color: #22c55e;
  line-height: 1;
}
.cell-text {
  flex: 1;
  color: #1f2937;
  font-weight: 500;
}
.cell-badge {
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 10rpx;
  background: #DC2626;
  color: #FFFFFF;
  font-size: 20rpx;
  font-weight: 600;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
}
.cell-arrow {
  color: #9CA3AF;
  font-size: 32rpx;
}

/* ========== 页脚 ========== */
.footer { 
  margin-top: 48rpx; 
  text-align: center; 
  color: #9CA3AF; 
  font-size: 24rpx; 
}
.copy { 
  margin-top: 16rpx; 
}


