/* 积分页 — Apple 风格 */
page { background: #F5F5F7; color: #1D1D1F; }
.page { padding-top: calc(88rpx + env(safe-area-inset-top)); }
.nav-bar {
  position: fixed; top: 0; left: 0; right: 0; z-index: 40;
  background: rgba(255,255,255,0.95); backdrop-filter: saturate(180%) blur(40rpx);
  border-bottom: 1rpx solid #E5E5EA;
  display: flex; align-items: center; justify-content: space-between;
  height: calc(88rpx + env(safe-area-inset-top)); padding: env(safe-area-inset-top) 32rpx 0;
}
.nav-back { width: 64rpx; height: 64rpx; display: flex; align-items: center; justify-content: center; font-size: 40rpx; }
.nav-title { font-size: 34rpx; font-weight: 600; }
.nav-placeholder { width: 64rpx; }

.content { padding: 24rpx 32rpx; }

.points-card {
  display: flex; flex-direction: column; align-items: center;
  background: #FFFFFF; border-radius: 32rpx; padding: 48rpx; border: 1rpx solid #E5E5EA;
  margin-bottom: 32rpx;
}
.points-label { font-size: 26rpx; color: #8E8E93; }
.points-value { font-size: 80rpx; font-weight: 700; color: #1D1D1F; margin: 12rpx 0; }
.points-hint { font-size: 24rpx; color: #8E8E93; }

.section-title { font-size: 30rpx; font-weight: 600; color: #1D1D1F; margin-bottom: 16rpx; }

.record-list {
  background: #FFFFFF; border-radius: 24rpx; border: 1rpx solid #E5E5EA; overflow: hidden;
}
.record-item {
  display: flex; align-items: center; justify-content: space-between;
  padding: 24rpx; border-bottom: 1rpx solid #E5E5EA;
}
.record-item:last-child { border-bottom: none; }
.record-left { flex: 1; }
.record-desc { font-size: 28rpx; color: #1D1D1F; }
.record-time { font-size: 22rpx; color: #8E8E93; margin-top: 4rpx; }
.record-amount { font-size: 32rpx; font-weight: 600; flex-shrink: 0; }
.record-amount.positive { color: #34C759; }
.record-amount.negative { color: #FF3B30; }

.empty-state { display: flex; align-items: center; justify-content: center; padding: 80rpx 0; }
.empty-text { font-size: 28rpx; color: #8E8E93; }
