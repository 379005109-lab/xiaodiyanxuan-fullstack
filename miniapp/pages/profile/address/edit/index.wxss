/* 地址编辑页 — Apple 风格 */
page { background: #F5F5F7; color: #1D1D1F; }

.content { padding: 24rpx 32rpx; }

.form-card {
  background: #FFFFFF; border-radius: 24rpx; overflow: hidden; border: 1rpx solid #E5E5EA;
}
.form-item {
  display: flex; align-items: center; padding: 28rpx 32rpx; border-bottom: 1rpx solid #E5E5EA;
}
.form-item:last-child { border-bottom: none; }
.form-label { font-size: 30rpx; font-weight: 500; color: #1D1D1F; width: 160rpx; flex-shrink: 0; }
.form-input { flex: 1; font-size: 30rpx; color: #1D1D1F; }
.form-value { flex: 1; font-size: 30rpx; color: #1D1D1F; }
.form-value.placeholder { color: #C7C7CC; }
.form-arrow { font-size: 36rpx; color: #C7C7CC; margin-left: 8rpx; }
.form-switch-item { justify-content: space-between; }

.save-btn {
  margin-top: 40rpx; height: 96rpx;
  display: flex; align-items: center; justify-content: center;
  background: #1D1D1F; border-radius: 24rpx;
  font-size: 32rpx; font-weight: 500; color: #FFFFFF;
}
.save-btn:active { background: #000000; }

.delete-btn {
  margin-top: 24rpx; height: 96rpx;
  display: flex; align-items: center; justify-content: center;
  background: #FFFFFF; border: 2rpx solid #D2D2D7; border-radius: 24rpx;
  font-size: 32rpx; font-weight: 500; color: #FF3B30;
}
.delete-btn:active { background: #F5F5F7; }
