/* 地址管理页 — Apple 风格 */
page { background: #F5F5F7; color: #1D1D1F; }
.scrollarea { height: 100vh; }
.page { padding: 0 32rpx 180rpx; padding-top: calc(44px + env(safe-area-inset-top) + 16rpx); box-sizing: border-box; }

.addr-list { display: flex; flex-direction: column; gap: 20rpx; }
.addr-card { background: #FFFFFF; border-radius: 24rpx; padding: 28rpx; }
.addr-top { display: flex; align-items: center; gap: 16rpx; margin-bottom: 12rpx; }
.addr-name { font-size: 30rpx; font-weight: 600; color: #1D1D1F; }
.addr-phone { font-size: 26rpx; color: #86868B; }
.addr-tag { padding: 4rpx 14rpx; background: #1D1D1F; color: #FFFFFF; font-size: 20rpx; border-radius: 999rpx; font-weight: 500; }
.addr-detail { font-size: 26rpx; color: #86868B; line-height: 1.6; margin-bottom: 20rpx; }
.addr-actions { display: flex; gap: 32rpx; padding-top: 20rpx; border-top: 1rpx solid #F5F5F7; }
.addr-act { font-size: 26rpx; color: #1D1D1F; }
.addr-del { color: #FF3B30; }

.empty { display: flex; flex-direction: column; align-items: center; padding: 160rpx 0; }
.empty-icon { font-size: 80rpx; margin-bottom: 24rpx; }
.empty-text { font-size: 28rpx; color: #1D1D1F; font-weight: 500; margin-bottom: 8rpx; }
.empty-tip { font-size: 24rpx; color: #86868B; }

.bottom-bar { position: fixed; left: 0; right: 0; bottom: 0; padding: 20rpx 32rpx; padding-bottom: calc(20rpx + env(safe-area-inset-bottom)); background: rgba(255,255,255,0.92); backdrop-filter: saturate(180%) blur(20px); -webkit-backdrop-filter: saturate(180%) blur(20px); border-top: 1rpx solid rgba(0,0,0,0.06); z-index: 100; }
.add-btn { height: 88rpx; background: #1D1D1F; border-radius: 999rpx; display: flex; align-items: center; justify-content: center; font-size: 30rpx; color: #FFFFFF; font-weight: 600; }

.modal-mask { position: fixed; inset: 0; background: rgba(0,0,0,0.4); z-index: 2000; display: flex; align-items: center; justify-content: center; }
.modal-box { width: 85%; max-width: 600rpx; background: #FFFFFF; border-radius: 28rpx; overflow: hidden; }
.modal-header { display: flex; align-items: center; justify-content: space-between; padding: 32rpx; border-bottom: 1rpx solid #E5E5EA; }
.modal-title { font-size: 34rpx; font-weight: 600; color: #1D1D1F; }
.modal-close { width: 56rpx; height: 56rpx; display: flex; align-items: center; justify-content: center; font-size: 32rpx; color: #86868B; background: #F5F5F7; border-radius: 50%; }
.modal-body { padding: 32rpx; }
.modal-input { width: 100%; height: 88rpx; background: #F5F5F7; border: none; border-radius: 16rpx; padding: 0 24rpx; margin-bottom: 16rpx; font-size: 28rpx; color: #1D1D1F; box-sizing: border-box; }
.modal-check { display: flex; align-items: center; gap: 12rpx; margin-top: 8rpx; }
.check-dot { width: 40rpx; height: 40rpx; border: 2rpx solid #D2D2D7; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 24rpx; color: #FFFFFF; }
.check-dot.checked { background: #1D1D1F; border-color: #1D1D1F; }
.check-text { font-size: 26rpx; color: #86868B; }
.modal-footer { display: flex; gap: 20rpx; padding: 24rpx 32rpx 32rpx; }
.modal-btn { flex: 1; height: 88rpx; border-radius: 28rpx; font-size: 30rpx; font-weight: 500; display: flex; align-items: center; justify-content: center; border: none; }
.modal-btn::after { display: none; }
.btn-cancel { background: #F5F5F7 !important; color: #1D1D1F !important; }
.btn-save { background: #1D1D1F !important; color: #FFFFFF !important; }

