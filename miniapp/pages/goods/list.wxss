.container { padding: 20rpx; background: #f5f5f5; min-height: 100vh; }
.goods-grid { display: flex; flex-wrap: wrap; margin: -10rpx; }
.goods-item { width: calc(50% - 20rpx); margin: 10rpx; background: #fff; border-radius: 16rpx; overflow: hidden; }
.goods-image { width: 100%; height: 320rpx; }
.goods-info { padding: 16rpx; }
.goods-name { font-size: 28rpx; color: #333; display: block; }
.goods-price { font-size: 32rpx; color: #e53935; font-weight: bold; }
.loading, .no-more { text-align: center; padding: 30rpx; color: #999; }
