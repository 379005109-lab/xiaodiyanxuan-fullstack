/* 商品详情样式 */
.container {
  padding-bottom: 140rpx;
  background: #f5f5f5;
}

/* 商品轮播 */
.goods-swiper {
  height: 750rpx;
  background: #fff;
}

.goods-image {
  width: 100%;
  height: 100%;
}

/* 商品信息 */
.goods-info {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.price-row {
  display: flex;
  align-items: baseline;
}

.price {
  font-size: 48rpx;
  color: #e53935;
  font-weight: bold;
}

.original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 20rpx;
}

.goods-name {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-top: 20rpx;
  line-height: 1.5;
}

.tags {
  display: flex;
  margin-top: 16rpx;
}

.tag {
  font-size: 22rpx;
  color: #999;
  background: #f5f5f5;
  padding: 6rpx 16rpx;
  border-radius: 4rpx;
  margin-right: 16rpx;
}

/* 规格选择 */
.spec-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.spec-item {
  margin-bottom: 30rpx;
}

.spec-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
}

.spec-options {
  display: flex;
  flex-wrap: wrap;
}

.spec-option {
  padding: 16rpx 32rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  margin-right: 20rpx;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  color: #333;
  border: 2rpx solid transparent;
}

.spec-option.active {
  background: #ede9fe;
  border-color: #4f46e5;
  color: #4f46e5;
}

.spec-option .dims {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-top: 6rpx;
}

.spec-option .extra {
  color: #e53935;
  font-size: 22rpx;
  margin-left: 10rpx;
}

/* 规格名称 */
.spec-name {
  display: block;
  font-size: 26rpx;
}

/* 材质标题行 */
.spec-title-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.spec-count {
  font-size: 24rpx;
  color: #999;
  margin-left: 16rpx;
}

/* 子分类选项 */
.subgroup-options {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.subgroup-option {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  margin-right: 16rpx;
  margin-bottom: 12rpx;
  font-size: 24rpx;
  color: #666;
  border: 2rpx solid transparent;
}

.subgroup-option.active {
  background: #ede9fe;
  border-color: #4f46e5;
  color: #4f46e5;
}

.subgroup-title {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

/* 颜色网格 */
.color-grid {
  display: flex;
  flex-wrap: wrap;
}

.color-item {
  width: calc(20% - 16rpx);
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid transparent;
  border-radius: 8rpx;
  padding: 8rpx;
  box-sizing: border-box;
}

.color-item:nth-child(5n) {
  margin-right: 0;
}

.color-item.active {
  border-color: #4f46e5;
  background: #f5f3ff;
}

.color-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
}

.color-placeholder {
  width: 100rpx;
  height: 100rpx;
  background: #eee;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
}

.color-name {
  font-size: 20rpx;
  color: #666;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}

/* 内部结构 */
.structure-options {
  display: flex;
  flex-wrap: wrap;
}

.structure-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  margin-right: 20rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
}

.structure-item image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.structure-item text {
  font-size: 24rpx;
  color: #333;
}

/* 旧版颜色选项（兼容） */
.color-options {
  display: flex;
  flex-wrap: wrap;
}

.color-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  margin-right: 20rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
}

.color-option.active {
  border-color: #4f46e5;
}

.color-option image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.color-option text {
  font-size: 24rpx;
  color: #333;
}

/* 数量 */
.quantity-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.quantity-control {
  display: flex;
  align-items: center;
}

.qty-btn {
  width: 60rpx;
  height: 60rpx;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #333;
  border-radius: 8rpx;
}

.qty-num {
  width: 80rpx;
  text-align: center;
  font-size: 32rpx;
}

/* 描述 */
.desc-section {
  background: #fff;
  padding: 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.desc-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  display: flex;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-btns {
  display: flex;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 30rpx;
}

.action-icon {
  font-size: 40rpx;
}

.action-btn text:last-child {
  font-size: 22rpx;
  color: #666;
}

.buy-btn {
  flex: 1;
  background: linear-gradient(135deg, #4f46e5, #7c3aed);
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50rpx;
  margin-left: 30rpx;
}

/* 加载中 */
.loading {
  text-align: center;
  padding: 100rpx;
  color: #999;
}
