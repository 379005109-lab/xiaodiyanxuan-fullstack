/**login/index.wxss**/
@import '../../styles/remixicon.wxss';

page { background: #FFFFFF; }
.page-container { min-height: 100vh; background: #FFFFFF; position: relative; overflow: hidden; }

/* Background */
.bg-bottom {
  position: fixed; bottom: 0; left: 0; right: 0; height: 40vh; z-index: 0;
}
.bg-img { width: 100%; height: 100%; }
.bg-mask {
  position: absolute; top: 0; left: 0; right: 0; bottom: 0;
  background: linear-gradient(to bottom, rgba(255,255,255,1) 0%, rgba(255,255,255,0.95) 15%, rgba(255,255,255,0.7) 35%, rgba(255,255,255,0.3) 60%, rgba(255,255,255,0) 100%);
  backdrop-filter: blur(24rpx);
}

/* Nav Bar */
.nav-bar {
  position: fixed; top: 0; left: 0; right: 0; z-index: 50;
  background: rgba(255,255,255,0.8);
  backdrop-filter: saturate(180%) blur(40rpx);
  border-bottom: 1rpx solid #E5E5EA;
}
.nav-content {
  height: 88rpx; padding: 0 32rpx;
  display: flex; align-items: center; justify-content: space-between;
}
.nav-back {
  width: 64rpx; height: 64rpx;
  display: flex; align-items: center; justify-content: center;
}
.nav-back-icon { font-size: 48rpx; color: #1D1D1F; }
.nav-title { font-size: 34rpx; font-weight: 600; color: #1D1D1F; }
.nav-placeholder { width: 64rpx; }

/* Scroll Area */
.scroll-area {
  position: fixed; left: 0; right: 0; bottom: 0; z-index: 10;
}

/* Welcome */
.welcome-section { text-align: center; padding: 80rpx 0 60rpx; }
.logo-wrap {
  width: 160rpx; height: 160rpx; margin: 0 auto 40rpx;
  background: #F5F5F7; border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  border: 1rpx solid #E5E5EA;
}
.logo-icon { font-size: 72rpx; color: #1D1D1F; }
.welcome-title { font-size: 48rpx; font-weight: 600; color: #1D1D1F; margin-bottom: 16rpx; }
.welcome-desc { font-size: 30rpx; color: #6E6E73; }

/* Tab Switch */
.tab-switch {
  display: flex; margin: 0 48rpx 48rpx;
  background: #F5F5F7; border-radius: 999rpx; padding: 4rpx;
}
.tab-item {
  flex: 1; height: 72rpx;
  display: flex; align-items: center; justify-content: center;
  font-size: 30rpx; font-weight: 500; color: #8E8E93;
  border-radius: 999rpx; transition: all 0.2s;
}
.tab-item.active {
  background: #FFFFFF; color: #1D1D1F;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

/* Form */
.form-section { padding: 0 48rpx; }

.input-group {
  position: relative; margin-bottom: 24rpx;
  display: flex; align-items: center;
  height: 96rpx; background: #F5F5F7; border-radius: 24rpx;
  border: 2rpx solid transparent; transition: all 0.2s;
}
.input-group:focus-within,
.input-group-focus {
  border-color: #C7C7CC; background: #FFFFFF;
}

.input-icon-wrap {
  width: 40rpx; height: 40rpx;
  display: flex; align-items: center; justify-content: center;
  margin-left: 32rpx;
}
.input-icon { font-size: 36rpx; color: #8E8E93; }

.form-input {
  flex: 1; height: 100%; padding: 0 32rpx;
  font-size: 30rpx; color: #1D1D1F;
}
.input-with-suffix { padding-right: 120rpx; }

.input-suffix {
  position: absolute; right: 32rpx; top: 50%;
  transform: translateY(-50%);
  width: 40rpx; height: 40rpx;
  display: flex; align-items: center; justify-content: center;
}
.suffix-icon { font-size: 36rpx; color: #8E8E93; }

.code-btn {
  position: absolute; right: 16rpx; top: 50%;
  transform: translateY(-50%);
  height: 64rpx; padding: 0 24rpx;
  display: flex; align-items: center; justify-content: center;
  font-size: 28rpx; font-weight: 500; color: #1D1D1F;
  background: #FFFFFF; border: 1rpx solid #D2D2D7;
  border-radius: 16rpx; white-space: nowrap;
}
.code-btn.disabled {
  background: #F5F5F7; color: #C7C7CC; border-color: #E5E5EA;
}

.forgot-row { display: flex; justify-content: flex-end; margin-bottom: 24rpx; }
.forgot-btn { font-size: 28rpx; color: #8E8E93; }

/* Login Button */
.login-btn {
  width: 100%; height: 96rpx;
  display: flex; align-items: center; justify-content: center;
  font-size: 34rpx; font-weight: 500; color: #1D1D1F;
  background: #FFFFFF; border: 1rpx solid #D2D2D7;
  border-radius: 28rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  margin: 0; padding: 0; line-height: 96rpx;
}
.login-btn.disabled {
  background: #F5F5F7; color: #C7C7CC; border-color: #E5E5EA;
  box-shadow: none;
}
.login-btn::after { border: none; }
.mt-extra { margin-top: 24rpx; }

/* Terms */
.terms-row {
  display: flex; align-items: flex-start; gap: 16rpx;
  padding: 0 48rpx; margin-top: 40rpx;
}
.terms-checkbox {
  width: 40rpx; height: 40rpx; flex-shrink: 0; margin-top: 4rpx;
  border-radius: 50%; border: 3rpx solid #D2D2D7;
  display: flex; align-items: center; justify-content: center;
  background: #FFFFFF; transition: all 0.2s;
}
.terms-checkbox.checked {
  background: #1D1D1F; border-color: #1D1D1F;
}
.terms-check-icon { font-size: 24rpx; color: #FFFFFF; }
.terms-text { font-size: 26rpx; color: #8E8E93; line-height: 1.6; }
.terms-link { color: #1D1D1F; }

/* Divider */
.divider-row {
  display: flex; align-items: center; gap: 24rpx;
  padding: 0 48rpx; margin: 48rpx 0;
}
.divider-line { flex: 1; height: 1rpx; background: #E5E5EA; }
.divider-text { font-size: 26rpx; color: #8E8E93; }

/* Third Party */
.third-party-row {
  display: flex; justify-content: center; gap: 48rpx;
}
.third-btn {
  width: 96rpx; height: 96rpx; border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
}
.wechat-btn {
  background: rgba(7, 193, 96, 0.1); border: 1rpx solid rgba(7, 193, 96, 0.2);
}
.third-icon { font-size: 48rpx; }
.wechat-btn .third-icon { color: #07C160; }
