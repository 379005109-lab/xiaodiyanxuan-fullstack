/* 语言设置页面样式 */
page { 
  background: #f5f5f5; 
}
.page { 
  min-height: 100vh; 
  padding: 24rpx; 
  padding-top: calc(env(safe-area-inset-top) + 100rpx);
  box-sizing: border-box;
}

.lang-list {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
}

.lang-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 36rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background 0.2s;
}

.lang-item:last-child {
  border-bottom: none;
}

.lang-item:active {
  background: #f9f9f9;
}

.lang-item.active {
  background: linear-gradient(135deg, rgba(34,211,238,0.08) 0%, rgba(52,211,153,0.08) 100%);
}

.lang-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.lang-native {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.lang-name {
  font-size: 26rpx;
  color: #9ca3af;
}

.lang-check {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
}
