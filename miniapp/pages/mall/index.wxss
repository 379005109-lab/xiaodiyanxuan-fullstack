/* ZenLife 2.0 商城页 */
page { 
  background: linear-gradient(180deg, #e0f2fe 0%, #f0f9ff 50%, #dcfce7 100%);
  min-height: 100vh;
}
.page { 
  padding: 0 24rpx;
  padding-top: calc(env(safe-area-inset-top) + 24rpx); 
  box-sizing: border-box; 
}

/* ========== 顶部标题栏 ========== */
.mall-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 8rpx 32rpx;
}
.header-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1f2937;
}
.header-actions {
  display: flex;
  gap: 24rpx;
}
.action-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255,255,255,0.6);
  border-radius: 16rpx;
  font-size: 32rpx;
  color: #6b7280;
}
.action-btn.active {
  background: #1f2937;
  color: #FFFFFF;
}

/* ========== 搜索栏 ========== */
.search-bar { 
  display: flex; 
  align-items: center;
  gap: 16rpx; 
  height: 80rpx;
  background: rgba(255,255,255,0.8);
  border-radius: 40rpx;
  padding: 0 32rpx;
  margin-bottom: 24rpx;
}
.search-icon {
  font-size: 32rpx;
  color: #9ca3af;
}
.search-input { 
  flex: 1; 
  font-size: 28rpx; 
  color: #1f2937;
  background: transparent;
}
.search-input::placeholder {
  color: #9ca3af;
}

/* ========== 筛选标签 ========== */
.filter-tabs { 
  display: flex; 
  align-items: center; 
  gap: 48rpx;
  padding: 16rpx 8rpx 24rpx; 
}
.tab-item { 
  position: relative;
  color: #9ca3af; 
  font-size: 28rpx; 
  font-weight: 500;
}
.tab-item.active { 
  color: #22c55e; 
  font-weight: 700; 
}
.tab-dot {
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 8rpx;
  height: 8rpx;
  background: #22c55e;
  border-radius: 50%;
}

/* ========== 风格弹出层 ========== */
.style-popup { 
  position: absolute; 
  left: 0; right: 0; 
  top: 100%; 
  z-index: 100; 
  background: var(--color-card); 
  border: 2rpx solid var(--color-border); 
  border-top: none; 
  border-radius: 0 0 16rpx 16rpx; 
  padding: 20rpx; 
  margin-top: -2rpx; 
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
}
.style-mask { 
  position: fixed; 
  inset: 0; 
  background: rgba(0,0,0,0.2); 
  z-index: 50; 
}
.style-list { 
  display: grid; 
  grid-template-columns: repeat(4, 1fr); 
  gap: 16rpx; 
}
.style-tag { 
  padding: 12rpx 0; 
  text-align: center; 
  border: 2rpx solid var(--color-border); 
  border-radius: 8rpx; 
  color: var(--color-text); 
  font-size: 24rpx; 
}
.style-tag.active { 
  border-color: var(--color-primary); 
  background: rgba(20, 69, 47, 0.08); 
  color: var(--color-primary);
  font-weight: 600;
}
.style-actions { 
  display: flex; 
  gap: 16rpx; 
  justify-content: flex-end; 
  margin-top: 16rpx; 
}
.btn-reset { 
  height: 56rpx; 
  line-height: 56rpx; 
  padding: 0 24rpx; 
  background: var(--color-bg); 
  border-radius: 8rpx; 
  border: none; 
  color: var(--color-text); 
  font-size: 24rpx; 
}
.btn-apply { 
  height: 56rpx; 
  line-height: 56rpx; 
  padding: 0 24rpx; 
  background: var(--color-primary); 
  border-radius: 8rpx; 
  border: none; 
  color: #fff; 
  font-size: 24rpx;
  font-weight: 600;
}

/* ========== 类别抽屉 ========== */
.drawer-mask { 
  position: fixed; 
  inset: 0; 
  background: rgba(0,0,0,0.4); 
  z-index: 98; 
}
.drawer { 
  position: fixed; 
  left: 0; top: 0; bottom: 0; 
  width: 280rpx; 
  background: var(--color-card); 
  z-index: 120; 
  box-shadow: 4rpx 0 24rpx rgba(0,0,0,0.08); 
}
.drawer-mask.active { display: block; }
.drawer-list { height: 100%; }
.drawer-item { 
  padding: 24rpx 28rpx; 
  color: var(--color-text); 
  font-size: 28rpx; 
}
.drawer-item.active { 
  color: var(--color-primary); 
  font-weight: 700; 
  background: rgba(20, 69, 47, 0.06); 
}

/* ========== 商品滚动区 ========== */
.goods-scroll {
  height: calc(100vh - 400rpx);
}

/* ========== 商品网格 ========== */
.goods-grid { 
  display: grid; 
  grid-template-columns: repeat(2, 1fr); 
  gap: 20rpx; 
  padding: 8rpx;
}

.goods-card { 
  background: #FFFFFF; 
  border-radius: 48rpx; 
  overflow: hidden; 
  box-shadow: 0 8rpx 32rpx -8rpx rgba(0,0,0,0.05); 
}

.card-image { 
  width: 100%; 
  height: 280rpx; 
  background: #f0f9ff; 
  overflow: hidden;
  border-radius: 40rpx 40rpx 0 0;
}
.card-image image { 
  width: 100%; 
  height: 100%; 
}

.card-info { 
  padding: 24rpx; 
}
.card-name { 
  font-size: 28rpx; 
  font-weight: 600;
  color: #1f2937; 
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.card-desc {
  font-size: 22rpx;
  color: #9ca3af;
  margin-bottom: 16rpx;
}
.card-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.card-price { 
  font-size: 36rpx; 
  font-weight: 700; 
  color: #d97706; 
}
.card-cart-btn {
  width: 64rpx;
  height: 64rpx;
  background: #1f2937;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

/* ========== 大图模式 ========== */
.goods-list-large {
  padding: 8rpx;
}
.goods-card-large {
  background: #FFFFFF;
  border-radius: 48rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx -8rpx rgba(0,0,0,0.05);
}
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8rpx;
}
.card-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}
.card-fav {
  width: 64rpx;
  height: 64rpx;
  background: rgba(255,255,255,0.8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #d1d5db;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}
.card-subtitle {
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 24rpx;
}
.card-image-large {
  width: 100%;
  height: 400rpx;
  border-radius: 32rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}
.card-image-large image {
  width: 100%;
  height: 100%;
}
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255,255,255,0.9);
  border-radius: 999rpx;
  padding: 16rpx 16rpx 16rpx 32rpx;
}
.footer-left {
  display: flex;
  flex-direction: column;
}
.price-label {
  font-size: 20rpx;
  color: #9ca3af;
}
.price-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #d97706;
}
.footer-btn {
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%);
  color: #FFFFFF;
  font-size: 26rpx;
  font-weight: 600;
  padding: 20rpx 32rpx;
  border-radius: 999rpx;
  box-shadow: 0 8rpx 24rpx -8rpx rgba(52, 211, 153, 0.5);
}

/* ========== Tabs样式（保留兼容） ========== */
.tabs { 
  display: flex; 
  gap: 32rpx; 
  padding: 16rpx 8rpx 24rpx; 
}
.tab { 
  position: relative; 
  padding: 16rpx 8rpx; 
  color: #6B7280; 
  font-size: 28rpx;
}
.tab.active { 
  color: var(--color-primary); 
  font-weight: 600; 
}
.underline { 
  position: absolute; 
  left: 0; right: 0; 
  bottom: -4rpx; 
  height: 4rpx; 
  background: var(--color-primary); 
  border-radius: 4rpx; 
}


