/**mall/index.wxss**/
/* 小迪严选商城页 - ZenLife 2.0 */
page { 
  background: linear-gradient(180deg, #e0f2fe 0%, #f0f9ff 50%, #dcfce7 100%);
  background-attachment: fixed;
  color: #1f2937; 
}
.page { 
  padding: 24rpx; 
  padding-top: calc(env(safe-area-inset-top) + 100rpx); 
  padding-bottom: calc(env(safe-area-inset-bottom) + 160rpx);
  box-sizing: border-box; 
}

/* ========== 页面标题栏 ========== */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}
.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f2937;
}
.header-actions {
  display: flex;
  gap: 24rpx;
  font-size: 36rpx;
  color: #6b7280;
}

/* ========== 搜索栏 ========== */
.search-bar { 
  display: flex; 
  gap: 16rpx; 
  padding: 0 0 24rpx; 
}
.search-input { 
  flex: 1; 
  height: 80rpx; 
  border-radius: 999rpx; 
  background: rgba(255, 255, 255, 0.9); 
  display: flex; 
  align-items: center; 
  padding: 0 32rpx; 
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}
.search-icon {
  font-size: 32rpx;
  color: #9ca3af;
  margin-right: 16rpx;
}
.search-input input { 
  width: 100%; 
  font-size: 28rpx; 
  color: #1f2937;
}
.search-input input::placeholder {
  color: #9CA3AF;
}

/* ========== 顶部筛选条 ========== */
.top-filters { 
  display: flex; 
  align-items: center; 
  justify-content: space-between; 
  padding: 0 0 24rpx; 
  position: relative; 
}
.f-item { 
  color: #6B7280; 
  font-size: 28rpx; 
  padding: 12rpx 0;
  position: relative;
}
.f-item.active { 
  color: #22c55e; 
  font-weight: 700; 
}
.f-item.active::after {
  content: '';
  position: absolute;
  bottom: 4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 12rpx;
  height: 12rpx;
  background: #22c55e;
  border-radius: 50%;
}
.f-item .arrow { 
  margin-left: 4rpx; 
}

/* ========== 风格弹出层 ========== */
.style-popup { 
  position: absolute; 
  left: 0; right: 0; 
  top: 100%; 
  z-index: 100; 
  background: var(--color-card); 
  border: 2rpx solid var(--color-border); 
  border-top: none; 
  border-radius: 0 0 16rpx 16rpx; 
  padding: 20rpx; 
  margin-top: -2rpx; 
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
}
.style-mask { 
  position: fixed; 
  inset: 0; 
  background: rgba(0,0,0,0.2); 
  z-index: 50; 
}
.style-list { 
  display: grid; 
  grid-template-columns: repeat(4, 1fr); 
  gap: 16rpx; 
}
.style-tag { 
  padding: 12rpx 0; 
  text-align: center; 
  border: 2rpx solid var(--color-border); 
  border-radius: 8rpx; 
  color: var(--color-text); 
  font-size: 24rpx; 
}
.style-tag.active { 
  border-color: var(--color-primary); 
  background: rgba(20, 69, 47, 0.08); 
  color: var(--color-primary);
  font-weight: 600;
}
.style-actions { 
  display: flex; 
  gap: 16rpx; 
  justify-content: flex-end; 
  margin-top: 16rpx; 
}
.btn-reset { 
  height: 56rpx; 
  line-height: 56rpx; 
  padding: 0 24rpx; 
  background: var(--color-bg); 
  border-radius: 8rpx; 
  border: none; 
  color: var(--color-text); 
  font-size: 24rpx; 
}
.btn-apply { 
  height: 56rpx; 
  line-height: 56rpx; 
  padding: 0 24rpx; 
  background: var(--color-primary); 
  border-radius: 8rpx; 
  border: none; 
  color: #fff; 
  font-size: 24rpx;
  font-weight: 600;
}

/* ========== 类别抽屉 ========== */
.drawer-mask { 
  position: fixed; 
  inset: 0; 
  background: rgba(0,0,0,0.4); 
  z-index: 98; 
}
.drawer { 
  position: fixed; 
  left: 0; top: 0; bottom: 0; 
  width: 280rpx; 
  background: var(--color-card); 
  z-index: 120; 
  box-shadow: 4rpx 0 24rpx rgba(0,0,0,0.08); 
}
.drawer-mask.active { display: block; }
.drawer-list { height: 100%; }
.drawer-item { 
  padding: 24rpx 28rpx; 
  color: var(--color-text); 
  font-size: 28rpx; 
}
.drawer-item.active { 
  color: var(--color-primary); 
  font-weight: 700; 
  background: rgba(20, 69, 47, 0.06); 
}

/* ========== 商品网格 ========== */
.goods-grid { 
  display: grid; 
  grid-template-columns: repeat(2, 1fr); 
  gap: 20rpx; 
}
.goods-item { 
  background: rgba(255, 255, 255, 0.95); 
  border-radius: 32rpx; 
  overflow: hidden; 
  box-shadow: 0 8rpx 32rpx -12rpx rgba(0,0,0,0.05); 
}
.thumb-box { 
  position: relative; 
  width: 100%; 
  height: 320rpx; 
  background: #f0f9ff; 
  overflow: hidden; 
  border-radius: 24rpx 24rpx 0 0;
}
.thumb-img { 
  width: 100%; 
  height: 100%; 
  display: block; 
}
.hot-info { 
  padding: 20rpx 24rpx 24rpx; 
}
.h-name { 
  font-size: 28rpx; 
  color: #1f2937; 
  font-weight: 600;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 4rpx;
}
.h-desc {
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 12rpx;
}
.h-price { 
  margin-top: 8rpx; 
  display: flex; 
  align-items: center; 
  justify-content: space-between;
}
.price { 
  font-size: 36rpx; 
  font-weight: 700; 
  color: #d97706; 
}
.cart-icon {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #FFFFFF;
}

/* ========== Tabs样式（保留兼容） ========== */
.tabs { 
  display: flex; 
  gap: 32rpx; 
  padding: 16rpx 8rpx 24rpx; 
}
.tab { 
  position: relative; 
  padding: 16rpx 8rpx; 
  color: #6B7280; 
  font-size: 28rpx;
}
.tab.active { 
  color: var(--color-primary); 
  font-weight: 600; 
}
.underline { 
  position: absolute; 
  left: 0; right: 0; 
  bottom: -4rpx; 
  height: 4rpx; 
  background: var(--color-primary); 
  border-radius: 4rpx; 
}


