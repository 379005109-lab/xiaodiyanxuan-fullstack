/**mall/index.wxss**/
page { background: #FFFFFF; }

.page-container { min-height: 100vh; background: #FFFFFF; }

/* ========== 顶部导航栏 ========== */
.top-bar {
  position: fixed; top: 0; left: 0; right: 0; z-index: 50;
  background: rgba(255,255,255,0.95);
  backdrop-filter: blur(20px);
  border-bottom: 1rpx solid #E5E5EA;
}
.top-bar-inner {
  height: 88rpx; display: flex; align-items: center; padding: 0 32rpx;
}
.top-title {
  font-size: 34rpx; font-weight: 700; color: #1D1D1F;
}
.search-row {
  display: flex; align-items: center; gap: 16rpx;
  padding: 0 32rpx 16rpx;
}
.search-input-wrap {
  flex: 1; display: flex; align-items: center; gap: 12rpx;
  height: 72rpx; padding: 0 24rpx;
  background: #F5F5F7; border-radius: 28rpx;
}
.search-icon-text { font-size: 28rpx; }
.search-placeholder { font-size: 28rpx; color: #86868B; }
.camera-btn {
  width: 72rpx; height: 72rpx; display: flex; align-items: center; justify-content: center;
  background: #F5F5F7; border-radius: 50%; font-size: 32rpx;
}

/* ========== 主体布局 ========== */
.main-body {
  position: fixed; left: 0; right: 0; bottom: 0;
  display: flex;
}

/* 左侧分类栏 */
.side-bar {
  width: 176rpx; flex-shrink: 0;
  background: #F5F5F7; border-right: 1rpx solid #E5E5EA;
  height: 100%;
}
.side-item {
  position: relative; width: 100%;
  padding: 32rpx 8rpx;
  text-align: center;
  transition: all 0.2s;
}
.side-item.active { background: #FFFFFF; }
.side-indicator {
  position: absolute; left: 0; top: 50%; transform: translateY(-50%);
  width: 4rpx; height: 32rpx;
  background: #1D1D1F; border-radius: 0 4rpx 4rpx 0;
}
.side-text {
  font-size: 26rpx; color: #6E6E73; white-space: nowrap;
}
.side-item.active .side-text {
  color: #1D1D1F; font-weight: 600;
}

/* 右侧内容区 */
.content-area {
  flex: 1; height: 100%; min-width: 0;
}
.content-inner { padding: 24rpx; }

/* 骨架屏 */
.skeleton { padding: 24rpx; }
.skeleton-cover {
  width: 100%; height: 360rpx;
  background: #F5F5F7; border-radius: 32rpx;
  animation: pulse 1.5s ease-in-out infinite;
}
.skeleton-grid {
  display: grid; grid-template-columns: 1fr 1fr; gap: 20rpx; margin-top: 32rpx;
}
.skeleton-item { }
.skeleton-img {
  width: 100%; aspect-ratio: 1; background: #F5F5F7; border-radius: 32rpx;
  animation: pulse 1.5s ease-in-out infinite;
}
.skeleton-text {
  height: 32rpx; width: 60%; margin-top: 16rpx;
  background: #F5F5F7; border-radius: 8rpx;
  animation: pulse 1.5s ease-in-out infinite;
}
@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 封面卡片 */
.cover-card {
  position: relative; width: 100%; height: 360rpx;
  border-radius: 32rpx; overflow: hidden;
  background: #F5F5F7; border: 1rpx solid #E5E5EA;
}
.cover-img { width: 100%; height: 100%; }
.cover-gradient {
  position: absolute; inset: 0;
  background: linear-gradient(to top, rgba(0,0,0,0.4), rgba(0,0,0,0.1) 50%, transparent);
}
.cover-info {
  position: absolute; bottom: 0; left: 0; right: 0; padding: 24rpx 32rpx;
}
.cover-name {
  font-size: 40rpx; font-weight: 700; color: #FFFFFF; margin-bottom: 8rpx;
}
.cover-desc {
  font-size: 26rpx; color: rgba(255,255,255,0.9); margin-bottom: 20rpx;
}
.cover-btn {
  display: inline-block;
  padding: 12rpx 40rpx;
  font-size: 26rpx; font-weight: 500;
  color: #1D1D1F; background: rgba(255,255,255,0.9);
  backdrop-filter: blur(8px);
  border: 1rpx solid rgba(255,255,255,0.3);
  border-radius: 28rpx;
}

/* 细分类目 */
.sub-section { margin-top: 32rpx; }
.sub-title {
  font-size: 30rpx; font-weight: 600; color: #1D1D1F; margin-bottom: 24rpx;
}
.sub-grid {
  display: grid; grid-template-columns: 1fr 1fr; gap: 16rpx;
}
.sub-card {
  background: #FFFFFF; border-radius: 32rpx; overflow: hidden;
  border: 1rpx solid #E5E5EA;
}
.sub-card:active { opacity: 0.85; }
.sub-img-wrap {
  width: 100%; aspect-ratio: 1; background: #F5F5F7; overflow: hidden;
}
.sub-img { width: 100%; height: 100%; }
.sub-name {
  padding: 16rpx 20rpx; text-align: center;
  font-size: 26rpx; font-weight: 500; color: #1D1D1F;
}

/* 空状态 */
.empty-content {
  display: flex; flex-direction: column; align-items: center;
  justify-content: center; padding: 160rpx 0;
}
.empty-icon-text { font-size: 96rpx; color: #E5E5EA; margin-bottom: 24rpx; }
.empty-msg { font-size: 28rpx; color: #8E8E93; }
