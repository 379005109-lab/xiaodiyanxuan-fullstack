/**mall/index.wxss**/
/* 小迪严选商城页 - ZenLife 2.0 */
page { 
  background: linear-gradient(180deg, #e0f2fe 0%, #f0f9ff 50%, #dcfce7 100%);
  background-attachment: fixed;
  color: #1f2937; 
}
.scrollarea { min-height: 100vh; }
.page { 
  padding: 24rpx; 
  padding-top: calc(env(safe-area-inset-top) + 100rpx); 
  padding-bottom: calc(env(safe-area-inset-bottom) + 140rpx);
  box-sizing: border-box; 
}

/* ========== 顶部卡片 ========== */
.top-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 24rpx 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.04);
}

/* ========== 顶部标题栏 ========== */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}
.header-actions {
  display: flex;
  gap: 16rpx;
}

/* ========== 搜索栏 ========== */
.search-bar { 
  display: flex; 
  align-items: center;
  gap: 20rpx; 
  padding: 0 0 20rpx; 
}
.search-input { 
  flex: 1; 
  height: 76rpx; 
  border-radius: 999rpx; 
  background: #f3f4f6; 
  display: flex; 
  align-items: center; 
  padding: 0 28rpx; 
  box-shadow: none;
}
.search-icon-svg {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #9ca3af;
  border-radius: 50%;
  margin-right: 16rpx;
  position: relative;
}
.search-icon-svg::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  width: 12rpx;
  height: 4rpx;
  background: #9ca3af;
  transform: rotate(45deg);
}
.search-input input { 
  flex: 1;
  font-size: 28rpx; 
  color: #1f2937;
}
.search-input input::placeholder {
  color: #9CA3AF;
}
.view-toggle, .filter-btn {
  width: 72rpx;
  height: 72rpx;
  background: rgba(255,255,255,0.95);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.04);
}
.view-toggle.active {
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%);
}
.grid-icon {
  width: 28rpx;
  height: 28rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rpx;
}
.grid-icon::before,
.grid-icon::after {
  content: '';
  width: 10rpx;
  height: 10rpx;
  background: #6b7280;
  border-radius: 2rpx;
}
.view-toggle.active .grid-icon::before,
.view-toggle.active .grid-icon::after {
  background: #fff;
}
.filter-icon {
  width: 28rpx;
  height: 24rpx;
  position: relative;
}
.filter-icon::before,
.filter-icon::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #6b7280;
  border-radius: 2rpx;
}
.filter-icon::before { top: 4rpx; }
.filter-icon::after { bottom: 4rpx; }

/* ========== 顶部筛选条 ========== */
.top-filters { 
  display: flex; 
  align-items: center; 
  justify-content: space-between; 
  padding: 0 0 24rpx; 
  position: relative; 
}
.f-item { 
  color: #6B7280; 
  font-size: 28rpx; 
  padding: 12rpx 0;
  position: relative;
}
.f-item.active { 
  color: #22c55e; 
  font-weight: 700; 
}
.f-item.active::after {
  content: '';
  position: absolute;
  bottom: 4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 12rpx;
  height: 12rpx;
  background: #22c55e;
  border-radius: 50%;
}
.f-item .arrow { 
  margin-left: 4rpx; 
}

/* ========== 风格弹出层 ========== */
.style-popup { 
  position: absolute; 
  left: 0; right: 0; 
  top: 100%; 
  z-index: 100; 
  background: #fff; 
  border: 2rpx solid #e5e7eb; 
  border-top: none; 
  border-radius: 0 0 16rpx 16rpx; 
  padding: 20rpx; 
  margin-top: -2rpx; 
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
}
.style-list { 
  display: grid; 
  grid-template-columns: repeat(4, 1fr); 
  gap: 16rpx; 
}
.style-tag { 
  padding: 12rpx 0; 
  text-align: center; 
  border: 2rpx solid #e5e7eb; 
  border-radius: 8rpx; 
  color: #374151; 
  font-size: 24rpx; 
}
.style-tag.active { 
  border-color: #22c55e; 
  background: rgba(34, 197, 94, 0.08); 
  color: #22c55e;
  font-weight: 600;
}
.style-actions { 
  display: flex; 
  gap: 16rpx; 
  justify-content: flex-end; 
  margin-top: 16rpx; 
}
.btn-reset { 
  height: 56rpx; 
  line-height: 56rpx; 
  padding: 0 24rpx; 
  background: #f3f4f6; 
  border-radius: 8rpx; 
  border: none; 
  color: #374151; 
  font-size: 24rpx; 
}
.btn-apply { 
  height: 56rpx; 
  line-height: 56rpx; 
  padding: 0 24rpx; 
  background: #22c55e; 
  border-radius: 8rpx; 
  border: none; 
  color: #fff; 
  font-size: 24rpx;
  font-weight: 600;
}

/* ========== 类别抽屉 ========== */
.drawer-mask { 
  position: fixed; 
  inset: 0; 
  background: rgba(0,0,0,0.4); 
  z-index: 98; 
}
.drawer { 
  position: fixed; 
  left: 0; top: 0; bottom: 0; 
  width: 280rpx; 
  background: #fff; 
  z-index: 120; 
  box-shadow: 4rpx 0 24rpx rgba(0,0,0,0.08); 
}
.drawer-mask.active { display: block; }
.drawer-list { height: 100%; }
.drawer-item { 
  padding: 24rpx 28rpx; 
  color: #374151; 
  font-size: 28rpx; 
}
.drawer-item.active { 
  color: #22c55e; 
  font-weight: 700; 
  background: rgba(34, 197, 94, 0.06); 
}

/* ========== 商品网格 ========== */
.goods-grid { 
  display: grid; 
  grid-template-columns: repeat(2, 1fr); 
  gap: 20rpx; 
}
.goods-grid.list-mode {
  grid-template-columns: 1fr;
}
.goods-item { 
  background: rgba(255, 255, 255, 0.98); 
  border-radius: 32rpx; 
  overflow: hidden; 
  box-shadow: 0 8rpx 32rpx -12rpx rgba(0,0,0,0.06); 
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.goods-item:active { 
  transform: translateY(-8rpx) scale(1.02);
  box-shadow: 0 20rpx 48rpx -16rpx rgba(0,0,0,0.12); 
}
.thumb-box { 
  position: relative; 
  width: 100%; 
  padding: 20rpx;
  background: #f8fafc; 
  overflow: hidden; 
  border-radius: 24rpx 24rpx 0 0;
  box-sizing: border-box;
}
.thumb-img { 
  width: 100%; 
  height: 280rpx;
  display: block; 
  border-radius: 20rpx;
  background: #fff;
}
/* 列表模式 */
.goods-grid.list-mode .goods-item {
  display: flex;
  flex-direction: row;
}
.goods-grid.list-mode .thumb-box {
  width: 240rpx;
  height: 200rpx;
  flex-shrink: 0;
  padding: 16rpx;
  border-radius: 24rpx 0 0 24rpx;
}
.goods-grid.list-mode .thumb-img {
  height: 100%;
}
.goods-grid.list-mode .hot-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* 收藏按钮 */
.fav-btn {
  position: absolute;
  top: 28rpx;
  right: 28rpx;
  width: 56rpx;
  height: 56rpx;
  background: rgba(255,255,255,0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}
.goods-item:active .fav-btn {
  opacity: 1;
}
.heart-icon {
  width: 28rpx;
  height: 24rpx;
  position: relative;
}
.heart-icon::before,
.heart-icon::after {
  content: '';
  position: absolute;
  top: 0;
  width: 14rpx;
  height: 22rpx;
  border-radius: 14rpx 14rpx 0 0;
  background: transparent;
  border: 3rpx solid #9ca3af;
}
.heart-icon::before {
  left: 0;
  transform: rotate(-45deg);
  transform-origin: bottom right;
}
.heart-icon::after {
  right: 0;
  transform: rotate(45deg);
  transform-origin: bottom left;
}
.heart-icon.favorited::before,
.heart-icon.favorited::after {
  background: #ef4444;
  border-color: #ef4444;
}

.hot-info { 
  padding: 16rpx 20rpx 20rpx; 
}
.h-name { 
  font-size: 28rpx; 
  color: #1f2937; 
  font-weight: 700;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 6rpx;
}
.h-desc {
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.h-price { 
  display: flex; 
  align-items: center; 
  justify-content: space-between;
}
.price { 
  font-size: 36rpx; 
  font-weight: 700; 
  color: #d97706; 
}
.cart-btn {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cart-icon-svg {
  width: 28rpx;
  height: 28rpx;
  position: relative;
}
.cart-icon-svg::before {
  content: '';
  position: absolute;
  bottom: 2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 22rpx;
  height: 16rpx;
  border: 3rpx solid #fff;
  border-radius: 2rpx 2rpx 6rpx 6rpx;
  border-top: none;
}
.cart-icon-svg::after {
  content: '';
  position: absolute;
  top: 2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 12rpx;
  height: 6rpx;
  border: 3rpx solid #fff;
  border-bottom: none;
  border-radius: 8rpx 8rpx 0 0;
}


