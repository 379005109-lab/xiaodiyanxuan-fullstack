/**mall/detail/index.wxss**/
/* 商品详情页 - ZenLife 2.0 设计 */
page { background: #FDFBF7; color: #1f2937; }
.detail-page { min-height: 100vh; display: flex; flex-direction: column; }

/* 顶部导航栏 - 固定在安全区域下方 */
.detail-header { 
  position: fixed; 
  top: 0; 
  left: 0; 
  right: 0; 
  z-index: 100; 
  display: flex; 
  align-items: center; 
  justify-content: space-between; 
  padding: 20rpx 24rpx; 
  padding-top: calc(env(safe-area-inset-top) + 20rpx); 
  background: rgba(253,251,247,0.9);
  backdrop-filter: blur(20rpx);
}
.header-left, .header-btn { 
  width: 72rpx; 
  height: 72rpx; 
  background: rgba(255,255,255,0.95); 
  border-radius: 50%; 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
}
.header-center { flex: 1; text-align: center; padding: 0 16rpx; }
.header-title { font-size: 30rpx; font-weight: 600; color: #1f2937; display: block; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }
.header-right { display: flex; gap: 16rpx; }

/* 返回图标 - 矢量箭头 */
.back-icon-svg {
  width: 24rpx;
  height: 24rpx;
  border-left: 4rpx solid #1f2937;
  border-bottom: 4rpx solid #1f2937;
  transform: rotate(45deg);
  margin-left: 8rpx;
}

/* 收藏心形图标 */
.heart-icon {
  width: 32rpx;
  height: 28rpx;
  position: relative;
}
.heart-icon::before,
.heart-icon::after {
  content: '';
  position: absolute;
  top: 0;
  width: 16rpx;
  height: 26rpx;
  border-radius: 16rpx 16rpx 0 0;
  background: transparent;
  border: 3rpx solid #1f2937;
}
.heart-icon::before {
  left: 0;
  transform: rotate(-45deg);
  transform-origin: bottom right;
}
.heart-icon::after {
  right: 0;
  transform: rotate(45deg);
  transform-origin: bottom left;
}
.heart-icon.favorited::before,
.heart-icon.favorited::after {
  background: #ef4444;
  border-color: #ef4444;
}

/* 更多图标 - 三个点 */
.more-icon {
  width: 6rpx;
  height: 6rpx;
  background: #1f2937;
  border-radius: 50%;
  position: relative;
}
.more-icon::before,
.more-icon::after {
  content: '';
  position: absolute;
  width: 6rpx;
  height: 6rpx;
  background: #1f2937;
  border-radius: 50%;
}
.more-icon::before { left: -12rpx; }
.more-icon::after { right: -12rpx; }

/* 主内容区 */
.detail-content { flex: 1; display: flex; flex-direction: column; padding-top: calc(env(safe-area-inset-top) + 112rpx); }
.product-hero { flex: 1; position: relative; display: flex; align-items: center; justify-content: center; min-height: 500rpx; }

/* 左侧尺寸按钮 */
.dimension-sidebar { position: absolute; left: 24rpx; top: 50%; transform: translateY(-50%); display: flex; flex-direction: column; gap: 12rpx; z-index: 20; }
.dim-btn { width: 88rpx; height: 88rpx; background: rgba(255,255,255,0.85); backdrop-filter: blur(20rpx); border-radius: 20rpx; display: flex; flex-direction: column; align-items: center; justify-content: center; border: 2rpx solid rgba(255,255,255,0.5); box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06); }
.dim-icon { width: 32rpx; height: 32rpx; margin-bottom: 4rpx; position: relative; }
.dim-label { font-size: 20rpx; font-weight: 600; color: #6b7280; }
.specs-btn { background: rgba(255,255,255,0.95); }
.specs-label { font-size: 22rpx; font-weight: 600; color: #1f2937; }

/* 高度图标 - 垂直双箭头 */
.height-icon::before {
  content: '';
  position: absolute;
  left: 50%;
  top: 0;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-bottom: 10rpx solid #22c55e;
}
.height-icon::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 10rpx solid #22c55e;
}

/* 宽度图标 - 水平双箭头 */
.width-icon::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  width: 0;
  height: 0;
  border-top: 8rpx solid transparent;
  border-bottom: 8rpx solid transparent;
  border-right: 10rpx solid #22c55e;
}
.width-icon::after {
  content: '';
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  width: 0;
  height: 0;
  border-top: 8rpx solid transparent;
  border-bottom: 8rpx solid transparent;
  border-left: 10rpx solid #22c55e;
}

/* 长度图标 - 斜向双箭头 */
.length-icon::before {
  content: '';
  position: absolute;
  top: 2rpx;
  right: 2rpx;
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-bottom: 8rpx solid transparent;
  border-top: 10rpx solid #22c55e;
  transform: rotate(45deg);
}
.length-icon::after {
  content: '';
  position: absolute;
  bottom: 2rpx;
  left: 2rpx;
  width: 0;
  height: 0;
  border-right: 8rpx solid transparent;
  border-top: 8rpx solid transparent;
  border-bottom: 10rpx solid #22c55e;
  transform: rotate(45deg);
}

/* 商品图片 */
.hero-swiper { width: 100%; height: 500rpx; }
.hero-img { width: 100%; height: 100%; }

/* 悬浮购物车 */
.float-cart { position: absolute; bottom: 24rpx; right: 24rpx; width: 88rpx; height: 88rpx; background: rgba(31,41,55,0.9); border-radius: 50%; display: flex; align-items: center; justify-content: center; z-index: 20; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.2); }
.float-cart-badge { position: absolute; top: -8rpx; right: -8rpx; min-width: 36rpx; height: 36rpx; background: #ef4444; color: #fff; font-size: 20rpx; border-radius: 18rpx; display: flex; align-items: center; justify-content: center; border: 4rpx solid #fff; }

/* 购物车矢量图标 */
.cart-icon-svg {
  width: 36rpx;
  height: 36rpx;
  position: relative;
}
.cart-icon-svg::before {
  content: '';
  position: absolute;
  bottom: 4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 28rpx;
  height: 20rpx;
  border: 4rpx solid #fff;
  border-radius: 4rpx 4rpx 8rpx 8rpx;
  border-top: none;
}
.cart-icon-svg::after {
  content: '';
  position: absolute;
  top: 4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 14rpx;
  height: 8rpx;
  border: 4rpx solid #fff;
  border-bottom: none;
  border-radius: 10rpx 10rpx 0 0;
}

/* 底部白色卡片 - 减少上边距 */
.bottom-card { 
  background: rgba(255,255,255,0.95); 
  backdrop-filter: blur(40rpx); 
  border-radius: 60rpx 60rpx 0 0; 
  padding: 36rpx 32rpx; 
  padding-bottom: calc(36rpx + env(safe-area-inset-bottom)); 
  box-shadow: 0 -20rpx 60rpx rgba(0,0,0,0.1); 
  border-top: 2rpx solid rgba(255,255,255,0.5); 
  margin-top: -40rpx;
}

/* 颜色/材质选择器 - 支持缩略图 */
.color-picker { display: flex; align-items: center; gap: 16rpx; margin-bottom: 24rpx; flex-wrap: wrap; }
.color-item { width: 64rpx; height: 64rpx; border-radius: 14rpx; border: 3rpx solid transparent; transition: all 0.3s; overflow: hidden; }
.color-item.active { border-color: #1f2937; transform: scale(1.1); box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.2); }
.color-thumb { width: 100%; height: 100%; object-fit: cover; }
.color-block { width: 100%; height: 100%; }
.color-more { width: 64rpx; height: 64rpx; border-radius: 14rpx; background: #f3f4f6; display: flex; align-items: center; justify-content: center; font-size: 32rpx; color: #9ca3af; }

/* 商品名称和数量 */
.product-title-row { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 20rpx; }
.product-name { font-size: 36rpx; font-weight: 700; color: #1f2937; flex: 1; line-height: 1.3; }
.quantity-stepper { display: flex; align-items: center; gap: 16rpx; background: #f3f4f6; border-radius: 999rpx; padding: 8rpx 16rpx; border: 2rpx solid #e5e7eb; }
.stepper-btn { width: 36rpx; height: 36rpx; display: flex; align-items: center; justify-content: center; font-size: 28rpx; color: #6b7280; }
.stepper-value { font-size: 26rpx; font-weight: 600; min-width: 40rpx; text-align: center; }

/* 已选配置 - 渐变色背景 */
.selected-config { margin-bottom: 24rpx; }
.config-label { font-size: 24rpx; color: #9ca3af; margin-bottom: 12rpx; display: block; }
.config-value { 
  display: inline-flex; 
  align-items: center; 
  gap: 12rpx; 
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%); 
  padding: 16rpx 24rpx; 
  border-radius: 24rpx; 
  font-size: 26rpx; 
  font-weight: 600; 
  color: #fff;
  box-shadow: 0 8rpx 24rpx -8rpx rgba(52,211,153,0.5);
}
.config-arrow { color: rgba(255,255,255,0.8); margin-left: 8rpx; }

/* 价格和加入购物车 */
.price-action-row { display: flex; justify-content: space-between; align-items: center; }
.price-info { display: flex; flex-direction: column; }
.price-value { font-size: 44rpx; font-weight: 700; color: #d97706; }
.price-label { font-size: 22rpx; color: #9ca3af; }
.add-cart-btn { display: flex; align-items: center; gap: 12rpx; padding: 22rpx 40rpx; background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%); color: #fff; font-size: 28rpx; font-weight: 600; border-radius: 40rpx; box-shadow: 0 12rpx 32rpx -8rpx rgba(52,211,153,0.5); }

/* 加入购物车按钮图标 */
.btn-cart-icon {
  width: 28rpx;
  height: 28rpx;
  position: relative;
}
.btn-cart-icon::before {
  content: '';
  position: absolute;
  bottom: 2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 22rpx;
  height: 16rpx;
  border: 3rpx solid #fff;
  border-radius: 2rpx 2rpx 6rpx 6rpx;
  border-top: none;
}
.btn-cart-icon::after {
  content: '';
  position: absolute;
  top: 2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 12rpx;
  height: 6rpx;
  border: 3rpx solid #fff;
  border-bottom: none;
  border-radius: 8rpx 8rpx 0 0;
}

/* 弹窗遮罩 */
.sheet-mask { position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(15,23,42,0.3); backdrop-filter: blur(8rpx); z-index: 200; opacity: 0; pointer-events: none; transition: opacity 0.3s; }
.sheet-mask.show { opacity: 1; pointer-events: auto; }

/* 规格弹窗 */
.spec-sheet, .color-sheet { position: fixed; left: 0; right: 0; bottom: 0; background: #fff; border-radius: 60rpx 60rpx 0 0; padding: 32rpx; padding-bottom: calc(32rpx + env(safe-area-inset-bottom)); z-index: 201; transform: translateY(100%); transition: transform 0.3s; max-height: 70vh; display: flex; flex-direction: column; }
.spec-sheet.show, .color-sheet.show { transform: translateY(0); }
.sheet-handle { width: 80rpx; height: 8rpx; background: #e5e7eb; border-radius: 4rpx; margin: 0 auto 20rpx; }
.sheet-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20rpx; }
.sheet-title { font-size: 32rpx; font-weight: 700; color: #1f2937; }
.sheet-close { width: 56rpx; height: 56rpx; background: #f3f4f6; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 26rpx; color: #6b7280; }

/* 规格列表 - 缩小卡片 */
.spec-list { flex: 1; overflow-y: auto; margin-bottom: 20rpx; }
.spec-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 16rpx; }
.spec-card { background: #fff; border: 3rpx solid #e5e7eb; border-radius: 20rpx; padding: 12rpx; position: relative; }
.spec-card.active { border-color: #22c55e; background: rgba(34,197,94,0.05); }
.spec-card-img { width: 100%; aspect-ratio: 1/1; border-radius: 16rpx; background: #f3f4f6; margin-bottom: 8rpx; object-fit: cover; }
.spec-card-check { position: absolute; top: 16rpx; right: 16rpx; width: 32rpx; height: 32rpx; background: #22c55e; color: #fff; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 20rpx; }
.spec-card-name { font-size: 22rpx; font-weight: 600; color: #1f2937; margin-bottom: 4rpx; text-align: center; }
.spec-card-dims { font-size: 20rpx; color: #9ca3af; text-align: center; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }

/* 颜色弹窗 */
.color-scroll { flex: 1; overflow-y: auto; margin-bottom: 20rpx; }
.material-group { margin-bottom: 28rpx; }
.material-group-title { display: flex; align-items: center; gap: 12rpx; font-size: 26rpx; font-weight: 600; color: #1f2937; margin-bottom: 16rpx; }
.material-indicator { width: 6rpx; height: 24rpx; background: #22c55e; border-radius: 3rpx; }
.color-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 16rpx; }
.color-option { display: flex; flex-direction: column; align-items: center; gap: 8rpx; }
.color-swatch { width: 80rpx; height: 80rpx; border-radius: 20rpx; border: 3rpx solid transparent; transition: all 0.3s; }
.color-swatch-img { width: 80rpx; height: 80rpx; border-radius: 20rpx; border: 3rpx solid transparent; transition: all 0.3s; }
.color-option.active .color-swatch,
.color-option.active .color-swatch-img { border-color: #1f2937; transform: scale(1.05); box-shadow: 0 0 0 4rpx rgba(31,41,55,0.1); }
.color-name { font-size: 20rpx; color: #6b7280; text-align: center; }
.color-option.active .color-name { color: #1f2937; font-weight: 600; }

/* 确认按钮 */
.sheet-confirm { width: 100%; height: 88rpx; background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%); color: #fff; font-size: 30rpx; font-weight: 600; border-radius: 24rpx; display: flex; align-items: center; justify-content: center; box-shadow: 0 8rpx 24rpx -8rpx rgba(52,211,153,0.5); }
