/**mall/detail/index.wxss**/
/* 小迪严选商品详情页 - 按UI设计规范 */
page { 
  background: var(--color-bg); 
  color: var(--color-text); 
}
.page { 
  padding-bottom: 280rpx; 
  padding-top: calc(44px + env(safe-area-inset-top)); 
}

/* 悬浮购物车按钮 - 放在右下角 */
.float-cart-btn { position: fixed; bottom: 200rpx; right: 24rpx; width: 96rpx; height: 96rpx; background: #333333; border-radius: 50%; display: flex; align-items: center; justify-content: center; box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2); z-index: 100; }
.cart-icon-simple { position: relative; width: 40rpx; height: 36rpx; }
.cart-basket { width: 40rpx; height: 28rpx; border: 4rpx solid #FFFFFF; border-top: none; border-radius: 0 0 8rpx 8rpx; position: absolute; bottom: 0; }
.cart-handle { width: 24rpx; height: 12rpx; border: 4rpx solid #FFFFFF; border-bottom: none; border-radius: 12rpx 12rpx 0 0; position: absolute; top: 0; left: 8rpx; }
.float-cart-badge { position: absolute; top: -6rpx; right: -6rpx; min-width: 36rpx; height: 36rpx; background: #FF4444; color: #FFFFFF; font-size: 22rpx; font-weight: 600; border-radius: 18rpx; display: flex; align-items: center; justify-content: center; padding: 0 8rpx; border: 2rpx solid #FFFFFF; }

/* ========== 商品轮播图 ========== */
.detail-swiper { 
  height: 640rpx; 
  background: var(--color-bg); 
  border-radius: 16rpx; 
  overflow: hidden; 
  margin: 16rpx 24rpx 12rpx; 
}
.d-img { 
  width: 100%; 
  height: 100%; 
}

/* ========== 缩略图列表 ========== */
.thumbs { 
  padding: 16rpx 24rpx; 
  white-space: nowrap; 
}
.thumb { 
  width: 140rpx; 
  height: 140rpx; 
  border-radius: 12rpx; 
  margin-right: 16rpx; 
  background: var(--color-bg); 
  border: 4rpx solid transparent; 
}
.thumb.active { 
  border-color: var(--color-primary); 
}

/* ========== 商品信息 ========== */
.info { 
  padding: 24rpx 32rpx; 
}
.row { 
  display: flex; 
  align-items: center; 
  justify-content: space-between; 
}
.name { 
  font-size: 36rpx; 
  font-weight: 700; 
  color: var(--color-text); 
}
.pro-toggle { 
  display: flex; 
  align-items: center; 
  gap: 12rpx; 
}
.pro-label { 
  color: #6B7280; 
  font-weight: 700; 
  font-size: 26rpx;
}
.price { 
  margin-top: 12rpx; 
  font-size: 40rpx; 
  font-weight: 700; 
  color: var(--color-accent); 
}
.sub { 
  margin-top: 4rpx; 
  font-size: 24rpx; 
  color: #9CA3AF; 
}

/* ========== 规格选择网格 ========== */
.spec-grid { 
  display: grid; 
  grid-template-columns: repeat(2, 1fr); 
  gap: 20rpx; 
}
.spec-card { 
  background: var(--color-card); 
  border: 4rpx solid var(--color-border); 
  border-radius: 16rpx; 
  overflow: hidden; 
}
.spec-card.active { 
  border-color: var(--color-primary); 
  box-shadow: 0 0 0 4rpx rgba(20, 69, 47, 0.12) inset; 
}
.spec-img { 
  width: 100%; 
  height: 280rpx; 
  background: var(--color-bg); 
  display: block; 
}
.spec-meta { 
  padding: 16rpx; 
}
.spec-title { 
  color: var(--color-text); 
  font-weight: 600; 
  font-size: 28rpx;
}
.spec-dims { 
  color: #7A7A7A; 
  font-size: 24rpx; 
  margin-top: 4rpx; 
}

/* ========== 材质选择网格 ========== */
.mat-grid { 
  display: grid; 
  grid-template-columns: repeat(2, 1fr); 
  gap: 20rpx; 
}
.mat-card { 
  background: var(--color-card); 
  border: 4rpx solid var(--color-border); 
  border-radius: 16rpx; 
  overflow: hidden; 
  text-align: left; 
}
.mat-card.active { 
  border-color: var(--color-primary); 
  box-shadow: 0 0 0 4rpx rgba(20, 69, 47, 0.12) inset; 
}
.mat-img { 
  width: 100%; 
  height: 280rpx; 
  background: var(--color-bg); 
  display: block; 
}
.mat-title { 
  padding: 16rpx 16rpx 0; 
  color: var(--color-text); 
  font-weight: 600; 
  font-size: 28rpx;
}
.mat-extra { 
  padding: 0 16rpx 16rpx; 
  color: #6B7280; 
  font-size: 24rpx; 
}
.mat-vertical { 
  display: flex; 
  flex-direction: column; 
  gap: 24rpx; 
}
.matv-card { 
  background: var(--color-card); 
  border: 4rpx solid var(--color-border); 
  border-radius: 16rpx; 
  overflow: hidden; 
}
.matv-card.active { 
  border-color: var(--color-primary); 
  box-shadow: 0 0 0 4rpx rgba(20, 69, 47, 0.12) inset; 
}
.matv-img { 
  width: 100%; 
  height: 280rpx; 
  background: var(--color-bg); 
  display: block; 
}
.matv-meta { 
  padding: 16rpx; 
}
.matv-title { 
  font-weight: 700; 
  color: var(--color-text); 
  display: flex; 
  align-items: center; 
  gap: 16rpx; 
  font-size: 28rpx;
}
.matv-extra { 
  font-size: 24rpx; 
  color: #6B7280; 
  font-weight: 400; 
}
.spec-options.center { 
  justify-content: center; 
}

/* ========== Tabs标签页 ========== */
.tabs-head { 
  display: flex; 
  gap: 0; 
  padding: 16rpx 24rpx 0; 
  justify-content: space-around; 
  position: sticky; 
  top: 0; 
  background: var(--color-bg); 
  z-index: 5; 
}
.tab { 
  padding: 20rpx 0; 
  color: #6B7280; 
  text-align: center; 
  flex: 1; 
  font-size: 28rpx;
}
.tab.active { 
  color: var(--color-primary); 
  font-weight: 600; 
  border-bottom: 4rpx solid var(--color-primary); 
}

/* ========== 区块样式 ========== */
.section { 
  padding: 0 24rpx 24rpx; 
}
.section-hd { 
  margin-top: 24rpx; 
  margin-bottom: 16rpx; 
  font-size: 28rpx; 
  color: var(--color-text); 
  font-weight: 600; 
}

/* ========== 版本选择 ========== */
.version { 
  display: flex; 
  gap: 16rpx; 
}
.v-btn { 
  padding: 16rpx 24rpx; 
  border-radius: 9999rpx; 
  background: var(--color-card); 
  color: var(--color-text); 
  font-size: 24rpx; 
  border: 2rpx solid var(--color-border); 
}
.v-btn.active { 
  background: rgba(20, 69, 47, 0.08); 
  border-color: var(--color-primary); 
  color: var(--color-primary);
}

/* ========== 尺寸标签 ========== */
.dims { 
  display: flex; 
  gap: 24rpx; 
  color: #6B7280; 
  font-size: 24rpx; 
}
.dim { 
  padding: 12rpx 16rpx; 
  background: var(--color-card); 
  border-radius: 8rpx; 
  border: 2rpx solid var(--color-border); 
}

/* ========== 规格选项 ========== */
.spec-options { 
  display: flex; 
  flex-wrap: wrap; 
  gap: 16rpx; 
}
.spec-item { 
  padding: 16rpx 24rpx; 
  border-radius: 9999rpx; 
  background: var(--color-card); 
  color: var(--color-text); 
  font-size: 24rpx; 
  border: 2rpx solid var(--color-border); 
}
.spec-item.active { 
  background: var(--color-primary); 
  color: #FFFFFF; 
  border-color: var(--color-primary); 
}
.spec-name { 
  font-weight: 600; 
}
.spec-extra { 
  font-size: 24rpx; 
  color: #8A8F98; 
  margin-left: 12rpx; 
  display: inline-block; 
}

/* ========== 结构分组 ========== */
.struct-group { 
  margin-bottom: 16rpx; 
}
.struct-title { 
  font-size: 24rpx; 
  color: #7A7A7A; 
  margin: 16rpx 0; 
}
/* ========== 导航栏操作按钮 ========== */
.nb-actions { 
  display: flex; 
  align-items: center; 
  gap: 32rpx; 
  padding-right: 40rpx; 
}
.nb-action-btn { 
  position: relative; 
  width: 72rpx; 
  height: 72rpx; 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  background: transparent; 
  border: none; 
  padding: 0; 
}
.nb-action-btn::after { display: none; }
.nb-icon { 
  font-size: 40rpx; 
  color: var(--color-text); 
}
.nb-action-btn.favorited .nb-icon { 
  color: var(--color-accent); 
}
.cart-btn .nb-icon { 
  font-size: 44rpx; 
}
.nb-badge { 
  position: absolute; 
  top: -12rpx; 
  right: -12rpx; 
  min-width: 36rpx; 
  height: 36rpx; 
  line-height: 36rpx; 
  padding: 0 10rpx; 
  background: var(--color-accent); 
  color: #FFFFFF; 
  border-radius: 18rpx; 
  font-size: 20rpx; 
  text-align: center; 
  border: 4rpx solid #FFFFFF; 
  z-index: 5; 
}
.nb-icon-share { 
  font-size: 28rpx; 
  color: var(--color-text); 
}
.icon-share { 
  font-size: 0; 
  line-height: 0; 
}
.icon-share .nb-icon { 
  font-size: 40rpx; 
}
/* 动画效果 - 丢到文件夹效果 */
.animation-container { position: fixed; top: 0; left: 0; right: 0; bottom: 0; z-index: 9999; pointer-events: none; }
.animation-item { position: absolute; }
.animation-icon { font-size: 40px; }
.animation-text { font-size: 14px; color: #FFFFFF; font-weight: 600; display: none; }
.favorite-animation { animation: favoriteToFolder 0.8s ease-out forwards; }
.cart-animation { animation: cartToFolder 0.8s ease-out forwards; }
@keyframes favoriteToFolder {
	0% { 
		top: 50%; 
		left: 50%; 
		transform: translate(-50%, -50%) scale(1); 
		opacity: 1; 
	}
	50% {
		top: 50%; 
		left: 50%; 
		transform: translate(-50%, -50%) scale(0.8); 
		opacity: 0.8; 
	}
	100% { 
		top: calc(44px + env(safe-area-inset-top) + 8px); 
		right: 12px; 
		transform: translate(0, 0) scale(0.3); 
		opacity: 0; 
	}
}
@keyframes cartToFolder {
	0% { 
		top: 50%; 
		left: 50%; 
		transform: translate(-50%, -50%) scale(1); 
		opacity: 1; 
	}
	50% {
		top: 50%; 
		left: 50%; 
		transform: translate(-50%, -50%) scale(0.8); 
		opacity: 0.8; 
	}
	100% { 
		top: calc(44px + env(safe-area-inset-top) + 8px); 
		right: 60px; 
		transform: translate(0, 0) scale(0.3); 
		opacity: 0; 
	}
}
/* ========== 底部操作栏 ========== */
.bottom-bar { 
  position: fixed; 
  left: 0; right: 0; bottom: 0; 
  background: var(--color-card); 
  display: flex; 
  align-items: center; 
  gap: 16rpx; 
  padding: 20rpx 24rpx; 
  box-shadow: 0 -8rpx 24rpx rgba(0,0,0,0.06); 
  box-sizing: border-box; 
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

/* 收藏按钮 */
.btn-fav {
  width: 80rpx;
  height: 80rpx;
  min-height: 80rpx;
  border-radius: 40rpx;
  border: 2rpx solid var(--color-border);
  background: var(--color-card) !important;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  flex-shrink: 0;
  line-height: 1;
}
.btn-fav::after {
  display: none;
}
.btn-fav .btn-icon {
  font-size: 36rpx;
  color: #9CA3AF;
  line-height: 1;
}
.btn-fav-active {
  border-color: var(--color-accent) !important;
  background: rgba(214, 173, 96, 0.1) !important;
}
.btn-fav-active .btn-icon {
  color: var(--color-accent);
}

/* 加入购物车按钮 */
.btn-cart {
  flex: 1;
  height: 80rpx;
  min-height: 80rpx;
  border-radius: 40rpx;
  border: 2rpx solid var(--color-primary);
  background: var(--color-card) !important;
  color: var(--color-primary) !important;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  line-height: 1;
}
.btn-cart::after {
  display: none;
}

/* 立即购买按钮 */
.btn-buy { 
  flex: 1;
  height: 80rpx;
  min-height: 80rpx;
  border-radius: 40rpx;
  background: var(--color-primary) !important; 
  color: #FFFFFF !important; 
  border: none !important;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  line-height: 1;
}
.btn-buy::after {
  display: none;
}

/* ========== 详情图片 ========== */
.detail-images { 
  padding: 24rpx; 
  display: grid; 
  gap: 16rpx; 
}
.detail-img { 
  width: 100%; 
  border-radius: 12rpx; 
  background: var(--color-bg); 
}

/* ========== 强调色 ========== */
.danger { 
  color: var(--color-accent); 
}

/* ========== 返回按钮 ========== */
.hero { 
  position: relative; 
}
.detail-back { 
  position: absolute; 
  top: 24rpx; 
  left: 24rpx; 
  width: 72rpx; 
  height: 72rpx; 
  border-radius: 36rpx; 
  background: rgba(20, 69, 47, 0.65); 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  z-index: 2; 
  backdrop-filter: blur(12rpx); 
}
.detail-back-icon { 
  color: #FFFFFF; 
  font-size: 36rpx; 
  line-height: 1; 
}
.detail-back:active { 
  opacity: 0.8; 
}

/* ========== 已选规格展示区域 ========== */
.selected-specs {
  background: #FFFFFF;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}
.specs-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #F0F0F0;
}
.specs-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}
.specs-total {
  font-size: 32rpx;
  font-weight: 700;
  color: #1A3A2F;
}
.specs-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}
.spec-line {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}
.spec-label {
  color: #999999;
  width: 80rpx;
  flex-shrink: 0;
}
.spec-value {
  color: #333333;
  flex: 1;
}
.spec-extra {
  color: #FF6B00;
  font-weight: 500;
  margin-left: 12rpx;
}

