/**mall/detail/index.wxss**/
/* 商品详情页 — Apple 风格 */
page {
  background: #FFFFFF;
  color: #1D1D1F;
}

.page-scroll {
  height: 100vh;
}

.page {
  padding-top: calc(44px + env(safe-area-inset-top));
}

/* ========== 商品图轮播 ========== */
.gallery-section {
  position: relative;
  width: 100%;
}

.gallery-swiper {
  width: 100%;
  height: 750rpx;
  background: #F5F5F7;
}

.gallery-img {
  width: 100%;
  height: 100%;
}

.gallery-counter {
  position: absolute;
  bottom: 24rpx;
  right: 32rpx;
  padding: 8rpx 20rpx;
  background: rgba(0, 0, 0, 0.35);
  -webkit-backdrop-filter: blur(20rpx);
  backdrop-filter: blur(20rpx);
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* ========== 商品基本信息 ========== */
.product-info {
  padding: 32rpx;
}

.product-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #1D1D1F;
  letter-spacing: -0.5rpx;
  line-height: 1.3;
}

.product-desc {
  font-size: 26rpx;
  color: #86868B;
  margin-top: 12rpx;
  line-height: 1.5;
}

.product-price-row {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
  margin-top: 20rpx;
}

.product-price {
  font-size: 44rpx;
  font-weight: 600;
  color: #1D1D1F;
  letter-spacing: -1rpx;
}

.product-base-price {
  font-size: 24rpx;
  color: #86868B;
}

.detail-divider {
  height: 16rpx;
  background: #F5F5F7;
}

/* ========== 规格选择 Tab ========== */
.config-tabs {
  display: flex;
  gap: 0;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #E5E5EA;
}

.config-tab {
  padding: 24rpx 0;
  margin-right: 48rpx;
  font-size: 28rpx;
  color: #86868B;
  font-weight: 400;
  position: relative;
}

.config-tab.active {
  color: #1D1D1F;
  font-weight: 500;
}

.config-tab.active::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 4rpx;
  background: #1D1D1F;
  border-radius: 4rpx;
}

/* ========== 配置区域通用 ========== */
.config-section {
  padding: 32rpx;
}

.config-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #1D1D1F;
  margin-bottom: 24rpx;
}

/* ========== 规格尺寸 ========== */
.size-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.size-card {
  display: flex;
  gap: 24rpx;
  padding: 24rpx;
  border: 2rpx solid #D2D2D7;
  border-radius: 24rpx;
  background: #FFFFFF;
  transition: all 0.2s ease;
}

.size-card.active {
  border-color: #1D1D1F;
  background: #FAFAFA;
}

.size-img {
  width: 160rpx;
  height: 120rpx;
  border-radius: 16rpx;
  background: #F5F5F7;
  flex-shrink: 0;
}

.size-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.size-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1D1D1F;
}

.size-dims {
  font-size: 24rpx;
  color: #86868B;
  margin-top: 8rpx;
}

.size-extra {
  font-size: 24rpx;
  color: #86868B;
  margin-top: 8rpx;
}

.size-extra.has-extra {
  color: #FF9500;
  font-weight: 500;
}

/* ========== 材质选择 ========== */
.material-card {
  display: flex;
  gap: 24rpx;
  padding: 24rpx;
  border: 2rpx solid #D2D2D7;
  border-radius: 24rpx;
  background: #FFFFFF;
  margin-bottom: 20rpx;
  transition: all 0.2s ease;
}

.material-card.active {
  border-color: #1D1D1F;
  background: #FAFAFA;
}

.material-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  background: #F5F5F7;
  flex-shrink: 0;
}

.material-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0;
}

.material-name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.material-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1D1D1F;
}

.material-extra {
  font-size: 24rpx;
  color: #86868B;
}

.material-extra.has-extra {
  color: #FF9500;
  font-weight: 500;
}

.color-options {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 20rpx;
}

.color-chip {
  padding: 10rpx 24rpx;
  border: 2rpx solid #D2D2D7;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #1D1D1F;
  background: #FFFFFF;
}

.color-chip.active {
  border-color: #1D1D1F;
  background: #1D1D1F;
  color: #FFFFFF;
}

/* ========== 内部结构 ========== */
.struct-block {
  margin-bottom: 32rpx;
}

.option-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.option-card {
  padding: 20rpx;
  border: 2rpx solid #D2D2D7;
  border-radius: 20rpx;
  background: #FFFFFF;
  text-align: center;
  transition: all 0.2s ease;
}

.option-card.active {
  border-color: #1D1D1F;
  background: #FAFAFA;
}

.option-img {
  width: 100%;
  height: 200rpx;
  border-radius: 16rpx;
  background: #F5F5F7;
  margin-bottom: 12rpx;
}

.option-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #1D1D1F;
}

.option-extra {
  font-size: 22rpx;
  color: #86868B;
  margin-top: 4rpx;
}

.option-extra.has-extra {
  color: #FF9500;
  font-weight: 500;
}

/* ========== 已选配置汇总 ========== */
.selected-summary {
  padding: 32rpx;
}

.summary-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #E5E5EA;
  margin-bottom: 20rpx;
}

.summary-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1D1D1F;
}

.summary-total {
  font-size: 36rpx;
  font-weight: 600;
  color: #1D1D1F;
}

.summary-items {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.summary-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.summary-label {
  font-size: 26rpx;
  color: #86868B;
}

.summary-value {
  font-size: 26rpx;
  color: #1D1D1F;
  font-weight: 400;
}

/* ========== 底部操作栏 ========== */
.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.92);
  -webkit-backdrop-filter: saturate(180%) blur(40rpx);
  backdrop-filter: saturate(180%) blur(40rpx);
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 16rpx 32rpx;
  border-top: 1rpx solid #E5E5EA;
  z-index: 100;
}

.safe-area-bottom {
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}

.bar-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex-shrink: 0;
}

.bar-icon-btn {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2rpx;
}

.bar-icon {
  font-size: 40rpx;
  line-height: 1;
  color: #1D1D1F;
}

.bar-icon.icon-active {
  color: #FF3B30;
}

.bar-icon-label {
  font-size: 18rpx;
  color: #86868B;
}

.bar-badge {
  position: absolute;
  top: -8rpx;
  right: -12rpx;
  min-width: 32rpx;
  height: 32rpx;
  background: #FF3B30;
  color: #FFFFFF;
  font-size: 20rpx;
  font-weight: 500;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

.bar-buttons {
  flex: 1;
  display: flex;
  gap: 16rpx;
}

.bar-btn-cart {
  flex: 1;
  height: 80rpx;
  border-radius: 28rpx;
  border: 2rpx solid #1D1D1F !important;
  background: #FFFFFF !important;
  color: #1D1D1F !important;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  line-height: 1;
}

.bar-btn-cart::after {
  display: none;
}

.bar-btn-buy {
  flex: 1;
  height: 80rpx;
  border-radius: 28rpx;
  background: #1D1D1F !important;
  color: #FFFFFF !important;
  border: none !important;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  line-height: 1;
}

.bar-btn-buy::after {
  display: none;
}
