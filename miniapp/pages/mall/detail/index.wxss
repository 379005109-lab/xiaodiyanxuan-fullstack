/**mall/detail/index.wxss**/
/* 商品详情页 - ZenLife 2.0 设计 */
page { background: #FDFBF7; color: #1f2937; }
.detail-page { min-height: 100vh; display: flex; flex-direction: column; }

/* 顶部导航栏 */
.detail-header { position: fixed; top: 0; left: 0; right: 0; z-index: 100; display: flex; align-items: center; justify-content: space-between; padding: 16rpx 24rpx; padding-top: calc(env(safe-area-inset-top) + 16rpx); background: transparent; }
.header-left, .header-btn { width: 80rpx; height: 80rpx; background: rgba(255,255,255,0.8); backdrop-filter: blur(20rpx); border-radius: 50%; display: flex; align-items: center; justify-content: center; }
.back-icon { font-size: 40rpx; color: #1f2937; }
.header-center { flex: 1; text-align: center; }
.header-title { font-size: 28rpx; font-weight: 600; color: rgba(31,41,55,0.8); }
.header-right { display: flex; gap: 16rpx; }
.header-icon { font-size: 36rpx; color: #1f2937; }
.header-icon.favorited { color: #ef4444; }

/* 主内容区 */
.detail-content { flex: 1; display: flex; flex-direction: column; padding-top: calc(env(safe-area-inset-top) + 100rpx); }
.product-hero { flex: 1; position: relative; display: flex; align-items: center; justify-content: center; min-height: 600rpx; }

/* 左侧尺寸按钮 */
.dimension-sidebar { position: absolute; left: 24rpx; top: 50%; transform: translateY(-50%); display: flex; flex-direction: column; gap: 16rpx; z-index: 20; }
.dim-btn { width: 100rpx; height: 100rpx; background: rgba(255,255,255,0.4); backdrop-filter: blur(20rpx); border-radius: 24rpx; display: flex; flex-direction: column; align-items: center; justify-content: center; border: 2rpx solid rgba(255,255,255,0.5); }
.dim-icon { font-size: 36rpx; color: #22c55e; margin-bottom: 4rpx; }
.dim-label { font-size: 20rpx; font-weight: 600; color: #6b7280; }
.specs-btn { background: rgba(255,255,255,0.8); }
.specs-label { font-size: 24rpx; font-weight: 600; color: #1f2937; }

/* 商品图片 */
.hero-swiper { width: 100%; height: 600rpx; }
.hero-img { width: 100%; height: 100%; }

/* 悬浮购物车 */
.float-cart { position: absolute; bottom: 48rpx; right: 24rpx; width: 100rpx; height: 100rpx; background: rgba(31,41,55,0.9); border-radius: 50%; display: flex; align-items: center; justify-content: center; z-index: 20; }
.float-cart-icon { font-size: 40rpx; }
.float-cart-badge { position: absolute; top: -8rpx; right: -8rpx; min-width: 36rpx; height: 36rpx; background: #ef4444; color: #fff; font-size: 20rpx; border-radius: 18rpx; display: flex; align-items: center; justify-content: center; border: 4rpx solid #fff; }

/* 底部白色卡片 */
.bottom-card { background: rgba(255,255,255,0.95); backdrop-filter: blur(40rpx); border-radius: 80rpx 80rpx 0 0; padding: 48rpx 32rpx; padding-bottom: calc(48rpx + env(safe-area-inset-bottom)); box-shadow: 0 -20rpx 60rpx rgba(0,0,0,0.1); border-top: 2rpx solid rgba(255,255,255,0.5); }

/* 颜色选择器 */
.color-picker { display: flex; align-items: center; gap: 24rpx; margin-bottom: 32rpx; }
.color-item { width: 72rpx; height: 72rpx; border-radius: 16rpx; border: 4rpx solid transparent; transition: all 0.3s; }
.color-item.active { border-color: #1f2937; transform: scale(1.1); box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.2); }
.color-more { width: 72rpx; height: 72rpx; border-radius: 16rpx; background: #f3f4f6; display: flex; align-items: center; justify-content: center; font-size: 32rpx; color: #9ca3af; }

/* 商品名称和数量 */
.product-title-row { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 16rpx; }
.product-name { font-size: 40rpx; font-weight: 700; color: #1f2937; flex: 1; line-height: 1.3; }
.quantity-stepper { display: flex; align-items: center; gap: 20rpx; background: #f3f4f6; border-radius: 999rpx; padding: 8rpx 20rpx; border: 2rpx solid #e5e7eb; }
.stepper-btn { width: 40rpx; height: 40rpx; display: flex; align-items: center; justify-content: center; font-size: 28rpx; color: #6b7280; }
.stepper-value { font-size: 28rpx; font-weight: 600; min-width: 48rpx; text-align: center; }

/* 已选配置 */
.selected-config { margin-bottom: 32rpx; }
.config-label { font-size: 24rpx; color: #9ca3af; margin-bottom: 8rpx; display: block; }
.config-value { display: inline-flex; align-items: center; gap: 12rpx; background: #f3f4f6; border: 2rpx solid #e5e7eb; padding: 16rpx 24rpx; border-radius: 20rpx; font-size: 28rpx; font-weight: 600; color: #374151; }
.config-arrow { color: #9ca3af; margin-left: 8rpx; }

/* 价格和加入购物车 */
.price-action-row { display: flex; justify-content: space-between; align-items: center; }
.price-info { display: flex; flex-direction: column; }
.price-value { font-size: 48rpx; font-weight: 700; color: #d97706; }
.price-label { font-size: 24rpx; color: #9ca3af; }
.add-cart-btn { display: flex; align-items: center; gap: 12rpx; padding: 24rpx 48rpx; background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%); color: #fff; font-size: 28rpx; font-weight: 600; border-radius: 40rpx; box-shadow: 0 12rpx 32rpx -8rpx rgba(52,211,153,0.5); }
.cart-icon { font-size: 32rpx; }

/* 弹窗遮罩 */
.sheet-mask { position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(15,23,42,0.3); backdrop-filter: blur(8rpx); z-index: 200; opacity: 0; pointer-events: none; transition: opacity 0.3s; }
.sheet-mask.show { opacity: 1; pointer-events: auto; }

/* 规格弹窗 */
.spec-sheet, .color-sheet { position: fixed; left: 0; right: 0; bottom: 0; background: #fff; border-radius: 80rpx 80rpx 0 0; padding: 32rpx; padding-bottom: calc(32rpx + env(safe-area-inset-bottom)); z-index: 201; transform: translateY(100%); transition: transform 0.3s; max-height: 80vh; display: flex; flex-direction: column; }
.spec-sheet.show, .color-sheet.show { transform: translateY(0); }
.sheet-handle { width: 80rpx; height: 8rpx; background: #e5e7eb; border-radius: 4rpx; margin: 0 auto 24rpx; }
.sheet-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 24rpx; }
.sheet-title { font-size: 36rpx; font-weight: 700; color: #1f2937; }
.sheet-close { width: 60rpx; height: 60rpx; background: #f3f4f6; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 28rpx; color: #6b7280; }

/* 规格列表 */
.spec-list { flex: 1; overflow-y: auto; margin-bottom: 24rpx; }
.spec-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 20rpx; }
.spec-card { background: #fff; border: 4rpx solid #e5e7eb; border-radius: 32rpx; padding: 16rpx; position: relative; }
.spec-card.active { border-color: #22c55e; background: rgba(34,197,94,0.05); }
.spec-card-img { width: 100%; aspect-ratio: 16/10; border-radius: 24rpx; background: #f3f4f6; margin-bottom: 12rpx; }
.spec-card-check { position: absolute; top: 24rpx; right: 24rpx; width: 40rpx; height: 40rpx; background: #22c55e; color: #fff; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 24rpx; }
.spec-card-name { font-size: 24rpx; font-weight: 600; color: #1f2937; margin-bottom: 4rpx; }
.spec-card-dims { font-size: 22rpx; color: #9ca3af; }

/* 颜色弹窗 */
.color-scroll { flex: 1; overflow-y: auto; margin-bottom: 24rpx; }
.material-group { margin-bottom: 32rpx; }
.material-group-title { display: flex; align-items: center; gap: 12rpx; font-size: 28rpx; font-weight: 600; color: #1f2937; margin-bottom: 20rpx; }
.material-indicator { width: 6rpx; height: 28rpx; background: #22c55e; border-radius: 3rpx; }
.color-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 20rpx; }
.color-option { display: flex; flex-direction: column; align-items: center; gap: 8rpx; }
.color-swatch { width: 96rpx; height: 96rpx; border-radius: 24rpx; border: 4rpx solid transparent; transition: all 0.3s; }
.color-option.active .color-swatch { border-color: #1f2937; transform: scale(1.05); box-shadow: 0 0 0 4rpx rgba(31,41,55,0.1); }
.color-name { font-size: 22rpx; color: #6b7280; }
.color-option.active .color-name { color: #1f2937; font-weight: 600; }

/* 确认按钮 */
.sheet-confirm { width: 100%; height: 96rpx; background: #1f2937; color: #fff; font-size: 32rpx; font-weight: 600; border-radius: 24rpx; display: flex; align-items: center; justify-content: center; }
