/* 商品列表页 — Apple 风格 */
page {
  background: #F5F5F7;
  color: #1D1D1F;
}

.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

/* ========== 搜索框 ========== */
.search-section {
  background: #FFFFFF;
  padding: 16rpx 32rpx;
  border-bottom: 1rpx solid #E5E5EA;
}

.search-box {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: #F5F5F7;
  border-radius: 24rpx;
  padding: 0 24rpx;
  height: 72rpx;
}

.search-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  font-size: 30rpx;
  color: #1D1D1F;
  background: transparent;
}

.search-tag {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: #FFFFFF;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #1D1D1F;
  white-space: nowrap;
}

.tag-close {
  font-size: 24rpx;
  color: #8E8E93;
}

/* ========== 筛选条 ========== */
.filter-bar {
  background: #FFFFFF;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #E5E5EA;
}

.filter-scroll {
  width: 100%;
  white-space: nowrap;
}

.filter-items {
  display: inline-flex;
  gap: 16rpx;
  padding: 0 32rpx;
}

.filter-chip {
  display: inline-flex;
  align-items: center;
  gap: 4rpx;
  padding: 12rpx 24rpx;
  background: #F5F5F7;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #1D1D1F;
  white-space: nowrap;
  border: 2rpx solid transparent;
}

.filter-chip.active {
  font-weight: 600;
  border-color: #C7C7CC;
}

.chip-arrow {
  font-size: 24rpx;
}

/* ========== 筛选面板 ========== */
.filter-panel {
  background: #FFFFFF;
  border-bottom: 1rpx solid #E5E5EA;
  padding: 24rpx 32rpx;
}

.filter-group {
  margin-bottom: 24rpx;
}

.filter-group-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1D1D1F;
  margin-bottom: 16rpx;
  display: block;
}

.filter-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.filter-tag {
  padding: 12rpx 28rpx;
  border: 2rpx solid #D2D2D7;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #1D1D1F;
  background: #FFFFFF;
}

.filter-tag.active {
  background: #F5F5F7;
  font-weight: 600;
  border-color: #C7C7CC;
}

.price-range-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.price-input {
  flex: 1;
  padding: 16rpx 24rpx;
  background: #F5F5F7;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1D1D1F;
  border: 2rpx solid #E5E5EA;
}

.price-sep {
  font-size: 26rpx;
  color: #8E8E93;
}

.filter-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 8rpx;
}

.filter-reset-btn {
  flex: 1;
  height: 80rpx;
  background: #F5F5F7 !important;
  color: #1D1D1F !important;
  border: 2rpx solid #E5E5EA !important;
  border-radius: 24rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.filter-apply-btn {
  flex: 1;
  height: 80rpx;
  background: #1D1D1F !important;
  color: #FFFFFF !important;
  border: none !important;
  border-radius: 24rpx;
  font-size: 30rpx;
  font-weight: 500;
}

/* ========== 商品滚动区 ========== */
.goods-scroll {
  flex: 1;
  margin-top: calc(88rpx + env(safe-area-inset-top) + 104rpx + 80rpx);
  padding: 24rpx 24rpx 0;
}

/* ========== 商品网格 ========== */
.goods-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.goods-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  border: 1rpx solid #E5E5EA;
}

.goods-card:active {
  opacity: 0.9;
}

.goods-img-wrap {
  position: relative;
  width: 100%;
  height: 360rpx;
  overflow: hidden;
}

.goods-img {
  width: 100%;
  height: 100%;
}

.goods-tag {
  position: absolute;
  top: 16rpx;
  padding: 4rpx 16rpx;
  background: rgba(110, 110, 115, 0.8);
  -webkit-backdrop-filter: blur(10rpx);
  backdrop-filter: blur(10rpx);
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #FFFFFF;
  font-weight: 500;
}

.goods-tag-left {
  left: 16rpx;
}

.goods-tag-right {
  right: 16rpx;
}

.goods-info {
  padding: 20rpx 24rpx;
}

.goods-model {
  font-size: 22rpx;
  color: #8E8E93;
  margin-bottom: 4rpx;
}

.goods-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1D1D1F;
  line-height: 1.4;
  min-height: 72rpx;
}

.goods-price-row {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  margin-top: 12rpx;
}

.goods-price {
  font-size: 36rpx;
  font-weight: 600;
  color: #1D1D1F;
}

.price-symbol {
  font-size: 22rpx;
}

.goods-original {
  font-size: 22rpx;
  color: #8E8E93;
  text-decoration: line-through;
}

.goods-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 8rpx;
}

.goods-sold {
  font-size: 22rpx;
  color: #8E8E93;
}

.goods-cart-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #1D1D1F;
  border-radius: 12rpx;
  font-size: 24rpx;
}

.goods-cart-btn:active {
  background: #000000;
}

/* ========== 状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx 0;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #8E8E93;
}

.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-text {
  font-size: 26rpx;
  color: #8E8E93;
}

.bottom-tip {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #8E8E93;
}

/* ========== 通用 ========== */
.text-ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
