/* 商品媒体页 — Apple 风格 */
page { background: #FFFFFF; color: #1D1D1F; }


.content { padding: 0 32rpx; }

.section { margin-top: 40rpx; }
.section-title { font-size: 34rpx; font-weight: 600; color: #1D1D1F; margin-bottom: 24rpx; }

.video-scroll { width: calc(100% + 64rpx); margin-left: -32rpx; white-space: nowrap; }
.video-list { display: inline-flex; gap: 16rpx; padding: 0 32rpx; }
.video-card { width: 320rpx; flex-shrink: 0; display: inline-block; }
.video-thumb { width: 320rpx; height: 240rpx; border-radius: 24rpx; background: #F5F5F7; }
.video-play-btn {
  position: absolute; top: 50%; left: 50%; transform: translate(-50%,-50%);
  width: 80rpx; height: 80rpx; background: rgba(255,255,255,0.9); border-radius: 50%;
  display: flex; align-items: center; justify-content: center; font-size: 32rpx;
}
.video-card { position: relative; }
.video-duration {
  position: absolute; bottom: 60rpx; right: 12rpx;
  background: rgba(0,0,0,0.6); color: #FFF; font-size: 20rpx;
  padding: 4rpx 12rpx; border-radius: 8rpx;
}
.video-title { font-size: 26rpx; color: #1D1D1F; margin-top: 12rpx; white-space: normal; }

.photo-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 12rpx; }
.photo-card { border-radius: 20rpx; overflow: hidden; aspect-ratio: 4/3; background: #F5F5F7; }
.photo-img { width: 100%; height: 100%; }
