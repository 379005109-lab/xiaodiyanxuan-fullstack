page { background: #FFFFFF; color: #1D1D1F; }
.content { padding: 24rpx 32rpx; }
.sub-grid { display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 20rpx; }
.sub-card { text-align: center; }
.sub-card:active { opacity: 0.8; }
.sub-img { width: 100%; aspect-ratio: 1; border-radius: 24rpx; background: #F5F5F7; }
.sub-name { font-size: 26rpx; color: #1D1D1F; margin-top: 12rpx; }
.empty-state { display: flex; align-items: center; justify-content: center; padding: 160rpx 0; }
.empty-text { font-size: 28rpx; color: #8E8E93; }
