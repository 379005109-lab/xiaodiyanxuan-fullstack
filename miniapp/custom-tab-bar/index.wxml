<view class="tabbar">
	<block wx:for="{{list}}" wx:key="pagePath">
		<view class="tab-item {{selected===index?'active':''}}" data-index="{{index}}" data-path="{{item.pagePath}}" bindtap="switchTab">
			<view class="tab-icon-wrap">
				<text class="tab-icon ri {{selected===index ? item.activeIcon : item.icon}}"></text>
				<view class="tab-badge" wx:if="{{item.badge > 0}}">{{item.badge > 99 ? '99+' : item.badge}}</view>
			</view>
			<text class="tab-label">{{item.text}}</text>
		</view>
	</block>
</view>
