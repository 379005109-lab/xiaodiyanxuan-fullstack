/**custom-tab-bar/index.wxss**/
/* ZenLife 2.0 浮动玻璃拟态导航栏 - Floating Dock */
/* 距离底部24px，左右24px边距，玻璃拟态材质 */

.tabbar { 
  position: fixed; 
  left: 48rpx; 
  right: 48rpx; 
  bottom: calc(48rpx + env(safe-area-inset-bottom)); 
  height: 120rpx; 
  background: rgba(255, 255, 255, 0.8); 
  backdrop-filter: blur(16px);
  -webkit-backdrop-filter: blur(16px);
  display: flex; 
  align-items: center;
  justify-content: space-around;
  border: 2rpx solid rgba(255, 255, 255, 0.5); 
  border-radius: 999rpx;
  z-index: 999; 
  box-shadow: 0 16rpx 48rpx -16rpx rgba(0, 0, 0, 0.1);
}

.item { 
  flex: 1; 
  display: flex; 
  flex-direction: column;
  align-items: center; 
  justify-content: center; 
  color: #6b7280; 
  gap: 4rpx;
  transition: all 0.3s ease;
}

/* 图标包裹 */
.icon-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
}
.icon {
  font-size: 44rpx;
  line-height: 1;
}

/* 文字 */
.text { 
  font-size: 20rpx; 
  line-height: 1;
  font-weight: 500;
  margin-top: 4rpx;
}

/* 选中态 - 渐变背景 + 发光阴影 */
.item.active { 
  color: #FFFFFF;
}
.item.active .icon-wrap {
  background: linear-gradient(135deg, #22d3ee 0%, #34d399 100%);
  box-shadow: 0 10rpx 30rpx -8rpx rgba(52, 211, 153, 0.6);
}
.item.active .icon {
  color: #FFFFFF;
}


